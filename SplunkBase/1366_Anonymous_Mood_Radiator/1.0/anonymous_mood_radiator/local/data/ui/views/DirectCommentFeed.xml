      | head 1
      | fields + your_mood timestamp comments project
    </param>
    <param name="earliest">-30d</param>
    
    <module name="HiddenPostProcess" layoutPanel="panel_row2_col1">
      <param name="search">
        table timestamp
      </param>
      
      <module name="SingleValue"></module>
    </module>
    
    <module name="HiddenPostProcess" layoutPanel="panel_row2_col1">
