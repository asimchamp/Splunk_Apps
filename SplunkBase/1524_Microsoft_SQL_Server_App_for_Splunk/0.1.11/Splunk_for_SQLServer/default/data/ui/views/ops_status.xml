<dashboard>

	<label>Operations Overview</label>
	
	<row>
		<chart>
			<title>SQL Instances</title>
			<searchName>Operations Overview - SQL Instances</searchName>
			<option name="charting.chart">pie</option>
			<option name="height">400px</option>
			<option name="drilldown">all</option>
			<drilldown>
				<link>/app/Splunk_for_SQLServer/ops_instancelist?form.Status=$click.value$</link>
			</drilldown>
		</chart>
		<chart>
			<title>SQL Databases</title>
			<searchName>Operations Overview - SQL Databases</searchName>
			<option name="charting.chart">pie</option>
			<option name="height">400px</option>
			<option name="drilldown">all</option>
			<drilldown>
				<link>/app/Splunk_for_SQLServer/ops_databaselist?form.Status=$click.value$</link>
			</drilldown>
		</chart>
		<table>
			<title>SQL Hosts with Errors</title>
			<searchName>Operations Overview - SQL Host Errors</searchName>
			<option name="showPager">true</option>
			<drilldown>
				<link>/app/Splunk_for_SQLServer/ops_instance?form.ServerInstance=$row.Instance$</link>
			</drilldown>
		</table>
	</row>

	<row>
		<table>
			<title>Busiest SQL Databases</title>
			<searchName>Operations Overview - Busiest SQL Databases</searchName>
			<option name="showPager">false</option>
			<drilldown>
				<link><![CDATA[/app/Splunk_for_SQLServer/ops_database?form.ServerInstance=$row.ServerInstance$&form.DatabaseName=$row.Name$]]></link>
			</drilldown>
		</table>
		<table>
			<title>Largest SQL Databases</title>
			<searchName>Operations Overview - Largest SQL Databases</searchName>
			<option name="showPager">false</option>
			<drilldown>
				<link><![CDATA[/app/Splunk_for_SQLServer/ops_database?form.ServerInstance=$row.ServerInstance$&form.DatabaseName=$row.Name$]]></link>
			</drilldown>
		</table>
	</row>
</dashboard>