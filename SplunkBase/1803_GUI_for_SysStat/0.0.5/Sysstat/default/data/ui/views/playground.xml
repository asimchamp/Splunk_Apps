<form>

  <label>Playground</label>
  <description>Here you can choose any performance parameters for a particular host. For example to investigate a host during OOM (Out of Memory) situation choose some of the following parameters: %system, kbmemfree, kbbuffers, majflt/s, pgscank/s, bread/s, %util, runq-sz, ldavg-1. To find suitable parameters check CPU/Network/System tabs above and read 'man sar'.</description>

  <row>
    <panel>
    <input type="time" searchWhenChanged="true">
      <default>
        <earliest>-30m</earliest>
        <latest>now</latest>
      </default>
    </input>

    <input type="dropdown" token="host1" searchWhenChanged="true">
      <label>Host</label>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <search >
        <query>| inputlookup hosts_from_sysstat</query>
      </search>
    </input>

    <input type="multiselect" token="param_token1" searchWhenChanged="true">
      <label>Param</label>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <valuePrefix>param="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <fieldForLabel>param</fieldForLabel>
      <fieldForValue>param</fieldForValue>
      <search >
        <query>| inputlookup params_from_sysstat</query>
      </search>
    </input>

      <chart id="single1">
        <search><query>sourcetype="sysstat" $host1$ $param_token1$ | timechart limit=15 avg(value) by param</query></search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">log</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
    <input type="time" searchWhenChanged="true">
      <default>
        <earliest>-30m</earliest>
        <latest>now</latest>
      </default>
    </input>

    <input type="dropdown" token="host2" searchWhenChanged="true">
      <label>Host</label>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <search >
        <query>| inputlookup hosts_from_sysstat</query>
      </search>
    </input>

    <input type="multiselect" token="param_token2" searchWhenChanged="true">
      <label>Param</label>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <valuePrefix>param="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <fieldForLabel>param</fieldForLabel>
      <fieldForValue>param</fieldForValue>
      <search >
        <query>| inputlookup params_from_sysstat</query>
      </search>
    </input>

      <chart id="single2">
        <search><query>sourcetype="sysstat" $host2$ $param_token2$ | timechart limit=15 avg(value) by param</query></search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">log</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>




</form>
