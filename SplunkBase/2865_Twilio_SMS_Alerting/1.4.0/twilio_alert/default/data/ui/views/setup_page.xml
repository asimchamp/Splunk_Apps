<dashboard version="1.1" script="setup_page.js" stylesheet="setup_page.css" hideEdit="true">

 <label>Setup</label>
    <row>
        <panel>
            <html>
               
              <form>

                <div class="global_fields">

                  <h2>Enter Global Settings</h2>

                  <label for="param_log_level">Log Level</label>
                  <p>All logs get written to <code>SPLUNK_HOME/var/log/splunk/twilioalert_app_modularalert.log</code> and are searchable in Splunk</p>
                  <select name="param_log_level" id="param_log_level"><option value="NOTSET">NOTSET</option><option value="DEBUG">DEBUG</option><option value="INFO">INFO</option><option value="WARNING">WARNING</option><option value="ERROR">ERROR</option><option value="CRITICAL">CRITICAL</option></select>

                  <label for="param_accountsid">Twilio Account SID</label>
                  <input autocomplete="off"  type="text" size="20" name="param_accountsid" id="param_accountsid"/>

                  <label for="param_authtoken">Twilio Auth Token</label>
                  <input autocomplete="off"  type="password" size="20" name="param_authtoken" id="param_authtoken"/>

                </div>

                   <hr/>

            
                <div class="ck_div_input_fields"></div>

                   <div id="ck_form_buttons">

                      <button type="button" id="ck_cancel_button"> Cancel </button> 
                      <button type="button" id="ck_submit_button"> Save </button>

                   </div>

                </form>


            </html>
        </panel>
    </row>
</dashboard>