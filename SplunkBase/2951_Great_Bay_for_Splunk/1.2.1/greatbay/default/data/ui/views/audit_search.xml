<form>
  <label>Audit search</label>
  <fieldset submitButton="true">
    <input type="time" token="time_range">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="text" token="user">
      <label>User</label>
      <default>*</default>
    </input>
    <input type="text" token="src_ip">
      <label>IP</label>
      <default>*</default>
    </input>
    <input type="text" token="mac">
      <label>MAC</label>
      <default>*</default>
    </input>
    <input type="text" token="name">
      <label>Name</label>
      <default>*</default>
    </input>
    <input type="multiselect" token="mode">
      <label>Mode</label>
      <choice value="read">Read</choice>
      <choice value="write">Write</choice>
      <choice value="execute">Execute</choice>
      <default>read,write,execute</default>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <valuePrefix>mode="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>`greatbay_index` sourcetype=greatbay:audit user=$user$ src_ip=$src_ip$  $mode$ |  rex  field=object_attrs  "\((?&lt;json_field&gt;{[^}]+})" | spath input=json_field | eval mac=mvdedup(mac) | search (mac=$mac$ OR NOT mac=*) (name=$name OR NOT name=*) | table _time user src_ip mode action mac name timeout object object_attrs</query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <option name="list.drilldown">full</option>
        <option name="list.wrap">1</option>
        <option name="maxLines">5</option>
        <option name="raw.drilldown">full</option>
        <option name="rowNumbers">false</option>
        <option name="table.drilldown">all</option>
        <option name="table.wrap">1</option>
        <option name="type">list</option>
        <option name="wrap">true</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">20</option>
      </table>
    </panel>
  </row>
</form>