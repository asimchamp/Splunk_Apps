<form>
  <label>AR Errors</label>
  <fieldset autoRun="true" submitButton="false">
    <input type="dropdown" token="host" searchWhenChanged="false">
      <label>Select a Host:</label>
      <default>*</default>
      <choice value="*">all hosts</choice>
      <populatingSearch earliest="$earliest$" latest="$latest$" fieldForLabel="host" fieldForValue="host">index=main | stats count by host</populatingSearch>
    </input>
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-7d@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  <row>
    <table>
      <title>AR Server Errors by Host</title>
      <searchString>sourcetype="remedy_arerror" host=$host$ | rex field=_raw "\d\s:\s(?&lt;ar_error&gt;.*)" | stats count by ar_error host |rename ar_error as "AR_Error" | table host AR_Error count | sort -count | rename count AS Count host AS Host AR_Error AS "AR Error"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="list.drilldown">full</option>
      <option name="list.wrap">1</option>
      <option name="maxLines">5</option>
      <option name="raw.drilldown">full</option>
      <option name="rowNumbers">false</option>
      <option name="table.drilldown">1</option>
      <option name="table.wrap">1</option>
      <option name="type">list</option>
      <option name="wrap">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="count">10</option>
    </table>
    <table>
      <title>API Errors by Host &amp; User</title>
      <searchString>sourcetype=remedy_api arerror_code=* host=$host$ | top arerror_message by host user limit=10| table arerror_message host user count | sort -count | rename count AS Count host AS Host user AS User arerror_message AS "AR Error Message"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table>
      <title>API Errors by Host - User - Transaction Type</title>
      <searchString>sourcetype="remedy_api" api_call=FAIL host=$host$ | stats count(api_call) AS "Error Count" by arerror_message host user queue transId | sort -"Error Count" limit=10 | rename arerror_message AS "AR Error Message" host AS Host user AS User queue AS Queue transId AS "Transaction ID"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">5</option>
    </table>
    <table>
      <title>API Errors Summary by Host</title>
      <searchString>sourcetype=remedy_api arerror_code=* host=$host$ | top arerror_message BY host limit=10 | sort -count | eval percent = round(percent,1) | rename count AS Count host AS Host arerror_message AS "AR Error Message" percent AS Percent</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="count">10</option>
    </table>
  </row>
</form>