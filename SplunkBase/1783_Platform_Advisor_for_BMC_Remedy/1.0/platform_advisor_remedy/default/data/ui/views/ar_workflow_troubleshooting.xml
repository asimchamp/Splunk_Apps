<form>
  <label>AR Workflow Troubleshooting</label>
  <description/>
  <fieldset autoRun="false" submitButton="false">
    <input type="dropdown" token="host" searchWhenChanged="true">
      <label>Select a Host:</label>
      <default>*</default>
      <choice value="*">all hosts</choice>
      <populatingSearch earliest="$earliest$" latest="$latest$" fieldForLabel="host" fieldForValue="host">index=main | stats count by host</populatingSearch>
    </input>
    <input type="dropdown" token="sourcetype" searchWhenChanged="true">
      <label>Select a Workflow Sourcetype:</label>
      <default>remedy_filter</default>
      <choice value="remedy_filter">Filter Logging</choice>
      <choice value="remedy_escalation">Escalation Logging</choice>
    </input>
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="searchterm" searchWhenChanged="true">
      <label>Search AR Workflow log:</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <event>
      <title>Troubleshoot AR Workflow</title>
      <searchString>sourcetype=$sourcetype$ host=$host$ $searchterm$</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="list.drilldown">full</option>
      <option name="list.wrap">1</option>
      <option name="maxLines">5</option>
      <option name="raw.drilldown">full</option>
      <option name="rowNumbers">0</option>
      <option name="table.drilldown">all</option>
      <option name="table.wrap">1</option>
      <option name="type">list</option>
      <option name="count">10</option>
      <fields>["host","source","sourcetype"]</fields>
    </event>
  </row>
</form>