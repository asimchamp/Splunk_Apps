 <form>
  <label>Server Performance by Host</label>
  <description/>
  <fieldset autoRun="true" submitButton="false">
    <input type="dropdown" token="host" searchWhenChanged="true">
      <label>Select a Host:</label>
      <default>*</default>
      <choice value="*">All</choice>
      <populatingSearch fieldForValue="host" fieldForLabel="host" earliest="-30d" latest="now">
        <![CDATA[index=main | stats count by host]]>
      </populatingSearch>
    </input>
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-7d@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
     </fieldset>
  <row>
    <chart>
      <title>AR Server Search Performance (GLEWF)</title>
      <searchString>sourcetype=remedy_api host=$host$ | transaction tid rpcId startswith="\*/+GLEWF" endswith="\*/\-GLEWF" unifyends=true| timechart avg(duration)</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="charting.axisTitleY.text">Search Duration</option>
      <option name="charting.axisTitleX.text">Time</option>
    </chart>
    <chart>
      <title>Top Forms searched</title>
      <searchString>sourcetype=remedy_api host=$host$ arform=* api_call=ARGetList* OR api_call=ARGetEntry| top limit=10 arform</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Server API Errors by Host</title>
      <searchString>sourcetype=remedy_api arerror_code=* host=$host$ | chart count sparkline(count, 1h) AS Trend by arerror_message | sort -count | rename count AS Count arerror_message AS "AR Error Message"</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <!-- Set sparkline options here; make sure that field matches field name of the search results -->
      <format type="sparkline" field="sparkline">
        <option name="lineColor">#5379af</option>
        <option name="fillColor">#CCDDFF</option>
        <option name="lineWidth">1</option>
        <option name="maxSpotColor">#A2FFA2</option>
        <option name="spotRadius">3</option>
        <option name="height">25px</option>
      </format>
    </table>
  </row>
</form>
