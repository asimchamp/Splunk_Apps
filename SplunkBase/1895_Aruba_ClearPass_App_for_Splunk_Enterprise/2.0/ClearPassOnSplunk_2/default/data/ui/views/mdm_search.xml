<form>
  <label>MDM Search</label>

  <description>
	MDM Details
  </description>

  <fieldset autoRun="True">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  <input type="text" token="ownership">
       <label>Ownership</label>
       <default>*</default>
  </input>
  <input type="text" token="owner">
       <label>Owner</label>
       <default>*</default>
  </input>
  <input type="text" token="imei">
       <label>IMEI</label>
       <default>*</default>
  </input>
  <input type="text" token="phone">
       <label>Phone Number</label>
       <default>*</default>
  </input>
  <input type="text" token="udid">
       <label>UDID</label>
       <default>*</default>
  </input>
  <input type="text" token="model">
       <label>Model</label>
       <default>*</default>
  </input>
  <input type="text" token="mfg">
       <label>Manufacturer</label>
       <default>*</default>
  </input>
                 

  </fieldset>


  <row>
    <single>
      <searchString>sourcetype=Aruba:CPPM:MDM  status=known Owner=$owner$ Ownership=$ownership$ Phone_Number=$phone$ Model=$model$ Manufacturer=$mfg$ UDID=$udid$ IMEI=$imei$ |dedup macAddress  |stats count </searchString>
      <option name="underLabel">Total Records</option>
    </single>
  </row>

  <row>
    <table>
      <title>Selected MDM Records</title>
      <searchString>sourcetype=Aruba:CPPM:MDM  status=known Owner=$owner$ Ownership=$ownership$ Phone_Number=$phone$ Model=$model$ Manufacturer=$mfg$ UDID=$udid$ IMEI=$imei$ |dedup macAddress </searchString>
    </table>
  </row>

</form>
