<form>
  <fieldset autoRun="True">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>0</earliestTime>
        <latestTime>now</latestTime>
      </default>
      <label>検索期間</label>
    </input>
    <input type="text" token="input_pc">
      <label>PC名(前方一致:pc*)</label>
      <default>*</default>
      <prefix>pc_name=</prefix>
    </input>
    <input type="text" token="input_account">
      <label>アカウント(前方一致:user*)</label>
      <default>*</default>
      <prefix>user_account=</prefix>
    </input>
  </fieldset>
  <label>持ち出し検索</label>
  <description/>
  <row>
    <panel>
      <chart>
        <title>時間帯別USB使用回数の割合</title>
        <searchString>index=smllog sourcetype=smllog_2 $input_pc$ $input_account$
            | eval hour=substr(log_time, 0, 2) 
            | stats count by hour | sort by hour
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>USB持ち出し・持ち込みファイル数の割合</title>
        <searchString>index=smllog sourcetype=smllog_0 $input_pc$ $input_account$
          	| eval type=if(file_subtype=="takeout", "持ち出し", "持ち込み") | stats count by type
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.seriesColors">[0xF3B411,0xEB493B]</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>USB持ち出しファイル一覧</title>
        <searchString>index=smllog sourcetype=smllog_0 file_subtype=takeout $input_pc$ $input_account$
            | table pc_name, user_account, log_date, log_time, operate, file0, file1
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>印刷ファイル一覧</title>
        <searchString>index=smllog sourcetype=smllog_6 $input_pc$ $input_account$ doc_name!=""
            | table pc_name, user_account, log_date, log_time, doc_name
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>社外送信メールの添付ファイル一覧</title>
        <searchString>index=smllog sourcetype=smllog_400 $input_pc$ $input_account$ inout_category=outside mail_attach!=""
            | eval mail_attach=split(mail_attach, "/") | eval to_mail=split(to_mail, "/")
            | table pc_name, user_account, log_date, log_time, subject, mail_attach, from_mail, to_mail
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>  
  <row>
    <panel>
      <table>
        <title>FTP転送ファイル一覧</title>
        <searchString>index=smllog sourcetype=smllog_600 $input_pc$ $input_account$ operate=STOR uploaded!=""
            | eval uploaded_mv=split(uploaded, "/")
            | table pc_name, user_account, log_date, log_time, to_ip, uploaded_mv
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">20</option>
      </table>
    </panel>
  </row>  
</form>
