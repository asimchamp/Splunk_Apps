<form script="import.js">
  <fieldset autoRun="True">
    <!--
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>0</earliestTime>
        <latestTime>now</latestTime>
      </default>
      <label>インポート期間</label>
    </input>
    <input type="text" token="input_pc">
      <label>PC名</label>
      <default></default>
    </input>
    -->
    <input type="text" token="input_year">
      <label>年</label>
      <default>2014</default>
    </input>
    <input type="text" token="input_account">
      <label>アカウント</label>
      <default></default>
    </input>
  </fieldset>
  <label>インポート</label>
  <searchTemplate>| stats count as value</searchTemplate>
  <row>
    <single>
      <title>検索時間</title>
      <searchPostProcess>eval value=0</searchPostProcess>
      <option name="afterLabel">秒</option>
    </single>
    <single>
      <title>検索条件に一致したZIPファイルの数</title>
      <searchPostProcess>eval value=0</searchPostProcess>
      <option name="afterLabel">ファイル</option>
    </single>
    <single>
      <title>検索条件に一致したログファイルの数</title>
      <searchPostProcess>eval value=0</searchPostProcess>
      <option name="afterLabel">ファイル</option>
    </single>
    <single>
      <title>ログファイルの平文サイズの合計</title>
      <searchPostProcess>eval value=0</searchPostProcess>
      <option name="afterLabel">KB</option>
    </single>
  </row>
  <row>
    <panel>
      <table>
        <title>検索条件に一致したログファイルの一覧</title>
        <searchString>| hitlist data=""</searchString>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">30</option>
      </table>
    </panel>
  </row>
</form>
