<form script="mail_send_outside.js" stylesheet="mail_send_outside.css">
  <fieldset autoRun="True">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>0</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  <label>メール社外送信</label>
  <row>
    <panel>
      <chart>
        <title>送信メールの種類</title>
        <searchString>index=smllog sourcetype = smllog_400
            | eval attach_category = if(isnotnull(mail_attach), "添付あり", "添付なし")            
            | eval inout_category_jp = if(inout_category="inside", "社内", "社外")            
            | eval mail_category=inout_category_jp . attach_category 
			| stats count by mail_category
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>情報漏えい危険度</title>
        <searchString>index=smllog sourcetype = smllog_400 inout_category=outside | stats count by leak_category
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <drilldown>
            <link>
            <![CDATA[
                /app/sml/leak_by_user?form.sourcetype=400%20inout_category%3Doutside&form.leak_category=$click.value$&earliest=$earliest$&latest=$latest$
            ]]>
            </link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>時間帯別送信者数</title>
        <searchString>index=smllog sourcetype = smllog_400 inout_category=outside
            | eval from_mail_lower=lower(from_mail) 
            | stats dc(from_mail_lower) AS 送信者数 by date_hour 
            | sort date_hour 
            | eventstats avg(送信者数) as average 
            | eval average=round(average,0)
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <map>
        <title>社外宛先ドメインのメールサーバの位置情報</title>
        <searchString>index=smllog sourcetype = smllog_400 inout_category=outside
            | eval out_domain_prop=split(out_domain_props, "/") 
            | mvexpand out_domain_prop
            | eval out_domain_prop_mv=split(out_domain_prop, "|") 
            | eval out_domain=mvindex(out_domain_prop_mv,0) . " (" . mvindex(out_domain_prop_mv,3) . ")"
            | eval out_ip=mvindex(out_domain_prop_mv,1) 
            | iplocation out_ip 
            | geostats globallimit=0 latfield=lat longfield=lon count by out_domain</searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.drilldown">all</option>
        <option name="mapping.map.center">(35.68333,139.7667)</option>
        <option name="mapping.map.zoom">6</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
      </map>
    </panel>
  </row>
  <row>
    <panel>
      <table id="to_domain_table">
        <title>社外宛先ドメイン一覧</title>
        <searchString>index=smllog sourcetype = smllog_400 inout_category=outside
            | eval out_domain_prop=split(out_domain_props, "/") 
            | mvexpand out_domain_prop
            | eval out_domain_prop_mv=split(out_domain_prop, "|") 
            | eval out_domain=mvindex(out_domain_prop_mv,0)
            | eval out_domain_ip=mvindex(out_domain_prop_mv,1) 
            | eval out_domain_type=mvindex(out_domain_prop_mv,2)
            | eval out_domain_company=mvindex(out_domain_prop_mv,3) 
            | top out_domain  out_domain_company out_domain_type out_domain_ip
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
        <html>
            <h2>メール件名キーワードTop100</h2>
            <div id="subject_kwds_search"
                 class="splunk-manager splunk-searchmanager "
                 data-require="splunkjs/mvc/searchmanager"
                 data-options='{
                        "app": "sml",
                        "preview": true,
                        "search": "index=smllog  sourcetype = smllog_400 inout_category=outside | eval kwds_subject=split(subject_keywords,\"/\") | top limit=100 kwds_subject | sort kwds_subject"
                    }'>
            </div>
            <div id="subject_kwds"
                 class="splunk-view"
                 data-require="app/sml/components/tagcloud/tagcloud"
                 data-options='{
                        "minFontSize": 14,
                        "maxFontSize": 55,
                        "managerid": "subject_kwds_search",
                        "valueField": "count",
                        "labelField": "kwds_subject"
                     }'>
            </div>
        </html>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>社外添付ファイルの種類</title>
        <searchString>index=smllog  sourcetype = smllog_400 inout_category=outside
            | rex field=mail_attach "(?&lt;attach_ext&gt;[^.]+)$" 
            | eval attach_ext=lower(attach_ext) 
            | top attach_ext
        </searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
        <html>
            <h2>社外添付ファイル名キーワードTop50</h2>
            <div id="attach_kwds_search"
                 class="splunk-manager splunk-searchmanager "
                 data-require="splunkjs/mvc/searchmanager"
                 data-options='{
                        "app": "sml",
                        "preview": true,
                        "search": "index=smllog sourcetype = smllog_400 inout_category=outside | eval kwds_attach=split(attach_keywords,\"/\") | top limit=50 kwds_attach | sort kwds_attach"
                    }'>
            </div>
            <div id="attach_kwds"
                 class="splunk-view"
                 data-require="app/sml/components/tagcloud/tagcloud"
                 data-options='{
                        "minFontSize": 14,
                        "maxFontSize": 55,
                        "managerid": "attach_kwds_search",
                        "valueField": "count",
                        "labelField": "kwds_attach"
                     }'>
            </div>
        </html>
    </panel>
  </row>
</form>
