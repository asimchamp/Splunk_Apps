<form stylesheet="app_crash.css" script="app_crash.js">
  <label>Application Crashes</label>
  <search id="global">
    <query>
    `xd_winevents_index` sourcetype="WinEventLog:Application" Type="Error" EventCode &gt;= 1000 EventCode &lt;= 1011 host="$server$" FarmName="$FarmName$"|
    stats count by _time host Faulting_app_name EventCode Exception_code Message
    </query>
  </search>
  <fieldset autoRun="true">
    <input type="dropdown" token="FarmName">
      <label>Farm:</label>
      <choice value="*">All Farms</choice>
      <search>
        <query>| inputlookup lookup_host_farm.csv</query>
      </search>
      <default>*</default>
      <fieldForLabel>FarmName</fieldForLabel>
      <fieldForValue>FarmName</fieldForValue>
    </input>
    <input type="time">
      <label>Time Range:</label>
      <default>Last 24 hours</default>
    </input>
    <input type="text" token="server">
      <label>Server:</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart id="chartApps">
        <title>Application Crash or Hang</title>
        <search base="global">
          <query>chart count by Faulting_app_name</query>
        </search>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table id="tblCrashReport">
        <search base="global">
          <query>sort - _time |
 eval Time = strftime(_time, "%Y-%m-%d %H:%M:%S") |
 table Time host Faulting_app_name EventCode Exception_code Message |
 rename host AS Server Faulting_app_name AS "Application" EventCode AS "Event Code" Exception_code AS "Exception Code"</query>
        </search>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>