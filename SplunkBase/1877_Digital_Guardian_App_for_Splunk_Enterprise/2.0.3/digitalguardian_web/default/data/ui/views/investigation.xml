<form script="summary_investigation.js, tagmanager.js" stylesheet="custom.css, tagmanager.css, dashboard.css">
  <label>Investigation Overview</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="text" token="wildcard" searchWhenChanged="true">
      <label>Wildcard Search</label>
      <default>*</default>
      <prefix>*</prefix>
      <suffix>*</suffix>
      <initialValue>*</initialValue>
    </input>
    <input type="radio" token="source" searchWhenChanged="true">
      <label>Source:</label>
      <choice value="`process_sourcetype`">Process</choice>
      <choice value="`alerts_sourcetype`">Advanced Threat</choice>
      <default>Process</default>
      <initialValue>"digitalguardian:process"</initialValue>
      <prefix>sourcetype=</prefix>
    </input>
    <input type="time" id="timerange" token="time" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-7d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table id="investigation">
        <search>
          <query>index=digitalguardian $source$ $filter$ $exclude$ | table _time,Application,Application_Directory,Computer_Name,User_Name,MD5_Hash,MD5_Checksum,DLL_SHA1_Hash, DLL_SHA256_Hash,Process_SHA1_Hash,Process_SHA256_Hash,Company_Name,Product_Name,Product_Version,Parent_Process | sort _time</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
      </table>
    </panel>
  </row>
</form>
