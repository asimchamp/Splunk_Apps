<form version="1.1" script="autodiscover.js" stylesheet="drilldownBkgd.css,css/common.css">
  <label>Device to Top Destinations Intersection Map</label>
  <search id="sankey_search">
    <query>
      <![CDATA[
                    `nvm_flowdata_index` dh!=Unknown 
                    | join udid [ | inputlookup unique_endpoints ] | fields + udid vsn dh | top 15 dh by vsn
                ]]>
    </query>
    <earliest>$time.earliest$</earliest>
    <latest>$time.latest$</latest>
  </search>
  <fieldset submitButton="false">
    <input type="time" token="time" searchWhenChanged="true">
      <label>Time:</label>
      <default>
        <earliest>-7d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel id="sankeysize">
      <html>
                <div id="sankey" class="splunk-view" data-require="app/CiscoNVM/components/sankey/sankey" data-options="{                             &quot;managerid&quot;: &quot;sankey_search&quot;,                             &quot;height&quot;: 800                          }">
                </div>
      </html>
    </panel>
  </row>
</form>
