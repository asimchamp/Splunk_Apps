<form>
  <label>Hosts by Sourcetype</label>
  <description>Lists the hosts and number of events for the selected sourcetype.</description>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-60m@m</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="dropdown" token="sourcetype">
      <populatingSearch fieldForValue="sourcetype" fieldForLabel="sourcetype">| metadata type=sourcetypes index=* | fields sourcetype | sort sourcetype</populatingSearch>
    </input>
  </fieldset>
  <row>
    <table>
      <searchString>index=* sourcetype=$sourcetype$ | stats count by host | sort host</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">50</option>
    </table>
  </row>
</form>