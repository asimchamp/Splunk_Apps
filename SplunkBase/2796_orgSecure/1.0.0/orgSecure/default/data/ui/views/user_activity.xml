<form>
  <label>Monitor - User Activity</label>
  <fieldset submitButton="false">
    <input type="time" token="selector">
      <label>Select Time:</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="dropdown" token="user" searchWhenChanged="true">
      <label>Select User:</label>
      <search>
        <query>index="orgsecure" sourcetype="orgsecure:logon"  | table  user | dedup user</query>
      </search>
      <fieldForLabel>user</fieldForLabel>
      <fieldForValue>user</fieldForValue>
      <choice value="0">Select User</choice>
      <default>0</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Files Transferred to Removable Media</title>
        <search>
          <query>| pivot orgsecurefile orgsecurefile count(orgsecurefile) AS "Count of Files" SPLITROW _time AS _time PERIOD day SPLITROW src AS PC FILTER to_removable_media is True FILTER user is "$user$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Login / Logoff Count</title>
        <search>
          <query>| pivot orgsecurefile orgsecurelogon count(orgsecurelogon) AS "Count" SPLITROW _time AS "_time" PERIOD day SPLITROW action AS Action  FILTER user is "$user$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>PC Accessed</title>
        <search>
          <query>| pivot orgsecurefile orgsecurelogon count(orgsecurelogon) AS "Count" SPLITROW _time AS "_time" PERIOD day SPLITROW src AS PC FILTER user is "$user$"  SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Emails Sent/Received</title>
        <search>
          <query>| pivot orgsecurefile orgsecureemail count(orgsecureemail) AS "Count of Email" dc(attachments) AS "Count of Attachments" SPLITROW _time AS "_time" PERIOD day  FILTER user is "$user$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Websites Visited</title>
        <search>
          <query>| pivot orgsecurefile orgsecurehttp dc(url) AS "Count of Websites Visited" SPLITROW _time  AS "_time" PERIOD day SPLITROW src AS PC  FILTER user is "$user$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>