<view template="dashboard.html"  onunloadCancelJobs="True" autoCancelInterval="100">
  <label>F5 - SWG - URLs requested from Category- Report</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="navigationHeader">
    <param name="showActionsMenu">False</param>
  </module>

  <module name="SearchBar" layoutPanel="mainSearchControls">
    <param name="useAssistant">true</param>
    <param name="useTypeahead">true</param>
    <module name="TimeRangePicker">
      <param name="default">-24h</param>
      <module name="ViewRedirector">
        <param name="viewTarget">search</param>
      </module>
    </module>
  </module>

  <module name="TimeRangePicker" layoutPanel="panel_row2_col1" group="URLs requested from Category">
    <param name="searchWhenChanged">True</param>
    <param name="selected">Last 24 hours</param>

    <module name="MultiSelect" autoRun="False" layoutPanel="panel_row1_col1" group="Select category from list(you may use cntr/shift for multiple select).">
      <param name="selected">Edit</param>
      <param name="settingToCreate">category_name</param>
      <param name="search"><![CDATA[sourcetype="swg_log" |dedup url_category | sort url_category ]]></param>
      <param name="searchFieldsToDisplay">
	<list>
	  <param name="label">url_category</param>
	  <param name="value">url_category</param>
	</list>
      </param>
      <module name="ConvertToIntention">
	<param name="settingToConvert">category_name</param>
	<param name="intention">
	  <param name="name">stringreplace</param>
	  <param name="arg">
	    <param name="category_name">
	      <param name="fillOnEmpty">True</param>
	      <param name="value">$target$</param>
	    </param>
	  </param>
	</param>
	
	<module name="HiddenSearch" autoRun="False" layoutPanel="panel_row2_col1">
	  <param name="search"><![CDATA[sourcetype="swg_log" |  where url_category=split("$category_name$",",") | sort - _time | table _time, url_category, destination_url ]]></param>
	  <module name="SubmitButton">
	    <module name="JobProgressIndicator"/>
	    <param name="label">Search</param>
            <module name="Paginator" layoutPanel="panel_row2_col1">
              <param name="count">50</param>
	      <param name="entityName">results</param>
              <param name="maxPages">10</param>
	      <module name="SimpleResultsTable">
	      </module>
            </module>
	  </module>
	 
	</module>
      </module>
    </module>
    
  </module>
  
</view>

