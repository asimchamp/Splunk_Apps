<?xml version="1.0" encoding="UTF-8"?>
<view template="dashboard.html">
  <label>Rebuild Object ID Lookup Table</label>
  <module name="AccountBar" layoutPanel="appHeader" />
  <module name="AppBar" layoutPanel="navigationHeader" />
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="viewHeader">
    <param name="actionsMenuFilter">dashboard</param>
  </module>

  <module name="GenericHeader" layoutPanel="panel_row1_col1">
    <param name="label">Rebuild Object ID Lookup Table</param>
  </module>
  <module name="StaticContentSample" layoutPanel="panel_row1_col1">
    <param name="text">
        <![CDATA[
            <div class="warning">
                <img src="/static/app/SplunkForServerVirt/warning_icon.png" alt="Warning" style="float:left" /> <h3>**WARNING*** THIS OPERATION MAY TAKE A LONG TIME TO COMPLETE.</h3>
  
                This operation rebuilds the object ID lookup table.  Every object in a server virtualization environement has an ID and a type.
                Some views may not know which type of object it needs until runtime (the System Messages view is an example of this).
                The object ID lookup table contains all object IDs and types and is used as a helper for these types of view.
                
                <p>
                    By default, this lookup table is updated once per day automatically.
                    Check <a href="/manager/SplunkForXenServer/saved/searches">Saved Searches</a> for more information.
                </p>
            </div>
        ]]>
    </param>
  </module>
  <module name="TimeRangePicker" layoutPanel="panel_row1_col1">
    <param name="selected">Last 60 Minutes</param>
    <param name="searchWhenChanged">False</param>
    
    <module name="SubmitButton">
      <param name="label">Submit</param>
      
      <module name="HiddenSearch" autoRun="False" layoutPanel="panel_row2_col1">
        <param name="search">`updateObjectIDs`</param>
        
        <module name="JobProgressIndicator"></module>

        <module name="SimpleResultsTable">
          <param name="displayMenu">true</param>
          <param name="count">100</param>
          <param name="drilldown">none</param>
          <param name="entityName">results</param>
          <param name="displayRowNumbers">False</param>
        </module>
      </module>
      
    </module>
  </module>
</view>

