<form>
  <label>Chart Overlay</label>
  <fieldset submitButton="false"/>
  <row>
    <panel>
      <chart>
        <title>Chart Overlay w/ Single Axis</title>
        <searchString>index=sfpd | timechart span=1mon count | eventstats avg(count) as average | eval average=round(average,0)</searchString>
        <earliestTime>0</earliestTime>
        <latestTime>now</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.rangeValues">[]</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.legend.masterLegend">null</option>
        <option name="charting.seriesColors">[0x639BF1, 0xFF5A09]</option>
        <option name="height">250px</option>
        <option name="charting.chart.overlayFields">average</option>
      </chart>
      <html>
        <p>Chart Overlay Options:</p>
        <code style="white-space: pre-wrap;">
          <![CDATA[<option name="charting.chart.overlayFields">average</option>
]]>
        </code>
      </html>
    </panel>
    <panel>
      <input type="dropdown" token="s_category1" searchWhenChanged="true">
        <label>Compare a Single Category Against Total Incidents Trend</label>
        <populatingSearch fieldForLabel="Category" fieldForValue="Category">index=sfpd 
| stats count by Category
| sort asc Category</populatingSearch>
        <default>BURGLARY</default>
      </input>
      <chart>
        <title>Chart Overlay w/ Dual Axis</title>
        <searchString>index=sfpd | timechart count as "Total Incidents" count(eval(Category="$s_category1$")) as "$s_category1$"</searchString>
        <earliestTime>0</earliestTime>
        <latestTime>now</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.rangeValues">[]</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.legend.masterLegend">null</option>
        <option name="charting.seriesColors">[0x639BF1, 0xFF5A09]</option>
        <option name="height">250px</option>
        <option name="charting.chart.overlayFields">$s_category1|s$</option>
        <option name="charting.axisY2.enabled">true</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.axisY2.fields">$s_category1|s$</option>
      </chart>
      <html>
        <p>Chart Overlay Options:</p>
        <code style="white-space: pre-wrap;">
          <![CDATA[<option name="charting.chart.overlayFields">$$s_category1|s$$</option>
<option name="charting.axisY2.enabled">true</option>
<option name="charting.axisY2.scale">inherit</option>
<option name="charting.axisY2.fields">$$s_category1|s$$</option>
]]>
        </code>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <html>
        <h2>Chart Overlay</h2>
        <p>Plot disparate data on top of each other to visualize trends</p>
        <ul>
          <li>Choose one or more field series to overlay</li>
          <li>Optionally plot overlay series on the same axis, or dual axis</li>
        </ul>
      </html>
    </panel>
  </row>
</form>
