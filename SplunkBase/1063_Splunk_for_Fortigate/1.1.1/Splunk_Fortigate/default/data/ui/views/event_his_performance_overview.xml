<view template="dashboard.html" stylesheet="event_overview.css">
  <label>Performance Monitor Dashboard</label>
  <module name="AccountBar" layoutPanel="appHeader" />
  <module name="AppBar" layoutPanel="navigationHeader" />
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="viewHeader">
    <param name="actionsMenuFilter">dashboard</param>
  </module>
  <module name="GenericHeader" layoutPanel="panel_row1_col1">
    <param name="label">Performance Monitor Dashboard</param>
  </module>
  <module name="StaticContentSample" layoutPanel="panel_row1_col1">
    <param name="text">This dashboard provides visibility into the Performance in your Fortinet firewalls environment.</param>
  </module>

 	<module name="ExtendedFieldSearch" layoutPanel="panel_row2_col1_grp1">
            <param name="label">Device name:</param>
            <param name="field">device_name</param>
            <param name="replacementMap">
              <param name="arg">
                <param name="device_name">
                  <param name="value"></param>
                </param>
              </param>
            </param>
            <param name="intention">
              <param name="name">stringreplace</param>
              <param name="arg">
                <param name="device_name">
                  <param name="default"></param>
                  <param name="prefix">device_name="</param>
                  <param name="suffix">"</param>
                  <param name="fillOnEmpty">false</param>
                </param>
              </param>
            </param>

	<module name="ExtendedFieldSearch" layoutPanel="panel_row2_col1_grp2">
            <param name="label">VDom:</param>
            <param name="field">vdom</param>
            <param name="replacementMap">
              <param name="arg">
                <param name="vdom">
                  <param name="value"></param>
                </param>
              </param>
            </param>
            <param name="intention">
              <param name="name">stringreplace</param>
              <param name="arg">
                <param name="vdom">
                  <param name="default"></param>
                  <param name="prefix">vdom="</param>
                  <param name="suffix">"</param>
                  <param name="fillOnEmpty">false</param>
                </param>
              </param>
            </param>

              <module name="TimeRangePicker" layoutPanel="panel_row2_col1_grp1" autoRun="True">
                <param name="selected">Last 60 minutes</param>
                <param name="searchWhenChanged">True</param>
                <module name="HiddenSearch" layoutPanel="panel_row1_col1">
                  <param name="search">$vdom$ $device_name$ `Fortigate-Event-His-Performance-DataCube`</param>
                  <module name="JobProgressIndicator"></module>
                  <module name="ViewRedirectorLink">
                    <param name="viewTarget">flashtimeline</param>
                    <param name="label">View Full Report</param>
                  </module>

                  <module name="HiddenPostProcess" layoutPanel="panel_row4_col1">
                    <param name="search">`Fortigate-Event-His-Performance-DataCube-CPU`</param>
                    <module name="HiddenChartFormatter">
                      <param name="chartTitle">CPU usage over time by Fortigate device and VDom</param>
                      <param name="chart">line</param>
			<param name="charting.legend.nullValueMode">connect</param>
			<param name="charting.legend.showMarkers">true</param>
			<param name="chart.stackMode">unstacked</param>
                      <param name="legend.placement">bottom</param>
                      <module name="FlashChart">
                        <param name="width">100%</param>
                        <param name="height">250px</param>
                        <module name="ConvertToDrilldownSearch">
                          <module name="ViewRedirector">
                            <param name="viewTarget">flashtimeline</param>
                          </module>
                        </module>
                      </module>
                    </module>
                  </module>

		 <module name="HiddenPostProcess" layoutPanel="panel_row5_col1">
                    <param name="search">`Fortigate-Event-His-Performance-DataCube-Memory`</param>
                    <module name="HiddenChartFormatter">
                      <param name="chartTitle">Memory usage over time by Fortigate device and VDom</param>
                      <param name="chart">line</param>
			<param name="charting.legend.nullValueMode">connect</param>
			<param name="charting.legend.showMarkers">true</param>
			<param name="chart.stackMode">unstacked</param>
                      <param name="legend.placement">bottom</param>
                      <module name="FlashChart">
                        <param name="width">100%</param>
                        <param name="height">250px</param>
                        <module name="ConvertToDrilldownSearch">
                          <module name="ViewRedirector">
                            <param name="viewTarget">flashtimeline</param>
                          </module>
                        </module>
                      </module>
                    </module>
                  </module>

 		<module name="HiddenPostProcess" layoutPanel="panel_row6_col1">
                    <param name="search">`Fortigate-Event-His-Performance-DataCube-Sessions`</param>
                    <module name="HiddenChartFormatter">
                      <param name="chartTitle">Simultaneous sessions over time by Fortigate device and VDom</param>
                      <param name="chart">line</param>
			<param name="charting.legend.nullValueMode">connect</param>
			<param name="charting.legend.showMarkers">true</param>
                      <param name="chart.stackMode">unstacked</param>
                      <param name="legend.placement">bottom</param>
                      <module name="FlashChart">
                        <param name="width">100%</param>
                        <param name="height">250px</param>
                        <module name="ConvertToDrilldownSearch">
                          <module name="ViewRedirector">
                            <param name="viewTarget">flashtimeline</param>
                          </module>
                        </module>
                      </module>
                    </module>
                  </module>


                </module>
              </module>
            </module>
          </module>
</view>
