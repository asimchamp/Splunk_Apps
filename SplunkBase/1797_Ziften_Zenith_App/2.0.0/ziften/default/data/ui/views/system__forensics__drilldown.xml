<form script="autodiscover.js,table_row_highlighting.js,multi_select.js, multi_value_token.js" stylesheet="table_decorations.css">
  <label>System: Forensic Timeline</label>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="dropdown" token="guid" searchWhenChanged="true">
      <label>Select an endpoint:</label>
      <populatingSearch fieldForValue="agentguid" fieldForLabel="computername">
        <![CDATA[sourcetype=ziften:* |stats count by agentguid |join type=left agentguid [search earliest=-1y sourcetype=ziften:zenith:systeminventory |stats count by computername agentguid]|eval computername=if(isnull(computername),agentguid,computername)|table agentguid computername]]>
      </populatingSearch>
    </input>
  </fieldset>
  <row grouping="3">
    <html>
      <div id="multiSearch" class="splunk-manager" data-require="splunkjs/mvc/searchmanager" data-options="{                    &quot;search&quot;: {                        &quot;type&quot;: &quot;token_safe&quot;,                        &quot;value&quot;: &quot;sourcetype=ziften:* |stats count by message_type|rename message_type as basename&quot;},                   &quot;earliest_time&quot;: { &quot;type&quot;: &quot;token_safe&quot;, &quot;value&quot;: &quot;$$earliest$$&quot; },                   &quot;latest_time&quot;: { &quot;type&quot;: &quot;token_safe&quot;, &quot;value&quot;: &quot;$$latest$$&quot; },                   &quot;status_buckets&quot;: 0,                   &quot;cancelOnUnload&quot;: true,                   &quot;auto_cancel&quot;: 90,                   &quot;preview&quot;: true,                   &quot;tokens&quot;: true               }"/>
      <div id="multi_value_input"/>
    </html>
    <chart>
        <search><query>sourcetype=ziften:*  message_type=$multiTokenQuery$ agentguid="$guid$"| timechart count by message_type limit=40</query></search>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <table id="highlight">
        <search><query>sourcetype=ziften:* agentguid="$guid$" message_type=$multiTokenQuery$|append [search sourcetype=ziften:zenith:alert agentguid="$guid$"]| table _time message_type imagefilepath accountname imagefilemd5|sort _time</query></search>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="count">30</option>
    </table>
  </row>
</form>