<form>
  <label>Service Overview</label>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-7d@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>New Enterprise Services Over Time</title>
        <search>
          <query>sourcetype=ziften* message_type=services|stats min(_time) as day by name| eval "First Seen"=strftime(day,"%Y-%m-%d") |stats count as "New Services" by "First Seen"|tail 14 |sort "First Seen"</query>
          <earliest>0</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="count">10</option>
        <option name="displayRowNumbers">true</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">log</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Newest Enterprise Services</title>
        <search>
          <query>sourcetype=ziften*  message_type=services |stats min(_time) as "First Seen" dc(name) as "Current Prev" by name|convert ctime("First Seen")|sort -"First Seen"|fields "First Seen" name "Current Prev" |head 1000</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Systems With The Most Service Crashes &amp; Failures</title>
        <search>
          <query>sourcetype=ziften* message_type=eventlogrecord  eventidentifier=7034 OR eventidentifier=7000|stats count as "Crashes &amp; Failures" by agentguid| sort -"Crashes &amp; Failures"|lookup system_info agentguid|eval computername=if(isnull(computername), agentguid, computername)|fields computername "Crashes &amp; Failures"|head 50</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Service Crashes &amp; Failures Over Time</title>
        <search>
          <query>sourcetype=ziften* message_type=eventlogrecord eventidentifier=7034 OR eventidentifier=7000|timechart usenull=f count(eval(eventidentifier=7034)) as "Crash" count(eval(eventidentifier=7000)) as "Failure" by servicename</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">area</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="count">10</option>
        <option name="displayRowNumbers">true</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Service Crashes &amp; Failures</title>
        <search>
          <query>sourcetype=ziften* message_type=eventlogrecord eventidentifier=7034 OR eventidentifier=7000|chart count(eval(eventidentifier=7034)) as "Service Crashes" count(eval(eventidentifier=7000)) as "Service Failure" count as total by servicename|sort -total |fields servicename "Service Crashes" "Service Failure"|head 15</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.placement">right</option>
        <option name="count">10</option>
        <option name="displayRowNumbers">true</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisEnd</option>
      </chart>
    </panel>
    <panel>
      <table>
        <title>Systems With The Most Services Installed</title>
        <search>
          <query>sourcetype=ziften* message_type=services|stats dc(imagefilepath) as "Installed Services" by agentguid|sort -"Installed Services"|lookup system_info agentguid|eval computername=if(isnull(computername), agentguid, computername)|fields computername "Installed Services"|head 15</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>