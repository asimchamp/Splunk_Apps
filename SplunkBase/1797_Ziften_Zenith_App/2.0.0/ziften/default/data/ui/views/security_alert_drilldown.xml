<form stylesheet="inpage_drilldown_form.css" script="inpage_drilldown_form_security_alerts.js">
  <label>Alerts Drilldown</label>
  <description/>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-7d@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="text" token="agentguid" searchWhenChanged="true"/>
    <input type="text" token="computername" searchWhenChanged="true"/>
  </fieldset>
  <row>
    <chart>
      <title>Alerts Over Time</title>
      <search><query>sourcetype=ziften:zenith:alert|timechart dc(agentguid) by message_type</query></search>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">none</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table id="master">
      <title>Alerts By System</title>
      <search><query>sourcetype=ziften:zenith:alert
|lookup system_info agentguid|stats values(computername) as computername values(message_type) as "Alert Types"  dc(message_type) as "Alert Type Unique Count"  count as "Gross Alerts" min(_time) as "First Seen Alert" max(_time) as "Last Seen Alert" by agentguid|sort -"Last Seen Alert"|convert ctime("First Seen Alert") ctime("Last Seen Alert")|fields computername "Alert Types" "Alert Type Unique Count" "Gross Alerts" "First Seen Alert" "Last Seen Alert" agentguid |eval computername=if(isnull(computername), agentguid, computername)</query></search>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table id="detail">
      <title>Alerts for System $computername$</title>
      <search><query>sourcetype=ziften:zenith:alert agentguid=$agentguid$ |lookup image_info imagefilemd5 |lookup system_info agentguid|table _time agentguid message_type computername osname imagefilemd5 imagefilepath companyname productversion fileversion accountname origin ipaddress port message_type details score feed|makemv delim="," details     |fields _time message_type details imagefilemd5 imagefilepath companyname productversion fileversion accountname ipaddress port agentguid |sort -_time</query></search>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="wrap">false</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <drilldown target="My New Window">
        <link>
          <![CDATA[
         /app/ziften/system__forensics__drilldown?earliest=$row._time$&latest=$latest$&form.guid=$row.agentguid$
        ]]>
        </link>
      </drilldown>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table>
      <title>All Alerts</title>
      <search><query>sourcetype=ziften:zenith:alert     |lookup image_info imagefilemd5     |lookup system_info agentguid     |makemv delim="," details     |sort -_time     |table _time computername message_type details score osname imagefilemd5 imagefilepath companyname productversion fileversion accountname origin ipaddress port agentguid</query></search>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="list.drilldown">full</option>
      <option name="list.wrap">1</option>
      <option name="maxLines">5</option>
      <option name="raw.drilldown">full</option>
      <option name="rowNumbers">false</option>
      <option name="table.drilldown">1</option>
      <option name="table.wrap">1</option>
      <option name="type">list</option>
      <option name="wrap">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="count">10</option>
      <drilldown target="My New Window">
        <link>
          <![CDATA[
         /app/ziften/system__forensics__drilldown?earliest=$row._time$&latest=now&form.guid=$row.agentguid$
        ]]>
        </link>
      </drilldown>
    </table>
  </row>
</form>
