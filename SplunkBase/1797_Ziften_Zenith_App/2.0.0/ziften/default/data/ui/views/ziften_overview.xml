<form script="ziften_agent_popup.js" stylesheet="ziften_agent_popup.css">
  <label>Ziften Overview</label>
  <fieldset submitButton="false">
    <input type="time">
      <label>Time</label>
      <default>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>VirusTotal Alerts</title>
        <search>
          <query>sourcetype=ziften:zenith:alert feed="vt" | timechart  count AS Alerts  | trendline wma60(Alerts)</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
      </single>
      <single>
        <title>Vulnerability Alerts</title>
        <search>
          <query>sourcetype="ziften:alert:vulnerability" | timechart count AS Alerts | trendline wma60(Alerts)</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
      </single>
      <single>
        <title>New User Alerts</title>
        <search>
          <query>sourcetype=ziften:alert:newuser| timechart count AS Alerts | trendline wma60(Alerts)</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
      </single>
      <single>
        <title>Agents Seen</title>
        <search>
          <query>sourcetype = ziften:*  protobufname=AgentStatus |  timechart dc(agentguid) as Agents | trendline wma60(Agents)</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart id="popup_target">
        <title>Alerts Over Time</title>
        <search>
          <query>sourcetype=ziften:zenith:alert |timechart dc(agentguid) by message_type</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">45</option>
        <option name="charting.axisTitleX.text">TIme</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.text">Alerts</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Agent Reporting Volume</title>
        <search>
          <query>sourcetype=ziften:zenith:agentstatus| lookup system_info agentguid|eval computername=if(isnull(computername),agentguid,computername)|timechart count by computername</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">45</option>
        <option name="charting.axisTitleX.text">TIme</option>
        <option name="charting.chart">line</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>[All Time] Operating Systems</title>
        <search>
          <query>|inputlookup systems.csv|stats count by osname</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>[All Time] File Execution</title>
        <search>
          <query>|inputlookup image.csv|rename first_seen as _time|timechart count by OS|sort _time</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
</form>