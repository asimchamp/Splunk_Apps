<view autoCancelInterval="90" isVisible="true" objectMode="SimpleDashboard" onunloadCancelJobs="true" refresh="-1" template="dashboard.html">
  <label>SANS ISC/DShield status</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="Message" layoutPanel="navigationHeader">
    <param name="filter">splunk.search.job</param>
    <param name="clearOnJobDispatch">True</param>
    <param name="maxSize">1</param>
  </module>
  <module name="StaticContentSample" layoutPanel="panel_row1_col1">
    <param name="text">&lt;h1&gt;Welcome to the DShield for Splunk&amp;gt; application!&lt;/h1&gt;&lt;br&gt;</param>
  </module>
  <module name="HiddenSearch" layoutPanel="panel_row2_col1" group="INFOCON Threat Level" autoRun="True">
    <param name="search">| getinfocon | eval range=case(infocon == "green", 0, infocon == "yellow", 1, infocon == "orange", 2, infocon == "red", 3) | rangemap field=range low=0-0 elevated=1-2 severe=3-3</param>
    <param name="groupLabel">INFOCON Threat Level</param>
    <module name="ViewstateAdapter">
      <param name="suppressionList">
        <item>charting.seriesColors</item>
        <item>classField</item>
      </param>
      <module name="HiddenFieldPicker">
        <param name="strictMode">True</param>
        <module name="JobProgressIndicator">
          <module name="SingleValue">
            <param name="classField">range</param>
          </module>
        </module>
      </module>
    </module>
  </module>
  <module name="HiddenSearch" layoutPanel="panel_row2_col2" group="Current SANS ISC Handler on Duty" autoRun="True">
    <param name="search">| gethandler</param>
    <param name="groupLabel">Current SANS ISC Handler on Duty</param>
    <module name="ViewstateAdapter">
      <param name="suppressionList"/>
      <module name="HiddenFieldPicker">
        <param name="strictMode">True</param>
        <module name="JobProgressIndicator">
          <module name="SingleValue">
          </module>
        </module>
      </module>
    </module>
  </module>

  <module name="ServerSideInclude" group="Latest SANS ISC diaries" layoutPanel="panel_row3_col1">
  	<param name="src">diaries.html</param>
  </module>

  <module name="HiddenSearch" layoutPanel="panel_row2_col3" group="Last All Source IP update (DShield synchronization)" autoRun="True">
    <param name="search"><![CDATA[index=dshield sourcetype=dshield | head 1 | table _time]]></param>
    <param name="groupLabel">Last All Source IP update</param>
    <module name="ViewstateAdapter">
      <param name="suppressionList">
      	<item>charting.seriesColors</item>
      	<item>classField</item>
      </param>
      <module name="HiddenFieldPicker">
        <param name="strictMode">True</param>
        <module name="JobProgressIndicator">
          <module name="SingleValue">
          </module>
        </module>
      </module>
    </module>
  </module>

  <module name="HiddenSearch" layoutPanel="panel_row4_col1" group="My networks reported to DShield as attackers" autoRun="True">
    <param name="search">index=dshield eventtype=mynetwork | table _time SourceIP TargetPort Protocol Reports FirstSeen LastSeen</param>

    <module name="TimeRangePicker">
        <param name="default">Last 24 hours</param>
        <param name="searchWhenChanged">True</param>
    <module name="ViewstateAdapter">
      <module name="HiddenFieldPicker">
        <param name="strictMode">True</param>
        <module name="JobProgressIndicator"/>
        <module name="Paginator">
          <param name="count">10</param>
          <param name="entityName">results</param>
          <module name="EnablePreview">
            <param name="enable">True</param>
            <param name="display">False</param>
            <module name="SimpleResultsTable">
              <param name="count">10</param>
              <param name="drilldown">all</param>
              <param name="allowTransformedFieldSelect">True</param>
              <param name="displayRowNumbers">true</param>

                <module name="HiddenSearch">
                        <param name="search">index=dshield</param>
                                        <module name="ConvertToIntention">
                                                <param name="settingToConvert">click.value2</param>
                                                <param name="intention">
                                                        <param name="name">stringreplace</param>
                                                        <param name="arg">
                                                                <param name="toreplace">
                                                                        <param name="value">index=dshield $target$</param>
                                                                </param>
                                                        </param>
                                                </param>
                                                <module name="ViewRedirector">
                                                        <param name="viewTarget">flashtimeline</param>
                                                </module>
                                        </module>
                                </module>

            </module>
            <module name="ViewRedirectorLink">
              <param name="viewTarget">flashtimeline</param>
            </module>
          </module>
        </module>
      </module>
  </module></module></module>

  <module name="StaticContentSample" layoutPanel="panel_row5_col1">
    <param name="text">&lt;h1&gt;About DShield for Splunk&lt;/h1&gt;&lt;br&gt;
	The DShield for Splunk&amp;gt; application has been created by Bojan Zdrnja (&lt;a href="mailto://bojan.zdrnja@infigo.hr"&gt;bojan.zdrnja@infigo.hr&lt;/a&gt;), INFIGO IS d.o.o.
        INFIGO IS is a leading security company in Croatia. Our services include security assessments (penetration testing, vulnerability assessments), compliance consulting services (ISO 27001/PCIDSS) and security product integration and support, including (of course) Splunk.&lt;br&gt;Read more about INFIGO IS at &lt;a href="http://www.infigo.hr/en"&gt;http://www.infigo.hr/en&lt;/a&gt; or contact us at &lt;a href="mailto:info@infigo.hr"&gt;info@infigo.hr&lt;/a&gt;.</param>
  </module>
</view>
