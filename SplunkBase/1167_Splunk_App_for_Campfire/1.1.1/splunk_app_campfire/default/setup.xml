<setup>
  <block title="Campfire Integration" endpoint="campfire/campfire_api" entity="campfire_api">
    <text>Please enter your Campfire Subdomain, Authenitation Token, and Room Name (not Id!).</text>
    <input field="subdomain">
      <label>Subdomain</label>
      <type>text</type>
    </input>
    <input field="auth_token">
      <label>Authentication Token</label>
      <type>text</type>
    </input>
    <input field="room_name">
      <label>Room Name</label>
      <type>text</type>
    </input>
  </block>
</setup>
