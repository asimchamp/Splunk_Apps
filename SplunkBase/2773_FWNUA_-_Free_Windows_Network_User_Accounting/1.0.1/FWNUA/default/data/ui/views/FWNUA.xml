<form>
  <label>FWNUA Search</label>
  <!-- define master search template; leave time unbounded so that the time input can be used -->
  <fieldset>
    <input type="text" token="usrn">
      <label>Username, Computer Name, or IP</label>
      <default>*</default>
    </input>
    <!-- add default TimePicker -->
    <input type="time">
      <label>Date/Time</label>
      <default>
        <earliest>@d</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <table>
      <title>FWNUA Search Results (Most Recent Login)</title>
      <searchString>eventtype=FWNUA $usrn$ | stats count by Username Computer_Name IP_Address Logon_Domain Logon_Status _time |  dedup _time sortby -_time | top limit=1 showcount=false showperc=false _time Username IP_Address Computer_Name Logon_Domain Logon_Status</searchString>
      <param name="drilldown">cell</param>
    </table>
  </row>
  <row>
    <chart>
      <title>Number of Login Events</title>
      <searchString>eventtype=FWNUA $usrn$ | stats count</searchString>
      <option name="charting.chart">radialGauge</option>
      <option name="charting.chart.rangeValues">[0,10000,20000,30000]</option>
    </chart>
    <chart>
      <title>Top 20 Computers From Results</title>
      <searchString>eventtype=FWNUA $usrn$ | top limit=20 Computer_Name</searchString>
      <option name="charting.chart">pie</option>
    </chart>
  </row>
  <row>
    <table>
      <title>FWNUA Search Results (Full History)</title>
      <searchString>eventtype=FWNUA $usrn$ | stats count by Username Computer_Name IP_Address Logon_Domain Logon_Status</searchString>
      <option name="count">25</option>
    </table>
  </row>
</form>