<form>
  <label>PUA Scan Summary</label>
  <description>If you have the option "--detect-pua‚Äù" enabled for clamscan then Potentially Unwanted Applications data will get logged for this dashboard.</description>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Top PUA Types found</title>
        <search>
          <query>`clamav_index` category=PUA* | top category</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Top PUA files found</title>
        <search>
          <query>`clamav_index` category=PUA* | top infected_file</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>