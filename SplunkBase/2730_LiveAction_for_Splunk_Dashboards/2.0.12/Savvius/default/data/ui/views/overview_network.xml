<form stylesheet="savvius.css">
  <label>Network</label>
  <fieldset autorun="true" submitButton="false">
    <!-- Global timer. Not token is necessary -->
    <input type="time" searchWhenChanged="true">
      <label>Date &amp; Time</label>
      <default>
        <earliest>-1h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="source" searchWhenChanged="true">
      <label>Source</label>
      <default>*</default>
      <choice value="*">All</choice>
      <search>
        <query>sourcetype=sv_summaries | stats count by host</query>
        <earliest>$earliest$</earliest>
        <latest>$latest$</latest>
      </search>
      <fieldForValue>host</fieldForValue>
      <fieldForLabel>host</fieldForLabel>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <search>
          <query>sourcetype=sv_summaries host="$source$" Group="Network" Statistic="Average Utilization (bits/s)"
            | appendpipe [stats count as no_event | where no_event==0 | eval Bytes=0]
            | eval mbps=(Bytes/1000000)
            | stats avg(mbps) as avgmbps
            | fieldformat avgmbps=tostring(round(avgmbps,2), "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0.00</option>
        <option name="underLabel">Average Network Utilization (Mbps)</option>
      </single>
      <single>
        <search>
          <query>sourcetype=sv_summaries host="$source$" Group="Network" Statistic="Average Utilization (bits/s)"
            | appendpipe [stats count as no_event | where no_event==0 | eval Bytes=0]
            | eval mbps=(Bytes/1000000)
            | stats max(mbps) as maxmbps
            | fieldformat maxmbps=tostring(round(maxmbps,2), "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0.00</option>
        <option name="underLabel">Max Average Network Utilization (Mbps)</option>
      </single>
      <single>
        <search>
          <query>sourcetype=sv_event_counts host="$source$"
            | stats sum(Events) as totalEvents
            | fieldformat totalEvents=tostring(totalEvents, "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="underLabel">Expert Events</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
                    events_expert_events?earliest=$earliest$&latest=$latest$&form.source=$source$
                ]]>
          </link>
        </drilldown>        
      </single>
      <single>
        <search>
          <query>sourcetype=sv_apps host="$source$"
            | stats dc(Name) as appcount
            | fieldformat appcount=tostring(appcount, "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="underLabel">Applications</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
                    statistics_applications?earliest=$earliest$&latest=$latest$&form.source=$source$
                ]]>
          </link>
        </drilldown>        
      </single>
      <single>
        <search>
          <query>sourcetype=sv_flows host="$source$"
            | eval flow_fields='Client Addr' + ":" + 'Client Port' + " -&gt; " + 'Server Addr' + ":" + 'Server Port' + " (" + 'Protocol' + ")"
            | stats dc(flow_fields) as flowcount
            | fieldformat flowcount=tostring(flowcount, "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="underLabel">Flows</option>
        <option name="field">count</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
                    statistics_flows?earliest=$earliest$&latest=$latest$&form.source=$source$
                ]]>
          </link>
        </drilldown>        
      </single>
      <single>
        <search>
          <query>sourcetype=sv_protocols host="$source$"
            | stats dc(Name) as protocolcount
            | fieldformat protocolcount=tostring(protocolcount, "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="underLabel">Protocols</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
                    statistics_protocols?earliest=$earliest$&latest=$latest$&form.source=$source$
                ]]>
          </link>
        </drilldown>        
      </single>
      <single>
        <search>
          <query>sourcetype=sv_nodes host="$source$"
            | stats dc(Address) as nodecount
            | fieldformat nodecount=tostring(nodecount, "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="underLabel">Nodes</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
                    statistics_nodes?earliest=$earliest$&latest=$latest$&form.source=$source$
                ]]>
          </link>
        </drilldown>        
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Average Network Utilization</title>
        <search>
          <query>sourcetype=sv_summaries host="$source$" Group="Network" Statistic="Average Utilization (bits/s)"
            | eval mbps=(Bytes/1000000)
            | timechart avg(mbps) as Mbps
            | fieldformat Mbps=round(Mbps, 2)</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="height">200px</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Packet Size Distribution (Bytes)</title>
        <search>
          <query>sourcetype=sv_summaries host="$source$" Group="Size Distribution"
            | chart sum("Packets") as "Total Packets" by Statistic
            | rename Statistic as "Packet Size (Bytes)"</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">200px</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Total Expert Events</title>
        <search>
          <query>sourcetype=sv_event_counts host="$source$"
            | chart sum(Events) as "Total Count" by Severity</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">200px</option>
        <drilldown>
          <link>
            <![CDATA[
                events_expert_events?earliest=$earliest$&latest=$latest$&form.source=$source$&form.severity=$click.value$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Top Applications (Total Bytes)</title>
        <search>
          <query>sourcetype=sv_apps host="$source$"
            | chart sum("Bytes") as "Total Bytes" by Name
            | rename Name as Application
            | sort -"Total Bytes"
            | head 10</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">200px</option>
        <drilldown>
          <link>
            <![CDATA[
                statistics_applications?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$click.value$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Flows (Total Bytes)</title>
        <search>
          <query>sourcetype=sv_flows host="$source$"
            | eval "Flow"='Client Addr' + ":" + 'Client Port' + " -&gt; " + 'Server Addr' + ":" + 'Server Port' + " (" + 'Protocol' + ")"
            | chart sum(Bytes) as "Total Bytes" by "Flow"
            | sort -"Total Bytes" | head 10</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">200px</option>
        <drilldown>
          <link>
            <![CDATA[
                statistics_flows?earliest=$earliest$&latest=$latest$&form.source=$source$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Protocols (Total Bytes)</title>
        <search>
          <query>sourcetype=sv_protocols host="$source$"
            | chart sum("Bytes") as "Total Bytes" by Name
            | rename Name as Protocol
            | sort -"Total Bytes"
            | head 10</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">200px</option>
        <drilldown>
          <link>
            <![CDATA[
                statistics_protocols?earliest=$earliest$&latest=$latest$&form.source=$source$&form.protocol=$click.value$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Nodes (Total Bytes)</title>
        <search>
          <query>sourcetype=sv_nodes host="$source$"
            | eval tbytes='Bytes Received' + 'Bytes Sent'
            | chart sum(tbytes) as "Total Bytes" by Address
            | rename Address as Node
            | sort -"Total Bytes" | head 10</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">200px</option>
        <drilldown>
          <link>
            <![CDATA[
                statistics_nodes?earliest=$earliest$&latest=$latest$&form.source=$source$&form.address=$click.value$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Average Application Response Time</title>
        <search>
          <query>sourcetype=sv_appresponse host="$source$"
            | regex "Avg Response Time"="[0-9\.:]+"
            | rex field="Avg Response Time" "((?&lt;hour&gt;[0-9]{2}){1}:(?&lt;minute&gt;[0-9]{2}){1}:){0,1}(?&lt;second&gt;[0-9]{1,2}){1}\.(?&lt;microsecond&gt;[0-9]{6}){1}"
            | fillnull value=0 hour minute second microsecond
            | eval art=if(isnull('Avg Response Time'),null,(hour*3600)+(minute*60)+second+(microsecond/1000000))
            | timechart avg(art) as "Average Response Time"
            | fieldformat "Average Response Time"=round('Average Response Time', 2)</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.axisTitleY.text">Seconds</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <drilldown>
          <link>
            <![CDATA[
                latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
