          <query>sourcetype=sv_appresponse host="$source$"
            | regex "Worst Response Time"="[0-9\.:]+"
            | rex field="Worst Response Time" "((?&lt;hour&gt;[0-9]{2}){1}:(?&lt;minute&gt;[0-9]{2}){1}:){0,1}(?&lt;second&gt;[0-9]{1,2}){1}\.(?&lt;microsecond&gt;[0-9]{6}){1}"
