  <row>
    <panel>
      <table id="table1">
        <title>Flow List</title>
        <search>
          <query>sourcetype=sv_flows host="$source$" "Client Addr"="$address$" OR "Server Addr"="$address$" Protocol="$protocol$"
            | eval "Flow"='Client Addr' + ":" + 'Client Port' + " -&gt; " + 'Server Addr' + ":" + 'Server Port' + " (" + 'Protocol' + ")"
            | eventstats sum(Bytes) as totalBytes
            | eventstats sum(Packets) as totalPackets
            | eventstats sum(Bytes) as flowBytes by "Flow"
            | eventstats sum(Packets) as flowPackets by "Flow"
            | eval percentBytes=round((flowBytes/totalBytes)*100, 2)
            | eval percentBytes=percentBytes + "%"
            | eval percentPackets=round((flowPackets/totalPackets)*100, 2)
            | eval percentPackets=percentPackets + "%"
            | eval Megabits=(Bytes/125000)
            | rex field="Avg Response Time" "((?&lt;arthour&gt;[0-9]{2}){1}:(?&lt;artminute&gt;[0-9]{2}){1}:){0,1}(?&lt;artsecond&gt;[0-9]{1,2}){1}\.(?&lt;artmicrosecond&gt;[0-9]{6}){1}"
            | rex field="Worst Response Time" "((?&lt;wrthour&gt;[0-9]{2}){1}:(?&lt;wrtminute&gt;[0-9]{2}){1}:){0,1}(?&lt;wrtsecond&gt;[0-9]{1,2}){1}\.(?&lt;wrtmicrosecond&gt;[0-9]{6}){1}"
            | fillnull value=0 arthour artminute artsecond artmicrosecond wrthour wrtminute wrtsecond wrtmicrosecond
            | eval art=if(isnull('Avg Response Time') AND (arthour==0) AND (artminute==0) AND (artsecond==0) AND (artmicrosecond==0),null,(arthour*3600)+(artminute*60)+artsecond+(artmicrosecond/1000000))
            | eval wrt=if(isnull('Worst Response Time') AND (wrthour==0) AND (wrtminute==0) AND (wrtsecond==0) AND (wrtmicrosecond==0),null,(wrthour*3600)+(wrtminute*60)+wrtsecond+(wrtmicrosecond/1000000))
            | stats sparkline(avg(Megabits)) as "Average Network Utilization (Mb)" sum(Bytes) as Bytes values(percentBytes) as "Bytes %" sum(Packets) as Packets values(percentPackets) as "Packets %" sparkline(sum(Events)) as "Event Trend" sum(Events) as Events sum(Hops) as Hops avg(art) as "Average Response Time (Seconds)" max(wrt) as "Worst Response Time (Seconds)" by "Client Addr" "Client Port" "Server Addr" "Server Port" "Protocol"
            | fieldformat Bytes=tostring(Bytes, "commas")
            | fieldformat Packets=tostring(Packets, "commas")
            | fieldformat Events=tostring(Events, "commas")
            | fieldformat Hops=tostring(Hops, "commas")
            | fieldformat "Average Response Time (Seconds)"=round('Average Response Time (Seconds)', 2)
            | fieldformat "Worst Response Time (Seconds)"=round('Worst Response Time (Seconds)', 2)
            | rename "Client Addr" as "Client Address"
            | rename "Server Addr" as "Server Address"
            | sort - Bytes</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
        <drilldown>
          <condition field="Client Address">
            <link>
              <![CDATA[
                        statistics_nodes?earliest=$earliest$&latest=$latest$&form.source=$source$&form.address=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Server Address">
            <link>
              <![CDATA[
                        statistics_nodes?earliest=$earliest$&latest=$latest$&form.source=$source$&form.address=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Protocol">
            <link>
              <![CDATA[
                        statistics_protocols?earliest=$earliest$&latest=$latest$&form.source=$source$&form.protocol=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Average Network Utilization (Mb)">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Bytes">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Bytes %">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Packets">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Packets %">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Event Trend">
            <set token="event_srcip">$row.Client Address$</set>
            <set token="event_srcport">$row.Client Port$</set>
            <set token="event_destip">$row.Server Address$</set>
            <set token="event_destport">$row.Server Port$</set>
          </condition>
          <condition field="Events">
            <set token="event_srcip">$row.Client Address$</set>
            <set token="event_srcport">$row.Client Port$</set>
            <set token="event_destip">$row.Server Address$</set>
            <set token="event_destport">$row.Server Port$</set>
          </condition>
          <condition field="Average Response Time (Seconds)">
            <link>
              <![CDATA[
                  latency_flow_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Worst Response Time (Seconds)">
            <link>
              <![CDATA[
                  latency_flow_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table id="table2" depends="$event_srcip$,$event_srcport$,$event_destip$,$event_destport$">
        <title>Expert Event List for $event_srcip$:$event_srcport$ &lt;-&gt; $event_destip$:$event_destport$</title>
        <search>
          <query>sourcetype=sv_events host="$source$"
            | where (('Source Addr'=="$event_srcip$") AND ('Source Port'==$event_srcport$) AND ('Dest Addr'=="$event_destip$") AND ('Dest Port'==$event_destport$)) OR (('Source Addr'=="$event_destip$") AND ('Source Port'==$event_destport$) AND ('Dest Addr'=="$event_srcip$") AND ('Dest Port'==$event_srcport$))
            | stats sparkline(count) as Count, count as "Total Count" by Event "Source Addr" "Source Port" "Dest Addr" "Dest Port" Layer Severity
            | rename Event as "Expert Event"
            | rename "Source Addr" as "Source Address"
            | rename "Dest Addr" as "Destination Address"
            | rename "Dest Port" as "Destination Port"
            | fieldformat "Total Count"=tostring('Total Count', "commas")
            | sort - "Total Count"</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
        <drilldown>
          <condition field="Source Address">
            <link>
              <![CDATA[
                        statistics_nodes?earliest=$earliest$&latest=$latest$&form.source=$source$&form.address=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Destination Address">
            <link>
              <![CDATA[
                        statistics_nodes?earliest=$earliest$&latest=$latest$&form.source=$source$&form.address=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Layer">
            <link>
              <![CDATA[
                        events_expert_events?earliest=$earliest$&latest=$latest$&form.source=$source$&form.filter=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Severity">
            <link>
              <![CDATA[
                        events_expert_events?earliest=$earliest$&latest=$latest$&form.source=$source$&form.severity=$click.value2$
                    ]]>
            </link>
          </condition>
          <condition field="Total Count">
            <link>
              <![CDATA[
                        events_expert_events?earliest=$earliest$&latest=$latest$&form.source=$source$
                    ]]>
            </link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
</form>