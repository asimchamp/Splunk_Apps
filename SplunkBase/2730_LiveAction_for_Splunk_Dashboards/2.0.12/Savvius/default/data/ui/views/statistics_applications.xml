<form script="savvius.js" stylesheet="statistics_applications.css">
  <label>Applications</label>
  <fieldset autorun="true" submitButton="false">
    <!-- Global timer. Not token is necessary -->
    <input type="time" searchWhenChanged="true">
      <label>Date &amp; Time</label>
      <default>
        <earliest>-1h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="source" searchWhenChanged="true">
      <label>Source</label>
      <default>*</default>
      <choice value="*">All</choice>
      <search>
        <query>sourcetype=sv_summaries | stats count by host</query>
        <earliest>$earliest$</earliest>
        <latest>$latest$</latest>
      </search>
      <fieldForValue>host</fieldForValue>
      <fieldForLabel>host</fieldForLabel>
    </input>
    <input type="text" token="application" searchWhenChanged="true">
      <label>Application</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <search>
          <query>sourcetype=sv_apps host="$source$" Name="$application$"
            | stats dc(Name) as appcount
            | fieldformat appcount=tostring(appcount, "commas")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="underLabel">Applications</option>
        <option name="field">count</option>
      </single>
      <single>
        <search>
          <query>sourcetype=sv_appresponse host="$source$" Name="$application$"
            | regex "Avg Response Time"="[0-9\.:]+"
            | appendpipe [stats count as no_event | where no_event==0 | eval "Avg Response Time"=-1]
            | rex field="Avg Response Time" "((?&lt;hour&gt;[0-9]{2}){1}:(?&lt;minute&gt;[0-9]{2}){1}:){0,1}(?&lt;second&gt;[0-9]{1,2}){1}\.(?&lt;microsecond&gt;[0-9]{6}){1}"
            | fillnull value=0 hour minute second microsecond
            | eval art=if('Avg Response Time'==-1,-1,(hour*3600)+(minute*60)+second+(microsecond/1000000))
            | stats avg(art) as avgart
            | eval avgart=if(avgart>=0,tostring(round(avgart,2), "commas"),"N/A")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0.00</option>
        <option name="underLabel">Average Response Time (Seconds)</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
					latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$application$
				]]>
          </link>
        </drilldown>
      </single>
      <single>
        <search>
          <query>sourcetype=sv_appresponse host="$source$" Name="$application$"
            | regex "Worst Response Time"="[0-9\.:]+"
            | appendpipe [stats count as no_event | where no_event==0 | eval "Worst Response Time"=-1]
            | rex field="Worst Response Time" "((?&lt;hour&gt;[0-9]{2}){1}:(?&lt;minute&gt;[0-9]{2}){1}:){0,1}(?&lt;second&gt;[0-9]{1,2}){1}\.(?&lt;microsecond&gt;[0-9]{6}){1}"
            | fillnull value=0 hour minute second microsecond
            | eval wrt=if('Worst Response Time'==-1,-1,(hour*3600)+(minute*60)+second+(microsecond/1000000))
            | stats max(wrt) as maxwrt
            | eval maxwrt=if(maxwrt>=0,tostring(round(maxwrt,2), "commas"),"N/A")</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="drilldown">all</option>
        <option name="numberPrecision">0.00</option>
        <option name="underLabel">Worst Response Time (Seconds)</option>
        <option name="linkFields">result, underlabel</option>
        <drilldown>
          <link>
            <![CDATA[
					latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$application$
				]]>
          </link>
        </drilldown>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Application Volume</title>
        <search>
          <query>sourcetype=sv_apps host="$source$" Name="$application$" | timechart dc(Name) as "Application Count"</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">area</option>
        <option name="charting.axisY2.enabled">undefined</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">none</option>
        <option name="height">250px</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Applications (Total Bytes)</title>
        <search>
          <query>sourcetype=sv_apps host="$source$" Name="$application$"
            | chart sum("Bytes") as "Total Bytes" by Name
            | rename Name as Application
            | sort -"Total Bytes"
            | head 10</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">250px</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Applications (Total Flows)</title>
        <search>
          <query>sourcetype=sv_appresponse host="$source$" Name="$application$"
            | chart sum("Flows") as "Total Flows" by Name
            | rename Name as Application
            | sort -"Total Flows"
            | head 10</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
        <option name="height">250px</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Top Application Utilization</title>
        <search>
          <query>sourcetype=sv_apps host="$source$" Name="$application$"
            | timechart sum("Bytes") by Name limit=10 useother=f</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisTitleY.text">Total Bytes</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="height">220px</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Average Application Response Time</title>
        <search>
          <query>sourcetype=sv_appresponse host="$source$" Name="$application$"
            | regex "Avg Response Time"="[0-9\.:]+"
            | rex field="Avg Response Time" "((?&lt;hour&gt;[0-9]{2}){1}:(?&lt;minute&gt;[0-9]{2}){1}:){0,1}(?&lt;second&gt;[0-9]{1,2}){1}\.(?&lt;microsecond&gt;[0-9]{6}){1}"
            | fillnull value=0 hour minute second microsecond
            | eval art=if(isnull('Avg Response Time'),null,(hour*3600)+(minute*60)+second+(microsecond/1000000))
            | timechart eval(round(avg(art),2)) by Name limit=10 useother=f</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisTitleY.text">Seconds</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="height">220px</option>
        <drilldown>
          <link>
            <![CDATA[
                latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$click.name2$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Worst Application Response Time</title>
        <search>
          <query>sourcetype=sv_appresponse host="$source$" Name="$application$"
            | regex "Worst Response Time"="[0-9\.:]+"
            | rex field="Worst Response Time" "((?&lt;hour&gt;[0-9]{2}){1}:(?&lt;minute&gt;[0-9]{2}){1}:){0,1}(?&lt;second&gt;[0-9]{1,2}){1}\.(?&lt;microsecond&gt;[0-9]{6}){1}"
            | fillnull value=0 hour minute second microsecond
            | eval wrt=if(isnull('Worst Response Time'),null,(hour*3600)+(minute*60)+second+(microsecond/1000000))
            | timechart eval(round(max(wrt),2)) by Name limit=10 useother=f</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisTitleY.text">Seconds</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="height">220px</option>
        <drilldown>
          <link>
            <![CDATA[
                latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$click.name2$
                    ]]>
          </link>
        </drilldown>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table id="table1">
        <title>Application List</title>
        <search>
          <query>sourcetype=sv_apps host="$source$" Name="$application$"
            | eventstats sum(Bytes) as totalBytes
            | eventstats sum(Packets) as totalPackets
            | eventstats sum(Bytes) as applicationBytes by Name
            | eventstats sum(Packets) as applicationPackets by Name
            | eval percentBytes=round((applicationBytes/totalBytes)*100, 2)
            | eval percentBytes=percentBytes + "%"
            | eval percentPackets=round((applicationPackets/totalPackets)*100, 2)
            | eval percentPackets=percentPackets + "%"
            | eval Megabits=(Bytes/125000)
            | stats sparkline(avg(Megabits)) as "Average Network Utilization (Mb)" sum(Bytes) as Bytes values(percentBytes) as "Bytes %" sum(Packets) as Packets values(percentPackets) as "Packets %" by Name
            | fieldformat Bytes=tostring(Bytes, "commas")
            | fieldformat Packets=tostring(Packets, "commas")
            | rename Name as Application
            | sort - Bytes</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
        <drilldown>
          <condition field="Average Network Utilization (Mb)">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Bytes">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Bytes %">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Packets">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
          <condition field="Packets %">
            <link>
              <![CDATA[
                  overview_network?earliest=$earliest$&latest=$latest$&form.source=$source$
                      ]]>
            </link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table id="table2">
        <title>Application Response Times</title>
        <search>
          <query>sourcetype=sv_appresponse host="$source$" Name="$application$" "Avg Response Time"="*" "Worst Response Time"="*"
            | rex field="Avg Response Time" "((?&lt;arthour&gt;[0-9]{2}){1}:(?&lt;artminute&gt;[0-9]{2}){1}:){0,1}(?&lt;artsecond&gt;[0-9]{1,2}){1}\.(?&lt;artmicrosecond&gt;[0-9]{6}){1}"
            | rex field="Worst Response Time" "((?&lt;wrthour&gt;[0-9]{2}){1}:(?&lt;wrtminute&gt;[0-9]{2}){1}:){0,1}(?&lt;wrtsecond&gt;[0-9]{1,2}){1}\.(?&lt;wrtmicrosecond&gt;[0-9]{6}){1}"
            | fillnull value=0 arthour artminute artsecond artmicrosecond wrthour wrtminute wrtsecond wrtmicrosecond
            | eval art=if(isnull('Avg Response Time') AND (arthour==0) AND (artminute==0) AND (artsecond==0) AND (artmicrosecond==0),null,(arthour*3600)+(artminute*60)+artsecond+(artmicrosecond/1000000))
            | eval wrt=if(isnull('Worst Response Time') AND (wrthour==0) AND (wrtminute==0) AND (wrtsecond==0) AND (wrtmicrosecond==0),null,(wrthour*3600)+(wrtminute*60)+wrtsecond+(wrtmicrosecond/1000000))
            | stats avg(art) as "Average Response Time (Seconds)" max(wrt) as "Worst Response Time (Seconds)" by Name
            | fieldformat "Average Response Time (Seconds)"=round('Average Response Time (Seconds)', 2)
            | fieldformat "Worst Response Time (Seconds)"=round('Worst Response Time (Seconds)', 2)
            | rename Name as Application
            | sort - "Worst Response Time (Seconds)"</query>
          <earliest>$earliest$</earliest>
          <latest>$latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
        <drilldown>
          <condition field="Average Response Time (Seconds)">
            <link>
              <![CDATA[
                  latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$click.value$
                      ]]>
            </link>
          </condition>
          <condition field="Worst Response Time (Seconds)">
            <link>
              <![CDATA[
                  latency_application_response_times?earliest=$earliest$&latest=$latest$&form.source=$source$&form.application=$click.value$
                      ]]>
            </link>
          </condition>
        </drilldown>
      </table>
    </panel>
  </row>
</form>