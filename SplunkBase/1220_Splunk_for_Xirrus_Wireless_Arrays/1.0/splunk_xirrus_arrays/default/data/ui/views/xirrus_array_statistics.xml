<?xml version='1.0' encoding='utf-8'?>
<form>
  <label>Xirrus Array Statistics</label>
  
  <fieldset autoRun="true"
submitButton="true">
    <input type="time" >
     
      <default>Last 24 hours</default>
    </input>
    

  </fieldset>

  <row>
    <chart>
      <searchTemplate>eventtype="station_event" | timechart count by log_level usenull=f</searchTemplate>
      <title>Array Event Severity Measurement</title>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </chart>
    <event>
      <searchTemplate>index=wireless NOT EAPOL-key NOT Station NOT "message repeated"</searchTemplate>
      <title>Recent Events on the Console</title>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
      <option name="softWrap">true</option>
    </event>
  </row>
  <row>
    <chart>
      <searchTemplate>index=wireless| timechart count</searchTemplate>
      <title>Array Activity (messages)</title>
      <option name="charting.chart">area</option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </chart>
  </row>
  <row>
    <chart>
      <searchTemplate>eventtype=station_event changed | timechart max(iap_current_transfer_rate)  | streamstats avg(max(iap_current_transfer_rate)) as avg</searchTemplate>
      <title>Current vs. Average Data Transfer Rate on Array</title>
      <option name="charting.chart">line</option>
    </chart>
    <chart>
      <searchTemplate>index=wireless rogue  rogue_ap_security="none" | top rogue_ap_ssid</searchTemplate>
      <title>Nearby Open Insecure Access Points</title>
      <latestTime>now</latestTime>
      <option name="charting.chart">pie</option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </chart>
  </row>
  <row>
    <chart>
      <searchTemplate>index=wireless station_iap_relationship="associated" | timechart dc(mac) by iap</searchTemplate>
      <title>Station Association by IAP</title>
      <latestTime>now</latestTime>
      <option name="charting.chart">column</option>
      <option name="charting.chart.stackMode">stacked100</option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </chart>
  </row>
  <row>
    <chart>
      <searchName>Activity by Machine Name</searchName>
      <title>Activity by Machine Name</title>
      <option name="charting.chart">column</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </chart>
  </row>
  <row>
    <table>
      <searchTemplate>index=wireless NOT EAPOL-KEY | stats dc(mac) as Count by mfg,type | sort -count</searchTemplate>
      <title>Device Inventory - Manufacturer Statistics</title>
      <latestTime>now</latestTime>
      <option name="count">20</option>
      <option name="dataOverlayMode">highlow</option>
      <option name="displayRowNumbers">true</option>
    </table>
    <table>
      <searchTemplate>index=wireless NOT EAPOL-KEY | stats dc(mac) as Count by class,type | sort -count</searchTemplate>
      <title>Device Inventory by Class and Type</title>
      <latestTime>now</latestTime>
      <option name="count">10</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="displayRowNumbers">false</option>
    </table>
  </row>
</form>