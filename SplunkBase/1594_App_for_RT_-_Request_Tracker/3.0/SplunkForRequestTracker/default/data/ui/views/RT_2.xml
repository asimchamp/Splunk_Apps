<form>
  <label>RT Reports</label>
  <fieldset autoRun="true" submitButton="true">
    <input type="time" searchWhenChanged="true">
      <label>Time Picker</label>
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="dropdown" token="Owner" searchWhenChanged="true">
      <label>Owner</label>
      <default>%</default>
      <!-- Define the default value -->
      <choice value="%">All</choice>
      <!-- Define the choices with a populating search -->
      <populatingSearch fieldForValue="Owner" fieldForLabel="Owner">index="*" sourcetype="rt" earliest=-15m@m | search Field="Status-real"  | dedup Owner| fields Owner</populatingSearch>
    </input>
    <input type="dropdown" token="Queue" searchWhenChanged="true">
      <label>Queue</label>
      <default>%</default>
      <!-- Define the default value -->
      <choice value="%">All</choice>
      <!-- Define the choices with a populating search -->
      <populatingSearch fieldForValue="Queue" fieldForLabel="Queue">index="*" sourcetype="rt" earliest=-15m@m | search Field="Status-real"  | dedup Queue| fields Queue</populatingSearch>
    </input>
  </fieldset>
  <row>
    <chart>
      <title>Opened Tickets</title>
      <searchString>index="*" sourcetype="rt" |   search  Field="Status-real" |eval Prop=if(like("$Owner$",""),"%","$Owner$") |  where like(Owner,Prop) | eval Client=if(like("$Queue$",""),"%","$Queue$") |  where like(Queue,Client) |  timechart span=10m partial=false dc(TicketID) as Numero_Tickets by Owner</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleY.text"># Tickets</option>
      <option name="charting.axisTitleX.text">Time</option>
    </chart>
  </row>
  <row>
    <chart>
      <title>Tickets over time by Status and Owner</title>
      <searchString>index="*" sourcetype="rt" |   search  Field="Status-real" |eval Prop=if(like("$Owner$",""),"%","$Owner$") |    where like(Owner,Prop)  | eval Client=if(like("$Queue$",""),"%","$Queue$") |  where like(Queue,Client)|  eval date_hour = strftime(_time, "%H") | eval date_wday = strftime(_time, "%u") | where date_wday&lt;6 AND date_hour&gt;=9 AND date_hour&lt;19 | eval campo=5 | chart eval(sum(campo)/(dc(TicketID)*60)) as Tiempo by Owner,NewValue</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Owner</option>
      <option name="charting.axisTitleY.text">Hours</option>
    </chart>
    <chart>
      <title>Ticket over Time over Status and Queue</title>
      <searchString>index="*" sourcetype="rt" |   search  Field="Status-real" |eval Prop=if(like("$Owner$",""),"%","$Owner$")  |   where like(Owner,Prop)  | eval Client=if(like("$Queue$",""),"%","$Queue$") |  where like(Queue,Client)|   eval date_hour = strftime(_time, "%H") | eval date_wday = strftime(_time, "%u") | where date_wday&lt;6 AND date_hour&gt;=9 AND date_hour&lt;19 | eval campo=5 | chart eval(sum(campo)/(dc(TicketID)*60)) as Tiempo by Queue,NewValue</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Queue</option>
      <option name="charting.axisTitleY.text">Hours</option>
    </chart>
  </row>
  <row>
    <chart>
      <title>SLA by Owner</title>
      <searchString>index="*" sourcetype="rt" |   search  Field="Status-real" | search NOT NewValue="stalled" | eval Prop=if(like("$Owner$",""),"%","$Owner$")  |   where like(Owner,Prop)  | eval Client=if(like("$Queue$",""),"%","$Queue$") |  where like(Queue,Client)| dedup TicketID,DataUpdated |  addinfo | eval updated=strptime(DataUpdated,"%Y-%m-%d %H:%M:%S")  | eval update=if(updated&gt;info_min_time,updated,info_min_time)    | eval Tiempo=_time-update | chart eval(sum(Tiempo)/(count(TicketID)*3600)) as SLA_Time by Owner | sort -num(SLA_Time)</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Owner</option>
      <option name="charting.axisTitleY.text">Hours</option>
    </chart>
    <chart>
      <title>SLA by Queue</title>
      <searchString>index="*" sourcetype="rt" |   search  Field="Status-real" |search NOT NewValue="stalled" | eval Prop=if(like("$Owner$",""),"%","$Owner$")  |   where like(Owner,Prop)  | eval Client=if(like("$Queue$",""),"%","$Queue$") |  where like(Queue,Client)|  dedup TicketID,DataUpdated |  addinfo | eval updated=strptime(DataUpdated,"%Y-%m-%d %H:%M:%S")  | eval update=if(updated&gt;info_min_time,updated,info_min_time)    | eval Tiempo=_time-update | chart eval(sum(Tiempo)/(count(TicketID)*3600)) as SLA_Time by Queue | sort -num(SLA_Time)</searchString>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Queue</option>
      <option name="charting.axisTitleY.text">Hours</option>
    </chart>
  </row>
</form>