<form>
  <label>Memory Statistics</label>
  <fieldset autorun="true" submitButton="false">
<input type="time" searchWhenChanged="true">
      <label>Select time range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="node" searchWhenChanged="true">
      <label>Select a Node</label>
      
      <default>*</default>
      
     <!-- Define the default value -->      
      <choice value="*">All</choice>
      
     <!-- Define the choices with a populating search -->
      <populatingSearch fieldForValue="HOSTADDR" fieldForLabel="node"  latest="now">
        <![CDATA[index=cassandra_cache | dedup HOSTADDR|table HOSTADDR]]>
      </populatingSearch>
    </input>  
  </fieldset>
  <row>
    <chart>
      <title>Heap Memory Usage</title>
      <searchString>index="cassandra_cache" HOSTADDR=$node$| rename HOSTADDR AS Node|stats max(Heap_Memory_MB) AS MAX_HEAP_USED, max(Heap_Capacity_MB) AS HEAP_CAPACITY by Node</searchString>
      <latestTime>now</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">bar</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Node</option>
      <option name="charting.axisTitleY.text">Size (in MB)</option>
      <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
      <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
      <option name="charting.axisTitleY2.visibility">visible</option>
      <option name="charting.axisY2.enabled">false</option>
      <option name="charting.axisY2.scale">inherit</option>
    </chart>
    <chart>
        <title>Memory Usage</title>
        <searchString>index="cassandra_memory" Type=Memory HOSTADDR=$node$|dedup host|rename HOSTADDR AS Node|chart values(free) AS Free values(used) AS Used by Node</searchString>
      <latestTime>now</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">bar</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
<option name="charting.axisTitleY.text">Size (in MB)</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
  </row>
  <row>
    <chart>
      <title>Memory Utilized by Servers (in MB)</title>
      <searchString>index="cassandra_memory" Type=Memory HOSTADDR=$node$ | rename HOSTADDR AS server_name | timechart span=1m max(used) as "Memory Used" by server_name</searchString>
      <latestTime>now</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.text">Memory Used (MB)</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Time</option>
      <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
      <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
      <option name="charting.axisTitleY2.visibility">visible</option>
      <option name="charting.axisY2.enabled">false</option>
      <option name="charting.axisY2.scale">inherit</option>
    </chart>
    <chart>
      <title>Memory usage % by Servers</title>
      <searchString>index="cassandra_memory" Type=Memory HOSTADDR=$node$| eval used_per=(used/total*100) | rename HOSTADDR AS server_name | timechart span=1m max(used_per) as "% of Memory Used" by server_name</searchString>
      <latestTime>now</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Time</option>
      <option name="charting.axisTitleY.text">% of Memory Used</option>
      <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
      <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
      <option name="charting.axisTitleY2.visibility">visible</option>
      <option name="charting.axisY2.enabled">false</option>
      <option name="charting.axisY2.scale">inherit</option>
      <option name="charting.axisY.maximumNumber">100</option>
    </chart>
  </row>
  <row>
    <chart>
      <title>Swap Memory used by Servers (MB)</title>
      <searchString>index="cassandra_memory" Type=Swap HOSTADDR=$node$| rename HOSTADDR AS server_name | timechart span=1m max(used) as "Memory Used" by server_name</searchString>
      <latestTime>now</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.text">Swap Mem Used (MB)</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisStart</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Time</option>
      <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
      <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
      <option name="charting.axisTitleY2.visibility">visible</option>
      <option name="charting.axisY2.enabled">false</option>
      <option name="charting.axisY2.scale">inherit</option>
    </chart>
    <chart>
      <title>% Swap Memory used by Servers</title>
      <searchString>index="cassandra_memory" Type=Swap HOSTADDR=$node$| eval used_per=(used/total*100) | rename HOSTADDR AS server_name | timechart span=1m max(used_per) as "% of Memory Used" by server_name</searchString>
      <latestTime>now</latestTime>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisStart</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Time</option>
      <option name="charting.axisTitleY.text">% of Memory Used</option>
    </chart>
  </row>
  <row>

    <chart>
      <title>Average &amp; Max Memory used</title>
      <searchString>index="cassandra_memory" Type="Memory" HOSTADDR=$node$ | rename HOSTADDR AS Server | stats max(used), avg(used) by Server</searchString>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleY.text">Memory Size (MB)</option>
      <option name="charting.axisTitleX.text">Server Name</option>
    </chart>
    <chart>
      <title>Average &amp; Max Memory (includes Swap) used</title>
      <searchString>index="cassandra_memory" HOSTADDR=$node$| rename HOSTADDR AS Server | stats max(used), avg(used) by Server</searchString>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.axisTitleX.text">Server Name</option>
      <option name="charting.axisTitleY.text">Memory Size (MB)</option>
    </chart>
  </row>
</form>