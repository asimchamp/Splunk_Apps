#!/usr/bin/env python

# Splunk for XenServer
# Gets all the VTPMs (Virtual TPM devices) in the pool

import time
import XenAPI
import xsUtils

try:
    vtpms = xsUtils.xsSession.xenapi.VTPM.get_all()
	pool = xsUtils.xsSession.xenapi.pool.get_all()[0]
    poolUuid = xsUtils.xsSession.xenapi.pool.get_uuid(pool)

    for vtpm in vtpms:
        vtpmRecord = xsUtils.xsSession.xenapi.VTPM.get_record(vtpm)
                
        out = '%s - vtpm_uuid="%s" pool_uuid="%s"' % \
                  (
                    time.strftime("%Y-%m-%d %H:%M:%S"),
                    vtpmRecord["uuid"],
					poolUuid
                  )

        print out

except Exception, ex:
    import sys, traceback
    exc_type, exc_value, exc_traceback = sys.exc_info()
    xsUtils.xsLog.error(traceback.format_exception(exc_type, exc_value, exc_traceback))
    traceback.print_exception(exc_type, exc_value, exc_traceback)
