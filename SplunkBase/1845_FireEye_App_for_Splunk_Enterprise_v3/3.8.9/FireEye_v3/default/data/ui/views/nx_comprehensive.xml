<form script="inpage_drilldown_form.js" stylesheet="custom.css" version="1.1">
  <label>NX - Comprehensive</label>
  <description>Comprehensive Dashboard for FireEye NX Events</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <!-- Add Wildcard Filter -->
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Search</label>
      <default>*</default>
      <suffix/>
    </input>
    <!-- Used for dropdown - Input field hidden using javascript. <div id = #field3 -->
    <input type="text" token="ID" searchWhenChanged="true"/>
  </fieldset>
  <row>
    <map>
      <title>GeoIP</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | eval signature=coalesce (signature, sig_name) | iplocation dest_ip | geostats latfield=lat, longfield=lon count by signature</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
    </map>
  </row>
  <row>
    <chart>
      <title>Severity</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | chart count by severity</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.chart.showPercent">true</option>
      <option name="charting.fieldColors">{crit:0xFF1300,majr:0xFFDA00,minr:0x3C04F2}</option>
    </chart>
    <chart>
      <title>Malware</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | eval signature=coalesce (signature, sig_name) | chart count by signature</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <chart>
      <title>Top 20 Sources</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | top limit=20 src_ip</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <chart>
      <title>Top 20 Targets</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | top limit=20 dest_ip</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <chart>
      <title>Top 20 Dest Ports</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | top limit=20 dest_port</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.chart.showPercent">true</option>
    </chart>
    <chart>
      <title>Sensors</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | chart count by dvc_host</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table id="master">
      <title>Alerts</title>
      <search><query>eventtype=fe product="Web MPS" $wild$ | eval signature=coalesce (signature, sig_name) | eval UrlHash=case (category=="malware-object",file_hash, category=="web-infection", objURL, category=="malware-callback" OR category=="domain-match",infURL)| sort -occurred | table source, sourcetype, category, id, signature, severity, occurred, transport, src_ip, src_port, dest_ip, dest_port, UrlHash | rename category AS Type, id AS ID, signature AS Malware, severity AS Severity, occurred AS Occurred, transport AS Protocol, src_ip AS "Source IP", src_port AS "Source Port", dest_ip AS "Target IP", dest_port AS "Target Port", UrlHash AS "URL/Md5sum", locations as "Location"</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table id="detail">
      <title>Alert Detail: $ID$</title>
      <search><query>eventtype=fe product="Web MPS" id=$ID$ $wild$ | eval UrlHash=case (category=="malware-object",file_hash, category=="web-infection", objURL, category=="malware-callback" OR category=="domain-match",infURL) | table _raw, UrlHash, ext_ref | rename _raw AS "Raw Event", ext_ref AS "Event Link"</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
        <drilldown target="_blank">
          <condition field="Raw Event"></condition>
          <condition field="UrlHash"><link target="_blank">/app/$app$/vtlookup?UrlHash=$row.UrlHash$</link></condition>
          <condition field="Event Link">$row.ext_ref$</condition>
        </drilldown>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table>
      <title>Callbacks</title>
      <search><query>eventtype=fe product="Web MPS" category="domain-match" $wild$ | stats count(infURL) as "Events", distinct_count(src_ip) as "Hosts", max(occurred) as "Last Seen" by infURL | table infURL, locations, Events, Hosts, "Last Seen" | rename infURL as "C&amp;C Server", locations as "Locations" | sort ."Last Seen"</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
    </table>
  </row>
</form>
