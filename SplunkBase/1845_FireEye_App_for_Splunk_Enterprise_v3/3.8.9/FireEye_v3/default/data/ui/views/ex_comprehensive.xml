<form script="inpage_drilldown_form.js" stylesheet="custom.css" version="1.1">
  <label>EX - Comprehensive</label>
  <description>Comprehensive Dashboard for FireEye EX Events</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <!-- Add Wildcard Filter -->
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Search</label>
      <default>*</default>
      <suffix/>
    </input>
    <!-- Used for dropdown - Input field hidden using javascript. <div id = #field3 -->
    <input type="text" token="ID" searchWhenChanged="true"/>
  </fieldset>
  <row>
    <chart>
      <title>Severity</title>
      <search><query>eventtype=fe product="Email MPS" $wild$ | chart count by severity</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.chart.showPercent">true</option>
      <option name="charting.fieldColors">{crit:0xFF1300,majr:0xFFDA00,minr:0x3C04F2}</option>
    </chart>
    <chart>
      <title>Malware</title>
      <search><query>eventtype=fe product="Email MPS" $wild$ | chart count by signature</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.chart.showPercent">true</option>
    </chart>
    <chart>
      <title>Sensors</title>
      <search><query>eventtype=fe product="Email MPS" $wild$ | chart count by dvc_host</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.chart.showPercent">true</option>
    </chart>
  </row>
  <row>
    <chart>
      <title>Top 20 Senders</title>
      <search><query>eventtype=fe product="Email MPS" $wild$ | top limit=20 suser</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
      <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
      <option name="charting.axisTitleY2.visibility">visible</option>
      <option name="charting.axisY2.enabled">false</option>
      <option name="charting.axisY2.scale">inherit</option>
      <option name="charting.chart.showPercent">true</option>
    </chart>
    <chart>
      <title>Top 20 Recipients</title>
      <search><query>eventtype=fe product="Email MPS" $wild$ | top limit=20 duser</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
      <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
      <option name="charting.axisTitleY2.visibility">visible</option>
      <option name="charting.axisY2.enabled">false</option>
      <option name="charting.axisY2.scale">inherit</option>
      <option name="charting.chart.showPercent">true</option>
    </chart>
  </row>
  <row>
    <panel>
      <table id="master">
        <title>Alerts</title>
        <search><query>eventtype=fe product="Email MPS" $wild$ | eval UrlHash=if(isnull(file_hash),malware_url,file_hash) | sort -occurred | table source, sourcetype, id, signature, severity, occurred, suser, duser, UrlHash | rename id AS ID, signature AS Malware, severity AS Severity, occurred AS Occurred, duser AS Recipient, suser AS Sender, UrlHash AS "URL/Md5sum", locations as "Location"</query></search>
        <earliest>$earliest$</earliest>
        <latest>$latest$</latest>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table id="detail">
        <title>Alert Detail: $ID$</title>
        <search><query>eventtype=fe product="Email MPS" id=$ID$ $wild$ | eval UrlHash=if(isnull(file_hash),malware_url,file_hash) | table _raw, UrlHash, ext_ref | rename _raw AS "Raw Event", ext_ref AS "Event Link"</query></search>
        <earliest>$earliest$</earliest>
        <latest>$latest$</latest>
        <option name="drilldown">cell</option>
        <drilldown target="_blank">
          <condition field="Raw Event"></condition>
          <condition field="UrlHash"><link target="_blank">/app/$app$/vtlookup?UrlHash=$row.UrlHash$</link></condition>
          <condition field="Event Link">$row.ext_ref$</condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Recipient</title>
        <search><query>eventtype=fe product="Email MPS" $wild$ | stats count(duser), count(file_hash), count(malware_url), max(signature), max(occurred) by duser | rename duser AS Recipient, count(duser) as "Total Malicious Email", count(file_hash) AS "Attachment", count(malware_url) AS URL, max(signature) AS "Last Malware", max(occurred) AS "Last Seen at (UTC)"</query></search>
        <earliest>$earliest$</earliest>
        <latest>$latest$</latest>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Sender</title>
        <search><query>eventtype=fe product="Email MPS" $wild$ | stats dc(duser), count(duser), count(file_hash), count(malware_url), max(signature), max(occurred) by suser | rename suser AS Sender, dc(duser) AS "Unique Recipient", count(duser) as "Total Malicious Email", count(file_hash) AS "Attachment", count(malware_url) AS URL, max(signature) AS "Last Malware", max(occurred) AS "Last Seen at (UTC)"</query></search>
        <earliest>$earliest$</earliest>
        <latest>$latest$</latest>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>
</form>
