<form script="inpage_drilldown_form.js" stylesheet="custom.css" version="1.1">
  <label>PX Pivoting</label>
  <description>Analysis Dashboard for FireEye PX Pivoting</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <!-- Add Wildcard Filter -->
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Search</label>
      <default>*</default>
      <suffix/>
    </input>
    <!-- Add Wildcard Filter -->
    <input type="text" token="filter" searchWhenChanged="true">
      <label>Filter</label>
      <default>eventtype=fe</default>
      <suffix/>
    </input>
    <!-- Used for dropdown - Input field hidden using javascript. <div id = #field3 -->
    <input type="text" token="ID" searchWhenChanged="true"/>
    <input type="dropdown" token="appliance">
      <label>PX Appliance</label>
        <search fieldForValue="system" fieldForLabel="system">
          <query>
          <![CDATA[ | inputlookup px_appliances.csv ]]>
        </query></search>
      <selectFirstChoice>true</selectFirstChoice>
    </input>
  </fieldset>
  <row>
    <table id="master">
      <title>Alerts</title>
      <search><query>$filter$ product="Web MPS" $wild$ | eval signature=coalesce (signature, sig_name) | eval UrlHash=case (category=="malware-object",file_hash, category=="web-infection", objURL, category=="malware-callback" OR category=="domain-match",infURL)| sort -occurred | table source, sourcetype, category, id, signature, severity, occurred, transport, src_ip, src_port, dest_ip, dest_port, UrlHash | rename category AS Type, id AS ID, signature AS Malware, severity AS Severity, occurred AS Occurred, transport AS Protocol, src_ip AS "Source IP", src_port AS "Source Port", dest_ip AS "Target IP", dest_port AS "Target Port", UrlHash AS "URL/Md5sum", locations as "Location"</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">cell</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <html><p>*Note:  Time window passed to PX pivot is +-5 minutes</p></html>
  </row>
  <row>
    <table id="detail">
      <title>Pivot points for ID: $ID$</title>
      <search><query>$filter$ product="Web MPS" id=$ID$ $wild$ | eval src_dest=src_ip + " &amp; " + dest_ip | eval src_dest_port1=src_ip + " &amp; " + dest_ip + " &amp; " + dest_port | eval src_dest_port2=src_ip + " &amp; " + dest_ip + " &amp; " + dest_port + " &amp; " + src_port | eval stime=_time-300 |eval etime=_time+300 | table stime, etime, _time, src_ip, src_port, dest_ip, dest_port, src_dest, src_dest_port1, src_dest_port2 | rename src_ip AS "SRC IP", src_port AS "SRC Port", dest_ip AS "DST IP", dest_port AS "DST Port", src_dest AS "SRC/DST IP", src_dest_port1 AS "SRC/DST IP + DST Port", src_dest_port2 AS "SRC/DST IP + SRC/DST Port"</query></search>
      <earliest>$earliest$</earliest>
      <latest>$latest$</latest>
      <option name="wrap">true</option>
      <option name="rowNumbers">false</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="fields">_time,"SRC IP","SRC Port","DST IP","DST Port","SRC/DST IP","SRC/DST IP + DST Port","SRC/DST IP + SRC/DST Port"</option>
        <drilldown target="_blank">
          <condition field="_time"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$</link></condition>
          <condition field="SRC IP"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=host%20$row.SRC IP$</link></condition>
          <condition field="SRC Port"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=port%20$row.SRC Port$</link></condition>
          <condition field="DST IP"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=host%20$row.DST IP$</link></condition>
          <condition field="DST Port"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=port%20$row.DST Port$</link></condition>                   
          <condition field="SRC/DST IP"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=host%20$row.SRC IP$%20and%20host%20$row.DST IP$</link></condition>
          <condition field="SRC/DST IP + DST Port"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=host%20$row.SRC IP$%20and%20host%20$row.DST IP$%20and%20port%20$row.DST Port$</link></condition> 
          <condition field="SRC/DST IP + SRC/DST Port"><link>https://$appliance$/i/searches.html?stime=$row.stime$&amp;etime=$row.etime$&amp;bpf=host%20$row.SRC IP$%20and%20host%20$row.DST IP$%20and%20port%20$row.DST Port$%20and%20port%20$row.SRC Port$</link></condition> 
        </drilldown>
      <option name="count">10</option>
    </table>
  </row>
</form>