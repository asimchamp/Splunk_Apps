<setup>
   <block title="FireEye Setup Page">
  </block>

  <block title="Enable your FireEye Product(s)"
         endpoint="fireeye/conf" entity="setupentity">

    <input field="NX">
      <label>NX</label>
      <type>bool</type>
    </input>
    <input field="EX">
      <label>EX</label>
      <type>bool</type>
    </input>
    <input field="ETP">
      <label>ETP</label>
      <type>bool</type>
    </input>
    <input field="AX">
      <label>AX</label>
      <type>bool</type>
    </input>
    <input field="FX">
      <label>FX</label>
      <type>bool</type>
    </input>
    <input field="HX">
      <label>HX</label>
      <type>bool</type>
    </input>
    <input field="PX">
      <label>PX</label>
      <type>bool</type>
    </input>
    <input field="TAP">
      <label>TAP</label>
      <type>bool</type>
    </input>

    <text>&lt;b&gt;** Reminder: Make sure you restart splunk to see the dashboard changes take effect **&lt;/b&gt;</text>

  </block>

   <block title="VirusTotal Setup" endpoint="fireeye/conf" entity="setupentity">
       <input field="vt_api_key">
           <label>VirusTotal API Key</label>
           <type>text</type>
       </input>
   </block>


  <block title="Daily Report Options"
         endpoint="saved/searches" entity="Daily Analytics Report">
    <text>
      &lt;i&gt;Enable the report, select the schedule, specify the recipient.&lt;/i&gt;
    </text>

    <!-- The field "is_scheduled" maps to the enableSched setting in savedsearches.conf -->
    <input field="is_scheduled">
      <label>$name$</label>
      <type>bool</type>
    </input>

    <input field="cron_schedule">
      <label>Cron schedule (Ex:  "58 23 * * *" means 2 minutes prior to midnight every day)</label>
      <type>text</type>
    </input>

    <input field="action.email.to">
      <label>Email Address (or distro)</label>
      <type>text</type>
    </input>
    <text>&lt;b&gt;** Reminder: Configure you mail server setting if you have not already done so:  Settings -> System Settings -> Email Settings **&lt;/b&gt;</text>
  </block>


</setup>


