<form script="table_row_highlighting.js" stylesheet="table_decorations.css">
  <label>Puppet Reports</label>
  <description>On this side of the Puppet app you have a overview of all the systems on which the puppet agent runs</description>
  <fieldset autoRun="true">
    <input type="text" token="host">
      <label>Enter a Puppet Agent:</label>
      <default>*</default>
    </input>
    <input type="dropdown" token="time" searchWhenChanged="true">
      <label>Select a time:</label>
      <default>Yesterday</default>
      <choice value="puppet_report_yesterday.csv">Yesterday</choice>
      <choice value="puppet_report_2daysago.csv">Two days ago</choice>
      <choice value="puppet_report_3daysago.csv">Three days ago</choice>
      <choice value="puppet_report_4daysago.csv">Four days ago</choice>
      <choice value="puppet_report_5daysago.csv">Five days ago</choice>
      <choice value="puppet_report_6daysago.csv">Six days ago</choice>
      <choice value="puppet_report_7daysago.csv">Seven days ago</choice>
    </input>
  </fieldset>
 <row>
  <table id="highlight">
      <title>Results</title>
      <searchString> | inputlookup $time$ | search Client="$host$" | table Client, "Last update", Failed, Skipped, Applied, Restarted | rename Client as "Puppet Agent"</searchString>
      <option name="wrap">true</option>
      <option name="rowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="count">50</option>
  </table>
 </row>
</form>