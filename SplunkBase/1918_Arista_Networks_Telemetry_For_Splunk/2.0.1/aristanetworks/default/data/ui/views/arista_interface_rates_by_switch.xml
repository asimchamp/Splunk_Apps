<form version="1.1">
  <label>Single Interface Rates (by Switch:Interface)</label>
  <search id="baseSearch">
    <query>source="arista_switch_ifcounter" switchname</query>
    <earliest>-1h@h</earliest>
    <latest>@h</latest>
  </search>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" token="Single_Interface_Time" searchWhenChanged="true">
      <default>
        <earliest>-15m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="SwitchName" searchWhenChanged="true">
      <label>Switch:</label>
      <fieldForLabel>switchname</fieldForLabel>
      <fieldForValue>switchname</fieldForValue>
      <search>
        <query>source="arista_switch_ifcounter" | stats count by switchname | sort switchname</query>
        <earliest>$Single_Interface_Time.earliest$</earliest>
        <latest>$Single_Interface_Time.latest$</latest>
      </search>
    </input>
    <input type="dropdown" token="InterfaceName" searchWhenChanged="true">
      <label>Interface</label>
      <fieldForLabel>interface</fieldForLabel>
      <fieldForValue>interface</fieldForValue>
      <search>
        <query>source="arista_switch_ifcounter" | stats count by interface | sort interface</query>
        <earliest>$Single_Interface_Time.earliest$</earliest>
        <latest>$Single_Interface_Time.latest$</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <search>
          <query>source="arista_switch_ifcounter" $InterfaceName$ | chart max(inRate) AS in, max(outRate) AS out, max(inErrors) AS inErrors, max(outErrors) AS outErrors, max(inDiscards) AS inDiscards, max(outDiscards) as outDiscards over _time</query>
          <earliest>$Single_Interface_Time.earliest$</earliest>
          <latest>$Single_Interface_Time.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.chart.resultTruncationLimit">500000</option>
        <option name="charting.data.count">100000</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Interface statistics on $SwitchName$ interface $InterfaceName$ over time</title>
      <table>
        <search>
          <query>source="arista_switch_ifcounter" $InterfaceName$ | chart max(inRate) AS in, max(outRate) AS out, max(inErrors) AS inErrors, max(outErrors) AS outErrors, max(inDiscards) AS inDiscards, max(outDiscards) as outDiscards over _time</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>
