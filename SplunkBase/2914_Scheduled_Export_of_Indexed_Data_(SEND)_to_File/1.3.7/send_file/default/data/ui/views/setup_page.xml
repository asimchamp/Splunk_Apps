<dashboard script="setup_page.js" stylesheet="setup_page.css" hideEdit="true" version="1.1">

 <label>Setup</label>
    <row>
        <panel>
            <html>

                
              <form>

                <div class="global_fields">

                  <h2>Enter Global Settings</h2>

                  <label for="param_log_level">Log Level</label>
                  <p>All logs get written to <code>SPLUNK_HOME/var/log/splunk/sendfilealert_app_modularalert.log</code> and are searchable in Splunk</p>
                  <select name="param_log_level" id="param_log_level"><option value="NOTSET">NOTSET</option><option value="DEBUG">DEBUG</option><option value="INFO">INFO</option><option value="WARNING">WARNING</option><option value="ERROR">ERROR</option><option value="CRITICAL">CRITICAL</option></select>


                  <label for="param_activationkey">Activation Key</label>
                  <p>Visit <a href="http://www.baboonbones.com/#activation" target="_blank">http://www.baboonbones.com/#activation</a> to obtain a non-expiring key</p>
                  <input autocomplete="off"  type="text" size="20" name="param_activationkey" id="param_activationkey"/>

                

                </div>

                <hr/>

                <div class="ck_div_input_fields">

                  <h2>Enter Your Credentials To Encrypt</h2>

                  <p>

                  If you require an encrypted credential in your configuration , then you can enter it here.<br/>
        
                  Then in your configration stanza refer to it in the format <code>{encrypted:somekey}</code><br/>
        
                  Where <code>somekey</code> is any value you choose to enter on this setup page as your credential key.
                
              </p>

                  <p class="helpText"><a href="#" class="add_credential_keys">Click to add more Credentials</a></p>

                         <!-- form fields -->

                   </div>

                   <hr/>

                   <div id="ck_form_buttons">

                      <button type="button" id="ck_cancel_button"> Cancel </button> 
                      <button type="button" id="ck_submit_button"> Save Setup </button>

                   </div>

                </form>


            </html>
        </panel>
    </row>
</dashboard>