<form>
  <label>THOR Overview</label>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" searchWhenChanged="true">
      <default>Last 30 days</default>
    </input>
    <input type="dropdown" token="decrypt" searchWhenChanged="true">
      <label>Log Type</label>
      <choice value="*">plain text</choice>
      <choice value="`decrypt_thor_events`">encrypted</choice>
      <default>plain text</default>
      <initialValue>plain text</initialValue>
    </input>
    <input type="text" token="keyword">
      <label>Search</label>
      <default>*</default>
    </input>
    <input type="text" token="filter">
      <label>Filter</label>
      <default>"filter expression"</default>
    </input>
    <input type="dropdown" token="CID" searchWhenChanged="true">
      <search>
        <query>eventtype=thor_events | stats count by CID</query>
      </search>
      <fieldForLabel>CID</fieldForLabel>
      <fieldForValue>CID</fieldForValue>
      <choice value="*">ANY</choice>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Events by Time</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT tag=false_positive NOT ($filter$) ( level=Alert OR level=Alarm OR level=Warning OR level=Notice ) | eval level=if(level="Alarm","Alert",level) | timechart count by level</query>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.fieldColors">{"Alert":0xD85D3C,"Warning":0xFAC61D, "Notice":0x6AB7C7}</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Full Host Statistics</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT tag=false_positive NOT ($filter$) | dedup system,event | eval level=if(level="Alarm","Alert",level) | chart count over system by level</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">30</option>
        <option name="charting.fieldColors">{"Alarm":0xD85D3C,"Warning":0xFAC61D, "Notice":0x6AB7C7}</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Scan Status</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT ($filter$) | search "Thor Version:" OR "MODULE: Report MESSAGE: Results:" | stats latest(_raw) as _raw by system | eval completed=if(searchmatch("Results:"),"yes","no") | stats count by completed</query>
        </search>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
      </chart>
    </panel>
    <panel>
      <table>
        <title>Scan Completed</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT ($filter$) | search "Thor Version:" OR "MODULE: Report MESSAGE: Results:"  | stats latest(_raw) as _raw by system | eval completed=if(searchmatch("Results:"),"yes","no") | stats count by completed</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Most Relevant Systems</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT ($filter$) | search NOT tag=false_positive ( level=Alert OR level=Alarm OR level=Warning ) | dedup system,event | eval level=if(level="Alarm","Alert",level) | chart count over system by level | sort -Alert</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">heatmap</option>
        <option name="drilldown">cell</option>
        <option name="count">30</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Scan Status View</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT ($filter$) | search "Thor Version:" OR "MODULE: Report MESSAGE: Results:" OR "Scan took" | transaction system maxspan=24h | eval completed=if(searchmatch("Results:"),"yes","no") | table system,system_ip,info,_time,completed</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">row</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Latest Message by System</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT tag=false_positive NOT ($filter$) | stats latest(_raw) by system</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <map>
        <title>Process Connection Endpoints</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT tag=false_positive NOT ($filter$) MODULE=ProcessConnections | eval ipaddress = if(RIP!="",RIP,ipaddress) | iplocation ipaddress | geostats count by NAME</query>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.drilldown">all</option>
        <option name="mapping.map.center">(16.64,-0.53)</option>
        <option name="mapping.map.zoom">2</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
        <option name="mapping.choroplethLayer.colorBins">5</option>
        <option name="mapping.choroplethLayer.colorMode">auto</option>
        <option name="mapping.choroplethLayer.maximumColor">0xDB5800</option>
        <option name="mapping.choroplethLayer.minimumColor">0x2F25BA</option>
        <option name="mapping.choroplethLayer.neutralPoint">0</option>
        <option name="mapping.choroplethLayer.shapeOpacity">0.75</option>
        <option name="mapping.choroplethLayer.showBorder">1</option>
        <option name="mapping.map.panning">true</option>
        <option name="mapping.map.scrollZoom">false</option>
        <option name="mapping.showTiles">1</option>
        <option name="mapping.tileLayer.tileOpacity">1</option>
        <option name="mapping.type">marker</option>
      </map>
    </panel>
    <panel>
      <map>
        <title>DNSCache Endpoints</title>
        <search>
          <query>eventtype=thor_events $decrypt$ | search ($keyword$) ($CID$) NOT tag=false_positive NOT ($filter$)  MODULE=DNSCache| lookup dnsLookup host AS ENTRY OUTPUT ip AS ipaddress | iplocation ipaddress | geostats count by ENTRY</query>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.drilldown">all</option>
        <option name="mapping.map.center">(31.05,-1.58)</option>
        <option name="mapping.map.zoom">2</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
        <option name="mapping.choroplethLayer.colorBins">5</option>
        <option name="mapping.choroplethLayer.colorMode">auto</option>
        <option name="mapping.choroplethLayer.maximumColor">0xDB5800</option>
        <option name="mapping.choroplethLayer.minimumColor">0x2F25BA</option>
        <option name="mapping.choroplethLayer.neutralPoint">0</option>
        <option name="mapping.choroplethLayer.shapeOpacity">0.75</option>
        <option name="mapping.choroplethLayer.showBorder">1</option>
        <option name="mapping.map.panning">true</option>
        <option name="mapping.map.scrollZoom">false</option>
        <option name="mapping.showTiles">1</option>
        <option name="mapping.tileLayer.tileOpacity">1</option>
        <option name="mapping.type">marker</option>
      </map>
    </panel>
  </row>
</form>