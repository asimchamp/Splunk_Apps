<form>
  <label>Firewall Activity v2</label>
  <description>Activity by Firewall</description>
  <search id="firewall_list">
    <query>index=sonicwall template_type=dynamic firewall_hostname!="IPFix Converter" | top firewall_hostname</query>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="time">
      <label></label>
      <default>
        <earliest>@d</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>index=sonicwall template_type=dynamic firewall_hostname!="IPFix Converter" | eval template_version=case(tid &gt; 400, "v2 Enabled", tid &lt; 400, "v1 Enabled") | chart values(template_version), count  by firewall_hostname</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
        <option name="refresh.auto.interval">30</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Flow close rate - 5 minute window</title>
        <search>
          <query>index=sonicwall tid=257 OR tid=462 firewall_hostname!="IPFix Converter" | chart sparkline count by firewall_hostname</query>
          <earliest>rt-5m</earliest>
          <latest>rt</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <input type="dropdown" token="firewall" searchWhenChanged="true">
        <label>Firewall</label>
        <search>
          <query>index=sonicwall template_type=dynamic | eval firewall_hostname=coalesce(firewall_hostname, host) | top firewall_hostname</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
        </search>
        <fieldForLabel>firewall_hostname</fieldForLabel>
        <fieldForValue>firewall_hostname</fieldForValue>
        <prefix>firewall_hostname="</prefix>
        <suffix>"</suffix>
        <choice value="*">All</choice>
        <default>*</default>
      </input>
      <table>
        <title>Dynamic Templates</title>
        <search>
          <query>index=sonicwall template_type="dynamic" $firewall$ | chart sparkline count, values(template_description) as "description", values(tid) as "ID" by template_name</query>
          <earliest>-15m</earliest>
          <latest>now</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
        <option name="refresh.auto.interval">60</option>
      </table>
    </panel>
  </row>
</form>