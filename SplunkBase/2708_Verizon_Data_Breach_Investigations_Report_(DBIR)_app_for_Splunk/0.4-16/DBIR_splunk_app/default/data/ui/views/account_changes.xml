<form>
  <label>Credential Changes</label>
  <description>Tracks Changes in Accounts like account creations, deletions and locks</description>
  <row>
    <panel>
      <input type="text" token="user" searchWhenChanged="true">
        <label>User Name</label>
        <default>*</default>
      </input>
      <input type="dropdown" token="signature" searchWhenChanged="false">
        <label>Signature</label>
        <choice value="*">All Changes</choice>
        <choice value="created">Account Created</choice>
        <choice value="">Account Modified</choice>
        <choice value="deleted">Account Deleted</choice>
        <choice value="locked">Account Locked</choice>
        <choice value="unlocked">Account Unlocked</choice>
        <choice value="disabled">Account Disabled</choice>
        <prefix>*</prefix>
        <suffix>*</suffix>
        <default>*</default>
      </input>
      <input type="text" token="src">
        <label>Source Host</label>
        <default>*</default>
      </input>
      <input type="text" token="dest">
        <label>Destination Host</label>
        <default>*</default>
      </input>
      <input type="time" token="_time" searchWhenChanged="true">
        <label></label>
        <default>
          <earliest>0</earliest>
          <latest></latest>
        </default>
      </input>
      <table>
        <search>
          <query>| datamodel Account_Action Action_Signature search | search Action_Signature.signature=$signature$ Action_Signature.src=$src$ Action_Signature.dest=$dest$ Action_Signature.user=$user$ | stats count(Action_Signature.user) by Action_Signature.user Action_Signature.signature Action_Signature.src Action_Signature.dest | rename Action_Signature.user AS User, Action_Signature.signature AS Signature, Action_Signature.src AS Source, Action_Signature.dest AS Destination, "count(Action_Signature.user)" AS "User Count"</query>
          <earliest>$_time.earliest$</earliest>
          <latest>$_time.latest$</latest>
        </search>
        <option name="list.drilldown">full</option>
        <option name="list.wrap">1</option>
        <option name="maxLines">5</option>
        <option name="raw.drilldown">full</option>
        <option name="rowNumbers">false</option>
        <option name="table.drilldown">all</option>
        <option name="table.wrap">1</option>
        <option name="type">list</option>
        <option name="wrap">true</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>