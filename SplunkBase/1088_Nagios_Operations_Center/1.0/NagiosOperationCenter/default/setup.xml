<setup title="Nagios Operation Center">
	<block title="Configure This App" endpoint="admin/nagiosoc/" entity="nagiosoc">
		<text>
			Configure the Nagios Operation Center Data Input
		</text>
	</block>
	<block title="Path for nagios.cfg file" endpoint="admin/nagiosoc/" entity="nagiosoc">
		<input field="path">
			<label>Path for nagios.cfg file</label>
			<type>text</type>
		</input>
	</block>
	<block title="Interval for check nagios status" endpoint="data/inputs/script" entity="%24SPLUNK_HOME%252Fetc%252Fapps%252FNagiosOperationCenter%252Fbin%252Freadnagios.py%20status">
		<input field="interval">
			<label>Set interval for check nagios status</label>
			<type>text</type>
		</input>
	</block>

	<block title="Interval for check nagios actions"
		endpoint="data/inputs/script"
		entity="%24SPLUNK_HOME%252Fetc%252Fapps%252FNagiosOperationCenter%252Fbin%252Freadnagios.py%20action">
		<input field="interval">
			<label>Set interval for check nagios actions</label>
			<type>text</type>
		</input>
	</block>
</setup>
