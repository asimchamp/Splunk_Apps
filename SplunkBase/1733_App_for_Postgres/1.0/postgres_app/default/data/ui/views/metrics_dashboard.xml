<?xml version='1.0' encoding='utf-8'?>
<form>
  <fieldset autoRun="true" submitButton="true">
    <input type="dropdown" token="database">
      <label>Database</label>
      <default>*</default>
      <choice value="*">*</choice> 
      <populatingSavedSearch fieldForValue="database" fieldForLabel="database">@internal Databases</populatingSavedSearch>
    </input>
    <input type="text" token="schema">
      <default>*</default>
      <label>Schema</label>
    </input>
    <input type="time">
      <default>Last 4 hours</default>
    </input>
  </fieldset>
  <label>Tuple Metrics</label>
  <row>
    <table>
      <searchString>| savedsearch "@internal Top relations by tuple metrics (current)" database="$database$" schema="$schema$"</searchString>
      <title>Top relations by tuple metrics (current)</title>
      <option name="count">20</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="displayRowNumbers">true</option>
      <option name="drilldown">none</option>
    </table>
  </row>
  <row>
    <table>
      <searchString>| savedsearch "@internal Top indices by tuple metrics (current)" database="$database$" schema="$schema$"</searchString>
      <title>Top indices by tuple metrics (current)</title>
      <option name="count">20</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="displayRowNumbers">true</option>
      <option name="drilldown">none</option>
    </table>
  </row>
</form>
