<?xml version='1.0' encoding='utf-8'?>
<form>
  <fieldset autoRun="true" submitButton="true">
    <input type="dropdown" token="database">
      <label>Database</label>
      <default>*</default>
      <choice value="*">*</choice> 
      <populatingSavedSearch fieldForValue="database" fieldForLabel="database">@internal Databases</populatingSavedSearch>
    </input>
    <input type="time">
      <default>30 minute window</default>
    </input>
  </fieldset>
  <label>Error console</label>
  <row>
    <event>
      <searchString>| savedsearch "@internal Latest errors" database="$database$"</searchString>
      <title>Errors and fatal events</title>
      <option name="count">100</option>
      <option name="displayRowNumbers">true</option>
      <option name="entityName">events</option>
      <option name="segmentation">full</option>
      <option name="showPager">true</option>
    </event>
  </row>
</form>
