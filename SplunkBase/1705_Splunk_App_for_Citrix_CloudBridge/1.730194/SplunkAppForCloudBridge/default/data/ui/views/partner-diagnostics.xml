<?xml version='1.0' encoding='utf-8'?>
<form>
  <label>Partner Diagnostics</label>
  
  <fieldset autoRun="true">
    <input type="time">
      <default>Last 24 hours</default>
    </input>
    <input type="dropdown" token="observerId">
       <label>Observer</label>
       <choice value="*">All</choice>
       <populatingSearch fieldForValue="observationPointId" fieldForLabel="Address">
           | inputlookup CloudBridgeObserver.csv
       </populatingSearch>
       <default>*</default>
    </input>
    </fieldset>
  
  <row>
    <chart>
      <title>Network Latency(RTT) By Top Partners</title>
      <searchString> |savedsearch "Partner - Diag - Network Latency By Top Partners" observationPointId="$observerId$"</searchString>
      <option name="charting.chart">column</option>
      <option name="charting.axisTitleY.text">ms</option>
      <option name="charting.axisTitleX.text">Partner</option>
      <option name="charting.legend.placement">top</option>
      <drilldown><link>/app/SplunkAppForCloudBridge/partner-detail?form.partnerCbInstanceId=$click.value$</link></drilldown>   
    </chart>
    
    <chart>
      <title>RTOs By Top Partners</title>
      <searchString> |savedsearch "Partner - Diag - RTOs By Top Partners" observationPointId="$observerId$"</searchString>
      <option name="charting.chart">column</option>
      <option name="charting.axisTitleY.text">RTOs</option>
      <option name="charting.axisTitleX.text">Partner</option>
      <option name="charting.legend.placement">top</option>
      <drilldown><link>/app/SplunkAppForCloudBridge/partner-detail?form.partnerCbInstanceId=$click.value$</link></drilldown>   
    </chart>
  </row>
  
  <row>
    <chart>
      <title>Retransmission on WAN Side By Top Partners</title>
      <searchString> |savedsearch "Partner - Diag - Retran WAN By Top Partners" observationPointId="$observerId$"</searchString>
      <option name="charting.chart">column</option>
      <option name="charting.axisTitleY.text">MB</option>
      <option name="charting.axisTitleX.text">Partner</option>
      <option name="charting.legend.placement">none</option>
      <drilldown><link>/app/SplunkAppForCloudBridge/partner-detail?form.partnerCbInstanceId=$click.value$</link></drilldown>   
    </chart>
    
    <chart>
      <title>Retransmission on LAN Side By Top Partners</title>
      <searchString> |savedsearch "Partner - Diag - Retran LAN By Top Partners" observationPointId="$observerId$"</searchString>
      <option name="charting.chart">column</option>
      <option name="charting.axisTitleY.text">MB</option>
      <option name="charting.axisTitleX.text">Partner</option>
      <option name="charting.legend.placement">none</option>
      <drilldown><link>/app/SplunkAppForCloudBridge/partner-detail?form.partnerCbInstanceId=$click.value$</link></drilldown>   
    </chart>
  </row>

</form>
