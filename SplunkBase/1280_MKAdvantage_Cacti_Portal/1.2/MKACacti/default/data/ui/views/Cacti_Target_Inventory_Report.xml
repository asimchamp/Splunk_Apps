<form>
  <label>Target Inventory Per Poller</label>
  
  
  

  <fieldset>
      
  <input type="text" token="target_host">
    <label>Target Host (default is all hosts)</label>
      <default>*</default>
  </input>
    
  <input type="text" token="poller">
      <label>Poller (default is all pollers)</label>
      <default>*</default>
    </input>
    
    <input type="time" />
    
  </fieldset>
  <row>
      <!-- output the results as a 50 row events view -->
      <table>
            <title>Inventory Results</title>
            <searchTemplate>index=cacti_perf target_host="*$target_host$*" poller="*$poller$*"| dedup poller | table target_host, poller</searchTemplate>
            <option name="showPager">true</option>
      	    <option name="count">50</option>
            <option name="displayRowNumbers">false</option>
      </table>
  </row>
  
</form>