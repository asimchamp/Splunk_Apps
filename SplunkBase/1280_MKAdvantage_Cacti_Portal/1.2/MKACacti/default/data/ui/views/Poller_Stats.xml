<form>
    <label>Poller Stats</label>

    <!-- define master search template, with replacement tokens delimited with $ -->
    <searchTemplate>index=cacti_perf "$poller$"</searchTemplate>

    <fieldset>
        <!-- Define a simple dropdown form driven by a search -->
        <input type="dropdown" token="poller">
            <label>Select a Poller</label>
            <choice value="*">Any</choice>
            <populatingSearch fieldForValue="poller" fieldForLabel="poller"><![CDATA[index=cacti_perf | dedup target_host | rename target_host as Host | stats count by Host ]]></populatingSearch>
        </input>
    </fieldset>

    <row>
        <!-- output the results as a 50 row events view -->
        <event>
            <title>Results</title>
            <option name="count">50</option>
        </event>
    </row>
</form>