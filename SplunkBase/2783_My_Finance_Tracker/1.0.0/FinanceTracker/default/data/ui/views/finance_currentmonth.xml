<form>
  <label>Month-wise Analytics</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="thisMonth" searchWhenChanged="true" style="float:left">
      <label>Panel 1 - Select Month</label>
      <default>
        <earliest>@mon</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="time" token="prevMonth" searchWhenChanged="true" style="float:right">
      <label>Panel 2 - Select Month</label>
      <default>
        <earliest>-1mon@mon</earliest>
        <latest>@mon</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Panel 1 - Total Income</title>
      <chart>
        <search>
          <query>| pivot FinanceDataModel Income sum(Value) AS "Sum of Value" ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1</query>
          <earliest>$thisMonth.earliest$</earliest>
          <latest>$thisMonth.latest$</latest>
        </search>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
