#!/bin/sh
##
## Postgrestats Script Wrapper
## 2014 (c) Radoslaw Zak-Brodalko, Linux Polska
##

## Below set the appropriate evnironmental settings
unset LD_LIBRARY_PATH

if [ "x$SPLUNK_HOME" != x ]
then
	POSTGRESTATS=$SPLUNK_HOME/etc/apps/ta-postgres/bin/postgrestats.py
fi

${POSTGRESTATS:-./postgrestats.py} $@

