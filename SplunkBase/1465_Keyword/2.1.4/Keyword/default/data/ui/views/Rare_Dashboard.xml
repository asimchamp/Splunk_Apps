<form stylesheet="nav_hutch.css" version="1.1">
  <label>Rare Sources, SourceTypes, and Hosts</label>
  <search id="baseSearch1">
    <query>index=$indexes$ $keyword_field$</query>
  </search>
  <fieldset>
    <input type="multiselect" token="indexes" searchWhenChanged="true">
      <label>Choose index(s)</label>
      <choice value="*">All</choice>
      <search>
        <query> |eventcount summarize=false index=* | dedup index | fields index|rename index as title| search NOT title=splunklogger NOT title=history NOT title=summary | table title </query>
      </search>
      <fieldForLabel>Index</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <delimiter> OR index= </delimiter>
    </input>
    <input type="text" token="keyword_field">
      <label>Enter keyword (e.g. error) to find</label>
    </input>
    <input type="time"/>
  </fieldset>
  <row>
    <table>
      <title>Rare Sources</title>
      <search base="baseSearch1">
	<query>|rare source limit=10</query>
      </search>
    </table>
    <chart>
      <title>Rare Sources chart</title>
      <search base="baseSearch1">
	<query>|rare source limit=10</query>
      </search>
      <option name="charting.chart">pie</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Rare SourceTypes</title>
      <search base="baseSearch1">
	<query>|rare sourcetype limit=10</query>
      </search>
    </table>
    <chart>
      <title>Rare SourceTypes chart</title>
      <search base="baseSearch1">
	<query>|rare sourcetype limit=10</query>
      </search>
      <option name="charting.chart">pie</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Rare Hosts</title>
      <search base="baseSearch1">
	<query>|rare host limit=10</query>
      </search>
    </table>
    <chart>
      <title>Rare Hosts chart</title>
      <search base="baseSearch1">
	<query>|rare host limit=10</query>
      </search>
      <option name="charting.chart">pie</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
</form>
