<form stylesheet="nav_hutch.css" version="1.1">
  <label>Cluster command to find anomalies</label>
  <search id="baseSearch">
    <query>index=$indexes$ $keyword_field$</query>
  </search>
  <fieldset>      
    <input type="multiselect" token="indexes" searchWhenChanged="true">
      <label>Choose index(s)</label>
      <choice value="*">All</choice>
      <search>
        <query> |eventcount summarize=false index=* | dedup index | fields index|rename index as title| search NOT title=splunklogger NOT title=history NOT title=summary | table title </query>
      </search>
      <fieldForLabel>Index</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <delimiter> OR index= </delimiter>
    </input>
      <input type="text" token="keyword_field">
          <label>Search filter: (e.g.sourcetype=firewall)</label>
      </input>
      <input type="dropdown" token="tvalue">
            <label>Set Threshold for cluster sensitivity</label>
            <choice value="0.8">0.8</choice>
            <choice value="0.1">0.1</choice>
            <choice value="0.2">0.2</choice>
            <choice value="0.3">0.3</choice>
            <choice value="0.4">0.4</choice>
            <choice value="0.5">0.5</choice>
            <choice value="0.6">0.6</choice>
            <choice value="0.7">0.7</choice>
            <choice value="0.9">0.9</choice>
            <choice value="1.0">1.0</choice>
	    <default>"0.8"</default>
        </input>
      <input type="time" />
  </fieldset>
 <row>
      <table>
          <title>Reduced events from cluster command</title>
	  <search base="baseSearch">
          <query>|cluster showcount=t t=$tvalue$ | table _time, cluster_count, cluster_label, _raw | sort cluster_count</query>
	  </search>
      </table>
 </row>
 <row>
      <table>
	<title>Reduced events keeping last 5 of each type</title>
	<search base="baseSearch">
	<query>cluster showcount=t t=$tvalue$ labelonly=t | table _time, cluster_count, cluster_label, _raw | dedup 5 cluster_label | sort cluster_count, cluster_label, - _time </query>
	</search>
      </table>
 </row>

</form>
