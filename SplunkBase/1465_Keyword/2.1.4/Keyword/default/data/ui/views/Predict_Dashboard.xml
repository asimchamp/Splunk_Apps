<form stylesheet="nav_hutch.css" version="1.1">
  <label>Predict Keyword Occurrences</label>
  <search id="baseSearch">
    <query>index=$indexes$ $keyword_field$</query>
  </search>
  <fieldset>      
    <input type="multiselect" token="indexes" searchWhenChanged="true">
      <label>Choose index(s)</label>
      <choice value="*">All</choice>
      <search>
        <query> |eventcount summarize=false index=* | dedup index | fields index|rename index as title| search NOT title=splunklogger NOT title=history NOT title=summary | table title </query>
      </search>
      <fieldForLabel>Index</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <delimiter> OR index= </delimiter>
    </input>
      <input type="text" token="keyword_field">
          <label>Enter keyword (e.g. error) to find</label>
      </input>
      <input type="time" />
  </fieldset>
 <row>
      <chart>
          <title>Predict Occurrences</title>
	  <search base="baseSearch">
            <query>|timechart count|predict count future_timespan=5</query>
	  </search>
	  <option name="charting.chart">line</option>
      </chart>
 </row>
 <row>
      <chart>
	<title>Predict Recession</title>
	<search base="baseSearch">
	<query>|timechart count|predict count|rename upper95(prediction(count)) as ceiling | rename lower95(prediction(count)) as floor | eval excession=if(count &gt; ceiling, "100", "0") | eval recession=if(count &lt; floor, "-100", "0") | table _time,excession,recession,count,ceiling,floor</query>
	</search>
	<option name="charting.chart">line</option>
      </chart>
 </row>

</form>
