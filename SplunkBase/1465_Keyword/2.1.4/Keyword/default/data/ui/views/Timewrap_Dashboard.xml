<form stylesheet="nav_hutch.css" version="1.1">
  <label>Timewrap - 3 week comparison by RDC</label>
  <search id="baseSearch">
  <query>index=$indexes$ $keyword_field$ earliest=-2w@w | timechart count span=1h</query>  
  </search>
  <fieldset>
    <input type="multiselect" token="indexes" searchWhenChanged="true">
      <label>Choose index(s)</label>
      <choice value="*">All</choice>
      <search>
        <query> |eventcount summarize=false index=* | dedup index | fields index|rename index as title| search NOT title=splunklogger NOT title=history NOT title=summary | table title </query>
      </search>
      <fieldForLabel>Index</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <delimiter> OR index= </delimiter>
    </input>
    <input type="text" token="keyword_field">
          <label>Enter keyword (e.g. error) to compare week upon week. See timewrap in Splunk Docs for more details.</label>
    </input>
  </fieldset>

  <row>
    <chart>
      <title>This week compared to last week</title>
      <search base="baseSearch">
	<query>|timewrap w</query>
      </search>
	<option name="charting.chart">area</option>
	<option name="drilldown">false</option>
    </chart>
  </row>
</form>
