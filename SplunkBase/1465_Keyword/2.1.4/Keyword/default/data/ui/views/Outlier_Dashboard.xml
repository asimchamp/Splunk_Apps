<form stylesheet="nav_hutch.css" version="1.1">
  <label>Outliers</label>
  <search id="baseSearch">
    <query>index=$indexes$ $keyword_field$|stats count by $meta$|eventstats avg(count) as avg_count stdevp(count) as stdev_count</query>  
  </search>
  <fieldset>
    <input type="multiselect" token="indexes" searchWhenChanged="true">
      <label>Choose index(s)</label>
      <choice value="*">All</choice>
      <search>
        <query> |eventcount summarize=false index=* | dedup index | fields index|rename index as title| search NOT title=splunklogger NOT title=history NOT title=summary | table title </query>
      </search>
      <fieldForLabel>Index</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <delimiter> OR index= </delimiter>
    </input>
    <input type="text" token="keyword_field">
          <label>Enter keyword (e.g. error) to find</label>
    </input>
    <input type="dropdown" token="meta">
       <label>Select Meta Data</label>
       <choice value="source">source</choice>
       <choice value="sourcetype">sourcetype</choice>
       <choice value="host">host</choice>
    </input>
    <input type="time" />
  </fieldset>

  <row>
    <table>
      <title>Outliers: events greater than average count + standard deviation</title>
      <search base="baseSearch">
	<query>|where count>(avg_count+stdev_count)</query>
      </search>
        <option name="showPager">true</option>
	<option name="drilldown">false</option>
      </table>
  </row>
</form>
