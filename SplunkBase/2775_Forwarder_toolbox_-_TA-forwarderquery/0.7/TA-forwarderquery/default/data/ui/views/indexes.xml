<form>
  <label>Indexes</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="indexer">
      <label>Indexer</label>
      <fieldForLabel>peerName</fieldForLabel>
      <fieldForValue>peerName</fieldForValue>
      <search>
        <query>| rest splunk_server=local /services/search/distributed/peers/ | search peerName=*</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="dropdown" token="stanza">
      <label>Password set</label>
      <fieldForLabel>title</fieldForLabel>
      <fieldForValue>title</fieldForValue>
      <search>
        <query>| rest splunk_server=local /servicesNS/nobody/TA-forwarderquery/properties/forwarderquery/  | search title!=mystanza</query>
      </search>
      <initialValue>default</initialValue>
    </input>
    <input type="multiselect" token="fieldlist" searchWhenChanged="true">
      <label>Select fields to show</label>
      <search>
        <query>|forwarderquery server="$indexer$" api="/services/data/indexes" stanza="$stanza$" contenttype="json2" | transpose</query>
      </search>
      <fieldForLabel>column</fieldForLabel>
      <fieldForValue>column</fieldForValue>
      <default>version,app,maxDataSize,repFactor,name,frozenTimePeriodInSecs</default>
      <delimiter>,</delimiter>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>|forwarderquery server="$indexer$" api="/services/data/indexes" stanza="$stanza$" contenttype="json2" | table $fieldlist$</query>
          <earliest>0</earliest>
          <latest></latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>