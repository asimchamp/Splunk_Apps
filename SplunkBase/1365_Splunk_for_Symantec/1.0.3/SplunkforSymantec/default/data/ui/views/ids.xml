<?xml version='1.0' encoding='utf-8'?>
<form>
    <label>Firewall IDS Events</label>
    <fieldset autoRun="true">
        <input type="time" searchWhenChanged="true">
            <default>Today</default>
        </input>
    </fieldset>
    <row>
        <single>
            <searchString>`firewall_ids_event_count`</searchString>
            <option name="beforeLabel">Firewall IDS Events: </option>
        </single>
    </row>
    <row>
        <table>
            <searchString>`firewall_ids_table`</searchString>
            <title>IDS Event Details</title>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
            <option name="maxLines">10</option>
            <option name="segmentation">outer</option>
            <option name="softWrap">true</option>
        </table>
    </row>
</form>
