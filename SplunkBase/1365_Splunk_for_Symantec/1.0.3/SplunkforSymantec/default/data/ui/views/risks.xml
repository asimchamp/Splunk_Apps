<?xml version='1.0' encoding='utf-8'?>
<form>
  <label>Virus/Spyware Information</label>
    <fieldset autoRun="true">
        <input type="time" searchWhenChanged="true">
            <default>Today</default>
        </input>
    </fieldset>  
  <row grouping="3,1">
    <single>
      <searchString>`risk_total_count`</searchString>
      <option name="beforeLabel">Host Risks Detected: </option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </single>
    <single>
      <searchString>`risk_virus_count`</searchString>
      <option name="beforeLabel">Viruses Found: </option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </single>
    <single>
      <searchString>`risk_suspicious_count`</searchString>
      <option name="beforeLabel">Suspicious Events: </option>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
    </single>
    <chart>
        <searchString>`risk_scan_type`</searchString>
        <title>Detections by Scan Type</title>
        <option name="charting.chart">pie</option>
    </chart>
  </row>
  <row>
    <table>
      <searchString>`risk_unmitigated_table`</searchString>
      <title>Hosts with Unmitigated Risks</title>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
      <option name="maxLines">10</option>
      <option name="segmentation">outer</option>
      <option name="softWrap">true</option>
    </table>
  </row>
  <row>
    <table>
      <searchString>`risk_mitigated_table`</searchString>
      <title>Hosts With Mitigated Risks</title>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
      <option name="maxLines">10</option>
      <option name="segmentation">outer</option>
      <option name="softWrap">true</option>
    </table>
  </row>
  <row>
    <table>
      <searchString>`risk_malware_information_table`</searchString>
      <title>Malware Information</title>
      <option name="count">10</option>
      <option name="displayRowNumbers">true</option>
      <option name="maxLines">10</option>
      <option name="segmentation">outer</option>
      <option name="softWrap">true</option>
    </table>
  </row>
</form>
