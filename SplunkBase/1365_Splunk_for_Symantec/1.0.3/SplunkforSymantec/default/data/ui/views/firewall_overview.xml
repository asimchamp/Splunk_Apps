<?xml version='1.0' encoding='utf-8'?>
<dashboard>
    <label>Firewall Overview</label>
    <row>
        <single>
            <searchString>`firewall_overview_events_today`</searchString>
            <earliestTime>@d</earliestTime>
            <latestTime>now</latestTime>
            <option name="beforeLabel">Firewall Events Today: </option>
        </single>
        <single>
            <searchString>`firewall_overview_ids_today`</searchString>
            <earliestTime>@d</earliestTime>
            <latestTime>now</latestTime>
            <option name="beforeLabel">Firewall IDS Events Today: </option>
        </single>
    </row>
    <row>
        <chart>
            <searchString>`firewall_overview_events_month`</searchString>
            <title>Firewall Events per Day</title>
            <earliestTime>-30d@d</earliestTime>
            <latestTime>now</latestTime>
            <option name="charting.axisTitleX.text">Day</option>
            <option name="charting.axisTitleY.text">Firewall Events</option>
            <option name="charting.chart">column</option>
            <option name="charting.legend.placement">none</option>
            <option name="charting.primaryAxisTitle.text"/>
            <option name="charting.secondaryAxisTitle.text"/>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
        </chart>
        <chart>
            <searchString>`firewall_overview_ids_month`</searchString>
            <title>Firewall IDS per Day</title>
            <earliestTime>-30d@d</earliestTime>
            <latestTime>now</latestTime>
            <option name="charting.axisTitleX.text">Day</option>
            <option name="charting.axisTitleY.text">Firewall IDS Events</option>
            <option name="charting.chart">column</option>
            <option name="charting.legend.placement">none</option>
            <option name="charting.primaryAxisTitle.text"/>
            <option name="charting.secondaryAxisTitle.text"/>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
        </chart>
    </row>
</dashboard>
