<?xml version='1.0' encoding='utf-8'?>
<form>
    <label>Scan Information</label>
    <fieldset autoRun="true">
        <input type="time" searchWhenChanged="true">
            <default>Today</default>
        </input>
    </fieldset>
    <row>
        <single>
            <searchString>`scan_distinct_hosts`</searchString>
            <option name="beforeLabel">Hosts Scanned: </option>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
        </single>
        <single>
            <searchString>`scan_num_infected_files`</searchString>
            <option name="beforeLabel">Infected Files: </option>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
        </single>
    </row>
    <row>
        <table>
            <searchString>`scan_infected_table`</searchString>
            <title>Infected Hosts</title>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
            <option name="maxLines">10</option>
            <option name="segmentation">outer</option>
            <option name="softWrap">true</option>
        </table>
    </row>
</form>
