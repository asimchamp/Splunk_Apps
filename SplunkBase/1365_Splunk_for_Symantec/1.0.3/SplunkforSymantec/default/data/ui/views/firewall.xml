<?xml version='1.0' encoding='utf-8'?>
<form>
    <label>Firewall Event Information</label>
    <fieldset autoRun="true">
        <input type="time" searchWhenChanged="true">
            <default>Today</default>
        </input>
    </fieldset>
    <row>
        <single>
            <searchString>`firewall_event_inbound_count`</searchString>
            <option name="beforeLabel">Inbound Firewall Events: </option>
        </single>
        <single>
            <searchString>`firewall_event_outbound_count`</searchString>
            <option name="beforeLabel">Outbound Firewall Events: </option>
        </single>
        <single>
            <searchString>`firewall_event_most_blocked_ip`</searchString>
            <option name="beforeLabel">Most Blocked IP Address: </option>
        </single>
    </row>
    <row>
        <table>
            <searchString>`firewall_event_inbound_table`</searchString>
            <title>Inbound Firewall Events</title>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
            <option name="maxLines">10</option>
            <option name="segmentation">outer</option>
            <option name="softWrap">true</option>
        </table>
    </row>
    <row>
        <table>
            <searchString>`firewall_event_outbound_table`</searchString>
            <title>Outbound Firewall Events</title>
            <option name="count">10</option>
            <option name="displayRowNumbers">true</option>
            <option name="maxLines">10</option>
            <option name="segmentation">outer</option>
            <option name="softWrap">true</option>
        </table>
    </row>
</form>
