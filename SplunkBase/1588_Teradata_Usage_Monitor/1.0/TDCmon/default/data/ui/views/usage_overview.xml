<?xml version='1.0' encoding='utf-8'?>
<dashboard>
  <label>Teradata Usage Overview</label>
  <row>
    <single>
      <searchName>Searches with High Number of Rows Returned Detected</searchName>
      <title>Highest Row Count Past 24 Hours</title>
      <option name="beforeLabel"/>
    </single>
    <table>
      <searchName>24 Hour Database Usage</searchName>
      <title>24 Hour Database Usage</title>
      <option name="count">50</option>
      <option name="dataOverlayMode">heatmap</option>
      <option name="displayRowNumbers">true</option>
    </table>
  </row>
  <row>
    <chart>
      <searchName>High Number of Rows Retrieved</searchName>
      <title>High Number of Rows Retrieved</title>
      <option name="charting.chart">bar</option>
    </chart>
    <chart>
      <searchName>Workload Makeup</searchName>
      <title>Workload Makeup</title>
      <option name="charting.chart">column</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.stackMode">stacked100</option>
      <option name="charting.layout.splitSeries">false</option>
      <option name="charting.legend.placement">bottom</option>
      <option name="charting.primaryAxisTitle.text">Time</option>
      <option name="charting.secondaryAxisTitle.text">Actions</option>
      <option name="drilldown">all</option>
    </chart>
  </row>
  <row>
    <chart>
      <searchString>index="tdcdata" | timechart span=1h count(NumRows) by ClientID</searchString>
      <title>TDC Usage by Client ID's</title>
      <earliestTime>0</earliestTime>
      <option name="charting.axisLabelsY.majorUnit"/>
      <option name="charting.axisTitleX.text">Time by Hour</option>
      <option name="charting.axisTitleY.text">Number of Rows</option>
      <option name="charting.chart">column</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.primaryAxisTitle.text"/>
      <option name="charting.secondaryAxisTitle.text"/>
    </chart>
  </row>
</dashboard>
