<form>
  <label>Flight Search</label>
  
  <!-- define master search template, with replacement tokens delimited with $. This is an example, replace with your own search.-->
  <searchTemplate>sourcetype="airline_csv" OriginCityName="$OriginCityName$" DestCityName="$DestCityName$" AirlineDescription="$AirlineDescription$"</searchTemplate>
  
  <fieldset>
      <!-- the default is a text box, with no seed value; if user does not input
          a value, then the $from$ token in searchTemplate will be removed -->
      
      <input type="dropdown" token="OriginCityName">
        <label>
          Enter an Origin City
        </label>
      
        <choice value="*">Any</choice>             
        <populatingSearch fieldForValue="OriginCityName" fieldForLabel="OriginCityName">
          <![CDATA[sourcetype="airline_csv" | stats count by OriginCityName ]]>
        </populatingSearch>
      
      </input>
    
      <input type="dropdown" token="DestCityName">
        <label>
          Enter a Destination City
        </label>
        
        <choice value="*">Any</choice>             
        <populatingSearch fieldForValue="DestCityName" fieldForLabel="DestCityName">
          <![CDATA[sourcetype="airline_csv" | stats count by DestCityName ]]>
        </populatingSearch>
        
      </input>
    
      <input type="dropdown" token="AirlineDescription">
        <label>
          Enter an Airline
        </label>
        
        <choice value="*">Any</choice>             
        <populatingSearch fieldForValue="AirlineDescription" fieldForLabel="AirlineDescription">
          <![CDATA[sourcetype="airline_csv" | stats count by AirlineDescription ]]>
        </populatingSearch>
        
      </input>

      <input type="time"/>    
    
  </fieldset>
  
  <row>
      <!-- output the results as a 50 row events view -->
      <table>
        <title>Results</title>
        <option name="count">50</option>
      </table>
  </row>
  
</form>
