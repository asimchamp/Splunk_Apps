<form>
  <label>Conversation History</label>
  <description/>
  <row>
    <panel>
      <input type="dropdown" token="user" searchWhenChanged="true">
        <label>Conversation</label>
        <populatingSearch earliest="$earliest$" latest="$latest$" fieldForLabel="fallback_name" fieldForValue="fallback_name">`getuserlist` | where conversation_id!=""</populatingSearch>
      </input>
      <table>
        <searchString>`googlehangouts` | where user_name_conversation="$user$" | table _time user_name_sender text |  sort -_time | rename user_name_sender AS Sender, text as Text</searchString>
        <earliestTime/>
        <latestTime/>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>