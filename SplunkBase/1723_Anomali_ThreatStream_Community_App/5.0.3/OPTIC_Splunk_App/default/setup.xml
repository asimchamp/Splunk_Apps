  <block title="Root URL" endpoint="mycustom/customendpoint" entity="setupentity">
       <input field="url">
         <label> </label>
         <type>text</type>
       </input>
  </block>
  <block title="Account Information" endpoint="mycustom/customendpoint" entity="setupentity">
      <input field="exist_cust">
           <label>I have an account on Anomali Reports</label>
           <type>bool</type>
      </input>
      <input field="new_cust">
           <label>I do not have an account on Anomali Reports</label>
           <type>bool</type>
      </input>
  </block>
  <block title="Anomali Reports Profile Information"
         endpoint="mycustom/customendpoint" entity="setupentity">
         <input field="username">
           <label>User Name</label>
           <type>text</type>
         </input>
         <input field="apikey">
           <label>API Key</label>
           <type>password</type>
         </input>
  </block>
  <block title="Anomali Reports Profile Information"
         endpoint="mycustom/customendpoint" entity="setupentity">
         <input field="user_firstname">
           <label>First Name</label>
           <type>text</type>
         </input>
         <input field="user_lastname">
           <label>Last Name</label>
           <type>text</type>
         </input>
         <input field="user_email">
           <label>Email</label>
           <type>text</type>
         </input>
         <input field="user_phone">
           <label>Phone Number</label>
           <type>text</type>
         </input>
         <input field="user_country">
           <label>Country</label>
           <type>text</type>
         </input>
         <input field="user_password">
           <label>Password</label>
           <type>password</type>
         </input>
  </block>
  <block title="Proxy Settings" endpoint="mycustom/customendpoint" entity="setupentity">
        <input field="proxy_enabled">
            <label>Enable Proxy</label>
            <type>bool</type>
        </input>
        <input field="proxy_host">
            <label>Proxy Host</label>
            <type>text</type>
        </input>
        <input field="proxy_port">
            <label>Proxy Port</label>
            <type>text</type>
        </input>
        <input field="proxy_username">
            <label>Proxy Username</label>
            <type>text</type>
        </input>
        <input field="proxy_password">
            <label>Proxy Password</label>
            <type>password</type>
        </input>
    </block>
    <block title="" endpoint="mycustom/customendpoint" entity="setupentity">
      <input field="eula_ack">
           <label>I agree to Terms of Use and Privacy Policy</label>
           <type>bool</type>
      </input>
    </block>
