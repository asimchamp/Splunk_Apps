<?xml version="1.0" encoding="UTF-8"?>
<view onUnloadCancelJob="True" template="dashboard.html">
	<label>DNS Zone Information</label>
	<module name="AccountBar" layoutPanel="appHeader" />
	<module name="AppBar" layoutPanel="appHeader" />
	<module name="SideviewUtils" layoutPanel="appHeader" />

	<module name="Message" layoutPanel="messaging">
		<param name="filter">*</param>
		<param name="clearOnJobDispatch">False</param>
		<param name="maxSize">1</param>
	</module>

	<module name="TitleBar" layoutPanel="viewHeader"/>

	<module name="GenericHeader" layoutPanel="panel_row1_col1_grp1"><param name="label">DNS Server Status</param></module>

	<module name="URLLoader" layoutPanel="panel_row1_col1" autoRun="true">
	
		<module name="TimeRangePicker" layoutPanel="panel_row1_col1_grp2">
			<param name="default">Last 60 minutes</param>
			<param name="searchWhenChanged">true</param>
		
			<module name="Search">
				<param name="search"><![CDATA[eventtype=msad-dns-zoneinfo|stats count by Zone|table Zone|sort Zone]]></param>
				<module name="Pulldown" layoutPanel="panel_row1_col1_grp3">
					<param name="name">Zone</param>
					<param name="size">1</param>
					<param name="width">300px</param>
					<param name="staticFieldsToDisplay"></param>
					<param name="label">DNS Zone:</param>
					<param name="searchFieldsToDisplay"><list><param name="label">Zone</param><param name="value">Zone</param></list></param>

					<module name="Search" layoutPanel="panel_row2_col1">
						<param name="search"><![CDATA[eventtype=msad-dns-zoneinfo Zone="$Zone$"|tail 1|table Zone,Aging,AllowUpdate,AutoCreated,AvailForScavengeTime,Caption,DsIntegrated,ForwarderSlave,ForwarderTimeout,NoRefreshInterval,RefreshInterval,Paused,Reverse,Shutdown,Status|transpose]]></param>
						<module name="GenericHeader"><param name="label">Zone Settings</param></module>
						<module name="SimpleResultsTable">
							<param name="count">15</param>
						</module>
					</module> <!-- Search -->
					
					<module name="Search" layoutPanel="panel_row2_col2">
						<param name="search"><![CDATA[eventtype=msad-dns-zoneinfo Zone="$Zone$"|dedup host|table host,A,AAAA,CNAME,HINFO,MX,NS,SOA,SRV,TXT,TotalRecords]]></param>
						<module name="GenericHeader"><param name="label">DNS Servers</param></module>
						<module name="Pager">
							<param name="count">15</param>
							<module name="SimpleResultsTable">
								<param name="count">15</param>
								<param name="drilldown">row</param>
								<module name="Redirector">
									<param name="url">ops_dns_server_status</param>
									<param name="arg.autoRun">True</param>
									<param name="arg.host">$click.cell0.value$</param>
									<param name="arg.earliest">$search.timeRange.earliest$</param>
									<param name="arg.latest">$search.timeRange.latest$</param>
								</module> <!-- Redirector#Drill Down -->
							</module>
						</module>
					</module>
									
				</module> <!-- Pulldown#host -->
			</module> <!-- Search#host Pulldown -->
		</module> <!-- TimeRangePicker -->
	</module> <!-- URLLoader -->
</view>
