<?xml version="1.0" encoding="UTF-8"?>
<view onUnloadCancelJob="True" template="dashboard.html">
	<label>Replication Issues</label>
	<module name="AccountBar" layoutPanel="appHeader" />
	<module name="AppBar" layoutPanel="appHeader" />
	<module name="SideviewUtils" layoutPanel="appHeader" />

	<module name="Message" layoutPanel="messaging">
		<param name="filter">*</param>
		<param name="clearOnJobDispatch">False</param>
		<param name="maxSize">1</param>
	</module>

	<module name="TitleBar" layoutPanel="viewHeader"/>
	<module name="HTML" layoutPanel="panel_row1_col1">
		<param name="html"><![CDATA[<h2>Active Directory Replication Health</h2>]]></param>
	</module>

	<!-- The Time Range Picker feeds the picker for the Column Selector -->
	<module name="TimeRangePicker" layoutPanel="panel_row1_col1_grp1" autoRun="True">
		<param name="default">Last 60 minutes</param>
		<param name="searchWhenChanged">True</param>
		
		<!-- Search for the MSAD Topology so we can render it in the Column Selector -->
		<module name="Search" layoutPanel="panel_row2_col1">
			<param name="search">|`domain-selector`</param>
			<module name="JobProgressIndicator"></module>

			<module name="ColumnSelector">
				<param name="drilldownPrefix">domainselection</param>
				<param name="defaultState">true</param>
				<param name="autoSelector">both</param>
				<param name="loadFromCookie">true</param>
				<param name="cookieName">domainselection</param>
				<param name="columns">
					<param name="ForestName">
						<param name="title">Forest</param>
						<param name="weight">0</param>
					</param>
					<param name="Site">
						<param name="title">Site</param>
						<param name="weight">1</param>
					</param>
					<param name="DomainDNSName">
						<param name="title">Domain</param>
						<param name="weight">2</param>
					</param>
					<param name="host">
						<param name="title">Server</param>
						<param name="weight">3</param>
					</param>
				</param>
			
				<!-- Beginning of main page -->
				<module name="Search" layoutPanel="panel_row1_col1_grp2">
					<param name="search"><![CDATA[eventtype=msad-rep-health $domainselection.host$|stats count by naming_context]]></param>
					<module name="Pulldown">
						<param name="name">naming_context</param>
						<param name="template">naming_context="$value$"</param>
						<param name="label">Naming Context:</param>
						<param name="searchFieldsToDisplay">
							<list>
								<param name="label">naming_context</param>
								<param name="value">naming_context</param>
							</list>
						</param>
					
						<module name="Search" layoutPanel="panel_row3_col1">
							<param name="search"><![CDATA[eventtype=msad-rep-health $domainselection.host$ $naming_context$|dedup host,src_host,naming_context|table naming_context,src_host,host,transport,LastAttemptedSync,Result|rename naming_context as "Context",src_host as "Source",host as "Destination",transport as "Transport",LastAttemptedSync as "Last Attempted Sync",Result as "Error Code"]]></param>
							<module name="JobProgressIndicator"></module>
							<module name="GenericHeader"><param name="label">Replication Agreements</param></module>
							<module name="Pager">
								<param name="count">10</param>
								<module name="SimpleResultsTable">
									<param name="count">10</param>
								</module> <!-- SimpleResultsTable -->
							</module> <!-- Pager -->
						</module> <!-- Search for table -->
						
						<module name="Search" layoutPanel="panel_row4_col1">
							<param name="search"><![CDATA[eventtype=msad-rep-errors $domainselection.host$|lookup EventCodes EventCode,LogName OUTPUTNEW desc|eval desc=if(isnull(desc),"Unknown EventCode",desc)|stats count by host,Type,EventCode,LogName,desc]]></param>
							<module name="JobProgressIndicator"></module>
							<module name="GenericHeader"><param name="label">Replication Health Errors</param></module>
						<module name="Pager">
							<param name="entityName">results</param>
							<module name="SimpleResultsTable">
								<param name="drilldown">row</param>
								<module name="Redirector">
									<param name="url">flashtimeline</param>
									<param name="arg.autoRun">True</param>
									<param name="arg.q"><![CDATA[eventtype=msad-rep-events host="$click.cell0.value$" Type="$click.cell1.value$" EventCode="$click.cell2.value$" LogName="$click.cell3.value$"]]></param>
									<param name="arg.earliest">$search.timeRange.earliest$</param>
									<param name="arg.latest">$search.timeRange.latest$</param>
								</module>
							</module>
						</module>	
						</module>
					</module> <!-- Pulldown for naming_context -->
				</module> <!-- Search for naming_context -->
				<!-- End of main page -->
			</module> <!-- ColumnSelector -->
		</module> <!-- Search driver for Column selector -->
	</module> <!-- TimeRangePicker -->
</view>
