<?xml version="1.0" encoding="UTF-8"?>
<view onUnloadCancelJob="True" template="dashboard.html">
	<label>Org Units: Deleted</label>
	<module name="AccountBar" layoutPanel="appHeader" />
	<module name="AppBar" layoutPanel="appHeader" />
	<module name="SideviewUtils" layoutPanel="appHeader" />

	<module name="Message" layoutPanel="messaging">
		<param name="filter">*</param>
		<param name="clearOnJobDispatch">False</param>
		<param name="maxSize">1</param>
	</module>

	<module name="TitleBar" layoutPanel="viewHeader"/>

	<module name="URLLoader" layoutPanel="panel_row1_col1">
		
		<module name="HTML"><param name="html"><![CDATA[<p>List of all OUs (Organizational Units) in the domain that have
			been deleted in the time range.</p>]]></param></module>
		
		<module name="TimeRangePicker" layoutPanel="panel_row1_col1_grp1" autoRun="True">
			<param name="default">Last 24 hours</param>
			<param name="searchWhenChanged">True</param>
			
			<module name="Search">
				<param name="search"><![CDATA[|`ad-domains`]]></param>
				<module name="Pulldown" layoutPanel="panel_row1_col1_grp2">
					<param name="name">src_nt_domain</param>
					<param name="label">Domain:</param>
					<param name="postProcess">$postProcess$|dedup $name$|sort $name$</param>
					<param name="staticFieldsToDisplay"></param>
					<param name="searchFieldsToDisplay">
						<list>
							<param name="label">src_nt_domain</param>
							<param name="value">src_nt_domain</param>
						</list>
					</param>
				
					<module name="Search" layoutPanel="panel_row2_col1">
						<param name="search">`secrpt-deleted-orgunits($src_nt_domain$)`</param>
						<module name="JobProgressIndicator"></module>
						<module name="Pager">
							<param name="count">25</param>
							<module name="SimpleResultsTable">
								<param name="count">25</param>
								<param name="drilldown">row</param>
								<module name="Redirector">
									<param name="url">audit_ou</param>
									<param name="arg.object">$click.cell1.value$</param>
									<param name="arg.domain">$src_nt_domain$</param>
									<param name="arg.earliest">$search.timeRange.earliest$</param>
									<param name="arg.latest">$search.timeRange.latest$</param>
								</module> <!-- Redirector -->
							</module> <!-- SimpleResultsTable -->
						</module> <!-- Pager -->
						<module name="ViewRedirectorLink">
							<param name="label">Show in Search App</param>
							<param name="viewTarget">flashtimeline</param>
						</module>
					</module> <!-- Search for Report -->
				</module> <!-- Pulldown for Domain -->
			</module> <!-- Search for domains -->
		</module> <!-- TimeRangePicker -->
	</module> <!-- URLLoader -->
</view>
