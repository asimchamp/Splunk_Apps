<endpoint name="data/inputs/sshfs">
<header>SSHFS</header>
<breadcrumb>
    <parent hidecurrent="False">datainputstats</parent>
    <name>SSHFS</name>
</breadcrumb>
<elements>
    <element name="sourceFields" type="fieldset">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>
      <elements>
	<element name="name" label="SSHFS Input Name">
		<view name="list"/>
		<view name="create"/>
		<key name="exampleText">Name of this SSHFS input</key>
	</element>
        <element name="user" label="Remote username">
                <view name="list"/>
		<view name="edit"/>
                <view name="create"/>
                <key name="exampleText">Username for SSH connection (for example john)</key>
        </element>
        <element name="address" label="Remote address">
                <view name="list"/>
                <view name="edit"/>
                <view name="create"/>
                <key name="exampleText">Remote IP or hostname</key>
        </element>
        <element name="port" label="Remote port">
                <view name="list"/>
                <view name="edit"/>
                <view name="create"/>
                <key name="exampleText">Remote port for SSH connection. Defaults to 22</key>
        </element>
        <element name="dir" label="Remote chroot directory">
                <view name="list"/>
                <view name="edit"/>
                <view name="create"/>
                <key name="exampleText">Set the root directory to mount. Defaults to /</key>
        </element>
        <element name="auth" label="Authentication method" type="select">
                <view name="list"/>
                <view name="edit"/>
                <view name="create"/>
		<onChange>
			<key name="_action">showonly</key>
			<group_set>
				<group name="priv" />
				<group name="pass" />
			</group_set>
			<key name="PASS">pass</key>
			<key name="ECDSA">priv</key>
			<key name="RSA">priv</key>
			<key name="DSA">priv</key>
		</onChange>
                <key name="exampleText">Set the authentication method, for example ECDSA when you enter ECDSA private key</key>
		<options>
            		<opt value="PASS" label="Password"/> 
            		<opt value="ECDSA" label="Private key (ECDSA)"/>
            		<opt value="RSA" label="Private key (RSA)"/>
            		<opt value="DSA" label="Private key (DSA)"/>
		</options>
        </element>
	<element name="pass" type="fieldset">
		<view name="list"/>
                <view name="edit"/>
                <view name="create"/>
		<elements>
			<element name="password" label="Password for SSH connection" type="password">
				<view name="list"/>
				<view name="edit"/>
				<view name="create"/>
				<key name="exampleText">Set the password for SSH connection</key>
			</element>
		</elements>
	</element>
        <element name="priv" type="fieldset">
		<view name="list"/>
                <view name="edit"/>
                <view name="create"/>
		<elements>
                        <element name="privkey" label="Private key for SSH connection" >
                                <view name="list"/>
                                <view name="edit"/>
                                <view name="create"/>
                                <key name="exampleText">Set the private key for SSH connection</key>
                        </element>
		</elements>
	</element>
    </elements>
  </element>
</elements>
</endpoint>
