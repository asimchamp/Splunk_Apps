<form>
  <label>Station Performance</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="selector" searchWhenChanged="true">
      <label>Select Time</label>
      <default>
        <earliest>-1d@d</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="station" searchWhenChanged="true">
      <label>Select Station</label>
      <search>
        <query>| pivot EnergyData EnergyLoad count(EnergyLoad) AS "count(EnergyLoad)" SPLITROW StationName AS "StationName" SPLITROW StationId AS StationId SORT 100 StationName ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 |table StationName StationId</query>
        <earliest>0</earliest>
        <latest></latest>
      </search>
      <fieldForLabel>StationName</fieldForLabel>
      <fieldForValue>StationId</fieldForValue>
      <choice value="Select">Please Select</choice>
      <default>Select</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Peak Electricity Demand In The Period</title>
      <single>
        <search>
          <query>| pivot EnergyData EnergyLoad sum(ElectricityTotal) AS "Total" SPLITROW _time AS _time PERIOD day FILTER StationId is "$station$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 | stats  max(Total) As MaxTotal</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="afterLabel">kW</option>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <title>Peak Gas Demand In The Period</title>
      <single>
        <search>
          <query>| pivot EnergyData EnergyLoad sum(GasTotal) AS "Total" SPLITROW _time AS _time PERIOD day FILTER StationId is "$station$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 | stats  max(Total) As MaxTotal</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="afterLabel">kW</option>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Daily Electricity Energy Profile</title>
      <chart>
        <search>
          <query>sourcetype=PowerTMY3Data source ="*$station$*"  | eval Time = _time  | chart sum(ElectricityCooling) As "Electricity - Cooling" sum(ElectricityFacility) As "Electricity - Facility" sum(ElectricityApplianceInteriorEquipment) As "Electricity - Appliance Interior Equipment" sum(ElectricityHVAC) As "Electricity - HVAC" sum(ElectricityFan) As "Electricity - Fan" sum(ElectricityExteriorLights) As "Electricity - Exterior Lights" sum(ElectricityInteriorLights) As "Electricity - Interior Lights" sum(ElectricityHVACFan) As "Electricity - HVAC Fan" sum(ElectricityHeating) As "Electricity - Heating" sum(ElectricityMiscInteriorEquipment) As "Electricity - Misc Interior Equipment"  by Time span=day | eval Time=strftime(Time, "%m/%d")</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.axisTitleY.text">Demand (kW)</option>
        <option name="charting.axisTitleX.text">Date</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Daily Gas Energy Profile</title>
      <chart>
        <search>
          <query>sourcetype=PowerTMY3Data source ="*$station$*"  | eval Time = _time  | chart sum(GasFacility) As "Gas - Facility" sum(GasHeating) As "Gas - Heating"  by Time span=day | eval Time=strftime(Time, "%m/%d")</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.axisTitleY.text">Demand (kW)</option>
        <option name="charting.axisTitleX.text">Date</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Top Monthly Electricity Peak Demand</title>
        <search>
          <query>| pivot EnergyData EnergyLoad sum(ElectricityTotal) AS "Total" SPLITROW _time  PERIOD day FILTER StationId is "$station$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 | chart max(Total) as "Peak Demand" by _time span=month  | sort -"Peak Demand"</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.axisTitleX.text">Month</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Electricity - Total Carbon Footprint</title>
        <search>
          <query>sourcetype=PowerTMY3Data  source ="*$station$*" | stats sum(ElectricityCooling) As "Electricity - Cooling" sum(ElectricityFacility) As "Electricity - Facility" sum(ElectricityApplianceInteriorEquipment) As "Electricity - Appliance Interior Equipment" sum(ElectricityHVAC) As "Electricity - HVAC" sum(ElectricityFan) As "Electricity - Fan" sum(ElectricityExteriorLights) As "Electricity - Exterior Lights" sum(ElectricityInteriorLights) As "Electricity - Interior Lights" sum(ElectricityHVACFan) As "Electricity - HVAC Fan" sum(ElectricityHeating) As "Electricity - Heating" sum(ElectricityMiscInteriorEquipment) As "Electricity - Misc Interior Equipment" | transpose</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Monthly Gas Peak Demand</title>
        <search>
          <query>| pivot EnergyData EnergyLoad sum(GasTotal) AS "Total" SPLITROW _time  PERIOD day FILTER StationId is "$station$" SORT 100 _time ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 | chart max(Total) as "Peak Demand" by _time span=month  | sort -"Peak Demand"</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">none</option>
        <option name="charting.axisTitleX.text">Month</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Gas - Total Carbon Footprint</title>
        <search>
          <query>sourcetype=PowerTMY3Data  source ="*$station$*" | stats sum(GasFacility) As "Gas - Facility" sum(GasHeating) As "Gas - Heating"  | transpose</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>
  </row>
</form>