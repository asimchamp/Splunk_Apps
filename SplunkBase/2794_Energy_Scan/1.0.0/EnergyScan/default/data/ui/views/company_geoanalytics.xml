<form>
  <label>Company GeoAnalytics</label>
  <fieldset submitButton="false">
    <input type="time" token="selector" searchWhenChanged="true">
      <label>Select Time</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Geo Analytics</title>
      <map>
        <search>
          <query>| pivot EnergyData EnergyLoad sum(EnergyTotal) AS "EnergyTotal" SPLITROW StationName AS "Station Name" SPLITROW Latitude AS Latitude SPLITROW Longitude AS Longitude  SORT 100 StationName ROWSUMMARY 0 COLSUMMARY 0 NUMCOLS 0 SHOWOTHER 1 | geostats latfield=Latitude longfield=Longitude sum(EnergyTotal) | rename "sum(EnergyTotal)" AS "Energy - Total"</query>
          <earliest>$selector.earliest$</earliest>
          <latest>$selector.latest$</latest>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.drilldown">all</option>
        <option name="mapping.map.center">(50.74,-108.37)</option>
        <option name="mapping.map.zoom">3</option>
        <option name="mapping.map.zoom">3</option>
        <option name="mapping.markerLayer.markerMaxSize">100</option>
        <option name="mapping.markerLayer.markerMinSize">20</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">none</option>
      </map>
    </panel>
  </row>
</form>