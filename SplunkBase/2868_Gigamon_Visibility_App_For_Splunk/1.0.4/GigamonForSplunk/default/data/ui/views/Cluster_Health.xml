<form script="cubism_wrap.js, gigamaps_wrap.js, heatmap_wrap.js, dashboard.js, tabs.js, d3.v2.min.js" stylesheet="dashboard.css, tabs.css">
  <label>Cluster/Node Overview</label>
  <search id="base_lookups">
    <query>|inputlookup giga_clusters | inputlookup giga_ports append=t | inputlookup giga_cards append=t| search clusterId = $clusterId$</query>
  </search>
  <search id="base_users">
    <query>`giga_service("users")` deviceAddress=$clusterId$ | head 1</query>
  </search>
  <search id="cubism_stats_search">
    <query>|`giga_cubism_port_stats($clusterId$,*)`</query>
    <earliest>$time_range.earliest$</earliest>
    <latest>$time_range.latest$</latest>
  </search>
  <search id="gigamaps_search">
    <query>|`lookup_maps`|search clusterId=$clusterId$</query>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="dropdown" token="clusterId" searchWhenChanged="true">
      <label>Cluster/Node</label>
      <search>
        <query>|inputlookup giga_clusters | stats count by clusterId</query>
      </search>
      <fieldForLabel>clusterId</fieldForLabel>
      <fieldForValue>clusterId</fieldForValue>
    </input>
    <input type="time" token="time_range" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row id="tabs">
    <panel>
      <html>
	         <ul id="tabs" class="nav nav-tabs">
                    <li class="active">
                        <a href="#" class="toggle-tab" data-toggle="tab" data-elements="quickhits,clusterinformation">Administrative</a>
                    </li>

               
           
		 </ul>
	      </html>
    </panel>
  </row>
  <row id="quickhits">
    <panel>
      <single>
        <title>Health Status</title>
        <search base="base_lookups">
          <query>where isnotnull(health) | eval health = case(health=="green","Normal",health=="red","Critical",health=="yellow","Warning",1==1,Unknown)|table health</query>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Total Ports</title>
        <search base="base_lookups">
          <query>where isnotnull(portId) | stats dc(portId)</query>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>FM Host</title>
        <search base="base_users">
          <query>table host</query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <option name="drilldown">none</option>
      </single>
    </panel>
  </row>
  <row id="clusterinformation">
    <panel>
      <table>
        <title>Cluster Information</title>
        <search base="base_lookups">
          <query>where isnotnull(family) | fields box_id clusterId cluster_mode device_ips family fmhost membername src_ip vendor_product version</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
      <table>
        <title>Installed Hardware Cards</title>
        <search base="base_lookups">
          <query>where isnotnull(slotId)| fields slotId adminStatus operStatus healthState hwType hwRevision productCode serialNumber</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>
