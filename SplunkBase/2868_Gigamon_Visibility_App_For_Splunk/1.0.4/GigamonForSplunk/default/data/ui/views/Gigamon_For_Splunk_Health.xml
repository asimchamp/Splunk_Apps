<form script="dashboard.js" stylesheet="dashboard.css" refresh="300">
  <label>Gigamon Visibility App Health</label>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="field1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <search id="api_events_base">
    <query>|`giga_overview_api_events`</query>
    <earliest>$field1.earliest$</earliest>
    <latest>$field1.latest$</latest>
  </search>
  <row>
    <panel>
      <title>API Event Counts</title>
      <single>
        <title>License Events</title>
        <search base="api_events_base">
          <query>search sourcetype=gigamon:api:service:license|stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
      <single>
        <title>Node Events</title>
        <search base="api_events_base">
          <query>search sourcetype=gigamon:api:service:node|stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
      <single>
        <title>Port Events</title>
        <search base="api_events_base">
          <query>search sourcetype=gigamon:api:service:port|stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
      <single>
        <title>Stats Events</title>
        <search base="api_events_base">
          <query>search sourcetype=gigamon:api:service:stats|stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Syslog Events</title>
      <single>
        <title>Syslog Events</title>
        <search>
          <query>`giga_syslogs` | stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <table>
        <title>Average Duration of Modular Input Run</title>
        <search>
          <query>index=_internal source=*gigamon* key=modular_input | transaction startswith="status=start" endswith="status=stop" gkey | stats avg(duration) as "Duration (s)" sparkline(avg(duration)) as "Over Time" by gkey | rename gkey AS "FM"</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">undefined</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
        <format type="sparkline" field="Over Time">
          <option name="type">bar</option>
        </format>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>API Errors</title>
        <search>
          <query>tag=api_error `giga_error` |rex field=error_message "(?&lt;error_code&gt;\d+)(?&lt;error_type&gt;[^:]+):\sreason=\"(?&lt;reason&gt;[^\"]+).+additional_info=\"(?&lt;additional_info&gt;[^\"]+)"|eval adi = coalesce(additional_info, error_message)| stats count values(error_code) as ErrorCode values(error_type) as ErrorType values(reason) as Reason by  host  adi</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">undefined</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
      <table>
        <title>Unknown Errors</title>
        <search>
          <query>`giga_error` NOT tag::eventtype=* |rex field=error_message "(?&lt;error_code&gt;\d+)(?&lt;error_type&gt;[^:]+):\sreason=\"(?&lt;reason&gt;[^\"]+).+additional_info=\"(?&lt;additional_info&gt;[^\"]+)" |stats count by host error_code error_type reason additional_info</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <title>Setup Errors</title>
      <table>
        <title>Connection Errors</title>
        <search>
          <query>`giga_error`  tag=connection tag=failure | rex field=error_message ":\s\[(?&lt;err_no&gt;[^\]]*)\]\s(?&lt;err_msg&gt;[^\)]+)" |stats count by host err_no err_msg url</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">undefined</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
      <table>
        <title>Authorization Errors</title>
        <search>
          <query>`giga_error` tag=authentication tag=failure | stats count by host error_message</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">undefined</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>
