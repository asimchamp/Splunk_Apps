                    <label>* Name: </label>
                    <input id="createSearchNameTI" type="text" style="width:450px;"/>
                  </div>
                  <div class="control-group">
                    <label>* Search: </label>
                    <textarea rows="4" id="createSearchTA" style="margin-top:10px;height:130px;width:450px;"></textarea>
                  </div>
                  <div class="control-group">
                    <button id="createSavedSearchButton" class="btn btn-default" type="button" style="display:inline-block;">Create Saved Search</button>
                    <span id="createSavedSearchMessage" class="xsv-success-message"></span>
                    <span id="createSavedSearchError" class="xsv-error-message"></span>
                  </div>
                </div>
                <div style="margin-bottom:20px;">
                  <h3>Update Context Saved Search</h3>
                  <div class="control-group">
                    <label>* Name: </label>
                    <input id="updateSearchNameTI" type="text" style="width:450px;"/>
                  </div>
                  <div class="control-group">
                    <label>* Search: </label>
                    <textarea rows="4" id="updateSearchTA" style="margin-top:10px; height:130px;width:450px;display:inline-block;"></textarea>
                  </div>
                  <div class="control-group">
                    <button id="updateSavedSearchButton" class="btn btn-default" type="button" style="display:inline-block;">Create Saved Search</button>
                    <span id="updateSavedSearchMessage" class="xsv-success-message"></span>
                    <span id="updateSavedSearchError" class="xsv-error-message"></span>
                  </div>
                </div>
              </div>
              <div id="contextData"></div>
              <div id="contextAttributes"></div>
              <div id="conceptShape"></div>
              <div id="createSearchResponse"></div>
              <div id="updateSearchResponse"></div>
            </div>
