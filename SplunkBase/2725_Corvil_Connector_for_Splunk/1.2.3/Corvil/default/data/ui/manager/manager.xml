<endpoint name="data/inputs/corvil">
    <header>Corvil Plugin</header>
    <breadcrumb>
        <parent hidecurrent="False">datainputstats</parent>
        <name>Corvil</name>
    </breadcrumb>
    <elements>
        <element name="name" label="Input Name">
            <view name="list"/>
            <view name="create"/>
        </element>
        <element name="hostFields" type="fieldset">
            <key name="legend">CNE Address</key>
            <view name="list"/>
            <view name="edit"/>
            <view name="create"/>
            <elements>
                <element name="Hostname" type="textfield" label="CNE Address">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Hostname or IP address of the CNE publishing the Analytics Stream</key>
                </element>
                <element name="Port-Number" type="textfield" label="CNE Port">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="requiredIfVisible" />
                    <key name="exampleText">Port number of the CNE publishing the Analytics Stream</key>
                </element>
                <element name="Allow-Self-Signed" type="checkbox" label="Allow Self Signed Certificates">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Select to allow Self Signed certificates to be used on the CNE connection.</key>
                </element>
            </elements>
        </element>
        <element name="credentialsFields" type="fieldset">
            <key name="legend">CNE Credentials</key>
            <view name="edit"/>
            <view name="create"/>
            <elements>
                <element name="Use-Auth-Script" type="checkbox" label="Retrieve Authorization details from script.">
                      <onChange>
                          <key name="_action">showonly</key>
                          <key name="0">Gui-Auth</key>
                          <key name="1">Auth-Script</key>
                          <group_set>
                              <group name="Gui-Auth"/>
                              <group name="Auth-Script"/>
                          </group_set>
                      </onChange>
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText"> Select to specify the location of an executable script to use to retrieve authorization details for the CNE </key>
                </element>
                <element name="Gui-Auth" type="fieldset">
                    <view name="edit"/>
                    <view name="create"/>
                    <elements>
                        <element name="Username" type="textfield" label="Username">
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="exampleText">CNE login name</key>
                            <key name="requiredIfVisible" />
                        </element>
                        <element name="Password" type="password" label="Password">
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="exampleText">CNE login password</key>
                            <key name="processValueAdd">''</key>
                            <key name="processValueEdit">''</key>
                            <key name="requiredIfVisible" />
                        </element>
                      </elements>
                </element>
                <element name="Auth-Script" type="textfield" label="Auth. Script">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Add location of executable script to retrieve auth details for CNE.</key>
                    <key name="requiredIfVisible" />
                </element>
            </elements>
        </element>
        <element name="analyticStreamFields" type="fieldset">
            <key name="legend">CNE Analytics Stream</key>
            <view name="list"/>
            <view name="edit"/>
            <view name="create"/>
            <elements>
                <element name="Analytic-Stream-Name" type="textfield" label="Analytics Stream Name">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Name of the Analytics Stream to forward to splunk</key>
                </element>
                <element name="Event-Types" type="textfield" label="Event Types">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Analytics Stream event types to forward to splunk (comma separated, leave blank to publish all)</key>
                </element>
                <element name="Receive-Heartbeats" type="checkbox" label="Include Heartbeats">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Include Heartbeat messages with Analytics Stream events</key>
                </element>
                <element name="Only-Violations-Events" type="checkbox" label="Only Include Events In Violation">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Only include Analytics Stream events in violation of the service objectives</key>
                </element>
                <element name="Include-Links" type="checkbox" label="Include links to the Corvil appliance">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Include links to the Corvil appliance in each event (message-url must be enabled on the appliance)</key>
                </element>
                <element name="Suppressed-Fields" type="textfield" label="Suppressed Fields">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Fields to be suppressed (comma separated, leave blank to publish all)</key>
                </element>
            </elements>
        </element>
        <element name="spl-ctrl_EnableAdvanced" type="checkbox"
                 label="More settings" class="spl-mgr-advanced-switch">
            <view name="edit"/>
            <view name="create"/>
            <onChange>
                <key name="_action">showonly</key>
                <key name="0">NONE</key>
                <key name="1">ALL</key>
                <group_set>
                    <group name="advanced"/>
                </group_set>
            </onChange>
        </element>
        <element name="advanced" type="fieldset" class="spl-mgr-advanced-options">
            <view name="edit"/>
            <view name="create"/>
            <elements>
                <element name="sourcetypeFields" type="fieldset">
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <elements>
                        <element name="spl-ctrl_sourcetypeSelect" type="select" label="Set the source type">
                            <onChange>
                                <key name="auto">NONE</key>
                                <key name="_action">showonly</key>
                                <group_set>
                                    <group name="sourcetype"/>
                                    <group name="spl-ctrl_from_list"/>
                                </group_set>
                                <key name="sourcetype">sourcetype</key>
                                <key name="spl-ctrl_from_list">spl-ctrl_from_list</key>
                            </onChange>
                            <options>
                                <opt value="auto" label="Automatic"/>
                                <opt value="sourcetype" label="Manual"/>
                                <opt value="spl-ctrl_from_list" label="From list"/>
                            </options>
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="exampleText">When this is set to automatic, Splunk classifies and
                                assigns the sourcetype automatically, and gives unknown sourcetypes
                                placeholder names.</key>
                            <key name="processValueEdit">[[ e for e in ['sourcetype']
                                if form_defaults.get(e) ][0]]</key>
                            <key name="processValueAdd">[[ e for e in ['sourcetype']
                                if form_defaults.get(e) ][0]]</key>
                        </element>
                        <element name="sourcetype" type="textfield" label="Source type">
                            <view name="list"/>
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="processValueList">_('Automatic') if (value==None or value=='') else value</key>
                            <key name="submitValueAdd">value if
                                form_data.get('spl-ctrl_sourcetypeSelect')=='sourcetype'
                                else (form_data.get('spl-ctrl_from_list')
                                if form_data.get('spl-ctrl_sourcetypeSelect')=='spl-ctrl_from_list'
                                else '')</key>
                            <key name="submitValueEdit">value if
                                form_data.get('spl-ctrl_sourcetypeSelect')=='sourcetype'
                                else (form_data.get('spl-ctrl_from_list')
                                if form_data.get('spl-ctrl_sourcetypeSelect')=='spl-ctrl_from_list'
                                else '')</key>
                            <key name="labelList">Source type</key>
                        </element>
                        <element name="spl-ctrl_from_list" type="select" label="Select source type from list">
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="exampleText">Splunk classifies all common data types automatically,
                                but if you're looking for something specific, you can find more source types
                                in the <![CDATA[<a href="../../../apps/remote">Splunk Apps apps browser</a>]]>
                                or online at <![CDATA[<a href="http://apps.splunk.com/"
        target="_blank">http://apps.splunk.com</a>]]>.</key>
                            <key name="requiredIfVisible" />
                            <key name="dynamicOptions" type="dict">
                                <key name="prefixOptions" type="list">
                                    <item type="list">
                                        <item></item>
                                        <item>Choose...</item>
                                    </item>
                                </key>
                                <key name="keyName">title</key>
                                <key name="keyValue">title</key>
                                <key name="splunkSource">/saved/sourcetypes</key>
                                <key name="splunkSourceParams" type="dict">
                                    <key name="count">-1</key>
                                    <key name="search">'pulldown_type=true'</key>
                                </key>
                            </key>
                        </element>
                    </elements>
                    <key name="legend">Source type</key>
                    <key name="helpText">Tell Splunk what kind of data this is so you can group it with
                        other data of the same type when you search. Splunk does this
                        automatically, but you can specify what you want if Splunk gets it
                        wrong.</key>
                </element>
                <element name="indexField" type="fieldset">
                    <key name="legend">Index</key>
                    <key name="helpText">Set the destination index for this source.</key>
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <elements>
                        <element name="index" type="select" label="Index">
                            <view name="list"/>
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="dynamicOptions" type="dict">
                                <key name="keyName">title</key>
                                <key name="keyValue">title</key>
                                <key name="splunkSource">/data/indexes</key>
                                <key name="splunkSourceParams" type="dict">
                                    <key name="search">'isInternal=false disabled=false'</key>
                                    <key name="count">-1</key>
                                </key>
                            </key>
                        </element>
                    </elements>
                </element>

                <element name="Rate Limiter" type="fieldset">
                    <key name="legend">Rate Limiter</key>
                    <view name="list"/>
                    <view name="edit"/>
                    <view name="create"/>
                    <elements>
                        <element name="Rate-Limit-Count" type="textfield" label="Message Count">
                            <view name="list"/>
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="exampleText">Maximum number of message that can be sent within the Period</key>
                        </element>
                        <element name="Rate-Limit-Period" type="textfield" label="Period">
                            <view name="list"/>
                            <view name="edit"/>
                            <view name="create"/>
                            <key name="exampleText">Duration of the period for the rate limiter (Minutes)</key>
                        </element>
                    </elements>
                </element>

                <element name="Encrypt-Password" type="checkbox" label="Encrypt Password">
                    <view name="edit"/>
                    <view name="create"/>
                    <key name="exampleText">Select to store CNE password encrypted.</key>
                </element>
            </elements>
        </element>
        <element name="eai:acl.app" label="App">
            <view name="list"/>
            <key name="processValueList">entity['eai:acl']['app'] or ""</key>
        </element>
    </elements>
</endpoint>
