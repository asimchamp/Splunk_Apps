<form version="1.1">
  <label>Security Reports</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="WF_search"></search>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Top Attacking Clients</title>
        <search>
          <query>sourcetype="firewall" | where unit_name = "$unit_name$" | stats count BY client_ip | sort - count | head 15| rename client_ip AS Client_IP | rename count AS "# of Attacks"</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Clients</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Attacked Services</title>
        <search>
          <query>sourcetype="firewall" | where unit_name = "$unit_name$" |eval ip_port = app_ip +":"+ app_port | stats count BY ip_port | head 15 | rename ip_port AS "Service"| rename count AS "# of Attacks"</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Service</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">bar</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Top Attacked Domains</title>
        <search>
          <query>sourcetype="firewall" | where unit_name = "$unit_name$"|eval domain_url=split(URL,"/")|eval Domain=mvindex(domain_url,0) | stats count BY Domain|head 10 | RENAME count AS "# of Attacks"</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Domains</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Top Attacked URLs</title>
        <search>
          <query>sourcetype="firewall" | where unit_name = "$unit_name$"|chart count BY URL | head 10| rename count AS "# of Attacks"</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Types of Attacks - Timechart</title>
        <search>
          <query>sourcetype="firewall" Attack_Description !=NULL | where unit_name = "$unit_name$" | timechart count BY Attack_Description</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Domains</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</form>
