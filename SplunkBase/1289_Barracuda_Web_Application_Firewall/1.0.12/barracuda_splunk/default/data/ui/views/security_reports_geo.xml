<form version="1.1">
  <label>Geolocation of Attacks</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="WF_search"></search>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <map>
        <title>Geolocation of Attacks</title>
        <search>
          <query>sourcetype="firewall" Attack_Description != NULL| where unit_name = "$unit_name$" | search client_ip!=192.168* client_ip!=0.0.* client_ip!=10.* | stats count as _geo_count by client_ip | geoip client_ip</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="mapping.type">marker</option>
      </map>
    </panel>
    <panel>
      <chart>
        <title>Top Attacking Countries</title>
        <search>
          <query>sourcetype="firewall" Attack_Description != NULL | where unit_name = "$unit_name$" | stats count as _geo_count by client_ip | geoip client_ip | search client_ip_country_name != NULL | stats count by client_ip_country_name | sort - count | head 10</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</form>
