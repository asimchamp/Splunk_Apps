<form version="1.1">
  <label>Audit Reports</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="AUDIT_search"></search>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>RBA Activity - Successful Logins</title>
        <search>
          <query>sourcetype="audit" Transaction_Type ="LOGIN"|where unit_name = "$unit_name$"|timechart count BY Admin_Name</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Successful Logins</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>RBA Activity - Unsuccessful Logins</title>
        <search>
          <query>sourcetype="audit" Transaction_Type ="UNSUCCESSFUL_LOGIN" |where unit_name = "$unit_name$"|timechart count BY Admin_Name</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Unsuccessful Logins</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Audited Transaction Types</title>
        <search>
          <query>sourcetype="audit" Transaction_Type != NULL Transaction_Type != 0|where unit_name = "$unit_name$"| timechart count by Transaction_Type</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Transactions</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <event>
        <title>Audit Logs</title>
        <search>
          <query>sourcetype="audit" | where unit_name = "$unit_name$"| table _time, login_ip, Admin_Name, client_type, login_ip, Transaction_Type, change_type, object_type, object_name, variable | rename _time as Time | convert timeformat="%m/%d/%Y %l:%M:%S %p" ctime(Time) | rename login_ip as "Login IP" | Rename Admin_Name as "Admin" | rename client_type as "Client Type" | rename change_type as "Change Type" | rename object_type as "Object Type" | rename object_name as "Object Name" | rename variable as Variable</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="list.drilldown">none</option>
      </event>
    </panel>
  </row>
</form>
