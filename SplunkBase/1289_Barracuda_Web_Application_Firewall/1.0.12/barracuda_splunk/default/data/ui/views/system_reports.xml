<form version="1.1">
  <label>System Reports</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="SYS_search"></search>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>System Log Modules</title>
        <search>
          <query>sourcetype="system" | where unit_name = "$unit_name$" | timechart count BY Module</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Events</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>System Log Severity</title>
        <search>
          <query>sourcetype="system" | where unit_name = "$unit_name$" | lookup sev_level_lookup severity_detail OUTPUT Severity | where Severity != "NULL" | timechart count BY Severity</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Events</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <event>
        <title>System Logs</title>
        <search>
          <query>sourcetype="system" | where unit_name = "$unit_name$"| lookup sev_level_lookup severity_detail OUTPUT Severity | table _time, Module, Severity, event_id, syslog_detail | rename _time as Time | convert timeformat="%m/%d/%Y %l:%M:%S %p" ctime(Time) | rename syslog_detail As Message | Rename event_id As "Event ID"</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="list.drilldown">none</option>
      </event>
    </panel>
  </row>
</form>
