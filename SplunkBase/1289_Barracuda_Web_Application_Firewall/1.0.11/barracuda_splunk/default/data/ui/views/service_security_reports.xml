<form>
  <label>Attacks Over Services</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="WF_search"></search>
    </input>
    <input type="dropdown" token="service_setting" searchWhenChanged="true">
      <label>Service:</label>
      <fieldForLabel>ip_port</fieldForLabel>
      <fieldForValue>ip_port</fieldForValue>
      <search>
        <query>sourcetype="firewall" |search unit_name = "$unit_name$"| eval ip_port = app_ip +":"+ app_port | chart count over ip_port</query>
      </search>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Attacks Over Service - Count</title>
        <search>
          <query>sourcetype="firewall" Attack_Description != "NULL"| where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$" |timechart count</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">line</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Type of Attacks</title>
        <search>
          <query>sourcetype="firewall" Attack_Description != "NULL" | where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$" |timechart count BY Attack_Description</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Attacks Over URLs</title>
        <search>
          <query>sourcetype="firewall" Attack_Description != "NULL" | where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$" |timechart count BY URL</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text">Response Time (milliseconds)</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</form>
