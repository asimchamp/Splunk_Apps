<form>
  <label>Service Traffic Reports</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="AUDIT_search"></search>
    </input>
    <input type="dropdown" token="service_setting">
      <label>Service:</label>
      <fieldForLabel>ip_port</fieldForLabel>
      <fieldForValue>ip_port</fieldForValue>
      <search>
        <query>sourcetype="access" |search unit_name = "$unit_name$"| eval ip_port = app_ip +":"+ app_port | chart count over ip_port</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Requests Over Service</title>
        <search>
          <query>sourcetype="access"| where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$" |timechart count</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Service</option>
        <option name="charting.axisTitleY.text"># of Requests</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Requests Over URLs</title>
        <search>
          <query>sourcetype="access" | where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$" |timechart useother=false count BY URL</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">URL</option>
        <option name="charting.axisTitleY.text"># of Requests</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Service Performance</title>
        <search>
          <query>sourcetype="access" | where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$"| timechart min(time_taken),avg(time_taken),max(time_taken)| Rename avg(time_taken) AS "Avg Response Time"|Rename min(time_taken) AS "Min Response Time"| Rename max(time_taken) AS "Max Response Time"</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Service</option>
        <option name="charting.axisTitleY.text">Response Time (ms)</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</form>
