<form>
  <label>Page Attack Summary</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="unit_name" searchWhenChanged="true">
      <label>Unit Name:</label>
      <fieldForLabel>unit_name</fieldForLabel>
      <fieldForValue>unit_name</fieldForValue>
      <search ref="WF_search"></search>
    </input>
    <input type="dropdown" token="service_setting">
      <label>Service:</label>
      <fieldForLabel>ip_port</fieldForLabel>
      <fieldForValue>ip_port</fieldForValue>
      <search>
        <query>sourcetype="firewall" |search unit_name = "$unit_name$"| eval ip_port = app_ip +":"+ app_port| chart count over ip_port</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="text" token="num_pages" searchWhenChanged="true">
      <label>No. of Pages in the Website</label>
      <default>20</default>
    </input>
    <input type="time" token="timeRange">
      <label></label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>Percentage of Pages Attacked</title>
        <search>
          <query>sourcetype="firewall" | where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$"| timechart dc(URL) as "num_page" | eval Percentage = ((num_page/$num_pages$)*100) | fields - num_page</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text">% Attacked</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Pages Attacked</title>
        <search>
          <query>sourcetype="firewall" | where unit_name = "$unit_name$" | eval ip_port = app_ip +":"+ app_port | where ip_port = "$ip_port$"|timechart count BY URL</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text"># of Attacks</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
</form>
