<!--SplunkforCheckpoint - submitted by Simon O'Brien - sobrien@splunk.com--><form stylesheet="single_trend.css,font_style.css">
  <label>System log Messages</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="time_display" searchWhenChanged="true">
      <label>Time to display:</label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="index_tok" searchWhenChanged="true">
      <label>Select an index:</label>
      <prefix>index="</prefix>
      <suffix>"</suffix>
      <!-- Define the default value -->
      <default>main</default>
      <!-- Hard-code the choice for "All" -->
      <!-- Define the other choices with a populating search -->
      <search>
        <query>| eventcount summarize=false index=* | dedup index | fields index</query>
      </search>
      <fieldForLabel>index</fieldForLabel>
      <fieldForValue>index</fieldForValue>
    </input>
    <input type="dropdown" token="sourcetype_tok" searchWhenChanged="true">
      <label>Select a sourcetype:</label>
      <prefix>sourcetype="</prefix>
      <suffix>"</suffix>
      <!-- Define the default value -->
      <default>qos_syslog</default>
      <!-- Hard-code the choice for "All" -->
      <!-- Define the other choices with a populating search -->
      <search>
        <query>|metadata type=sourcetypes index=*  | table sourcetype</query>
      </search>
      <fieldForLabel>sourcetype</fieldForLabel>
      <fieldForValue>sourcetype</fieldForValue>
    </input>
    <input type="dropdown" token="orig" searchWhenChanged="true">
      <label>Select a host</label>
      <prefix>host="</prefix>
      <suffix>"</suffix>
      <choice value="*">All</choice>
      <search>
        <query>$index_tok$ $sourcetype_tok$ | dedup host | table host</query>
      </search>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <default>*</default>
    </input>
  </fieldset>
    <row><html><div><br/>Not able to see any logs ! Need help ? <a href="/app/CheckPointAnalyticsAppbyQOS/Help">click here</a></div> </html></row>
  <row>
    <panel>
      <title>Total failed login attempts</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ "FAILED LOGIN" OR "HTTP login denied" OR "failed password" | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="colorBy">trend</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
    <panel>
      <title>Total number of time firewall rebooted</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$  restart "syslogd" | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Last 10 commands by user</title>
      <table>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$  "processing" commands_run != "show*" | table commands_user, login_time,commands_run | rename commands_user AS User , login_time AS Time , commands_run AS Commands | head 10</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Last 5 success login attempts</title>
      <table>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ "Accepted password" OR "HTTP login" OR "logged in"  |eval user_ip=if(isnotnull(user_ip),user_ip,"Null")|eval user=case(isnotnull(http_user),http_user,isnotnull(clish_user),clish_user,isnotnull(sshd_user1),sshd_user1,isnotnull(sshd_user2),sshd_user2)|table user,user_ip, login_time , device | head 5</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </table>
    </panel>
    <panel>
      <title>Last 5 failed login attempts</title>
      <table>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ "FAILED LOGIN" OR "HTTP login denied" OR "failed password" |eval user_ip=if(isnotnull(user_ip),user_ip,"Null")|eval user=case(isnotnull(http_user),http_user,isnotnull(clish_user),clish_user,isnotnull(sshd_user1) AND sshd_user1 != "invalid",sshd_user1,isnotnull(sshd_user2) AND sshd_user2 != "invalid",sshd_user2,isnotnull(invalid_user1),invalid_user1,isnotnull(invalid_user2),invalid_user2)|table user,user_ip, login_time , device | head 5</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Last 5 received kernel alert logs</title>
      <table>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ |dedup kernel_alert| table kernel_alert | head 5</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </table>
    </panel>
  </row>
</form>