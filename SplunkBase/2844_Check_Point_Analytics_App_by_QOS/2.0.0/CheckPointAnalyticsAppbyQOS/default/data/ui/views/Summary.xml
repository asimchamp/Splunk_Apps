<!--SplunkforCheckpoint - submitted by Simon O'Brien - sobrien@splunk.com--><form stylesheet="single_trend.css,font_style.css">
  <label>Summary</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="time_display" searchWhenChanged="true">
      <label>Time to display:</label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="index_tok" searchWhenChanged="true">
      <label>Select an index:</label>
      <prefix>index="</prefix>
      <suffix>"</suffix>
      <!-- Define the default value -->
      <default>main</default>
      <!-- Hard-code the choice for "All" -->
      <!-- Define the other choices with a populating search -->
      <search>
        <query>| eventcount summarize=false index=* | dedup index | fields index</query>
      </search>
      <fieldForLabel>index</fieldForLabel>
      <fieldForValue>index</fieldForValue>
    </input>
    <input type="dropdown" token="sourcetype_tok" searchWhenChanged="true">
      <label>Select a sourcetype:</label>
      <prefix>sourcetype="</prefix>
      <suffix>"</suffix>
      <!-- Define the default value -->
      <default>opsec</default>
      <!-- Hard-code the choice for "All" -->
      <!-- Define the other choices with a populating search -->
      <search>
        <query>|metadata type=sourcetypes index=*  | table sourcetype</query>
      </search>
      <fieldForLabel>sourcetype</fieldForLabel>
      <fieldForValue>sourcetype</fieldForValue>
    </input>
    <input type="dropdown" token="orig" searchWhenChanged="true">
      <label>Firewall Address</label>
      <prefix>orig="</prefix>
      <suffix>"</suffix>
      <choice value="*">All</choice>
      <search>
        <query>$index_tok$ $sourcetype_tok$ | dedup orig | table orig</query>
      </search>
      <fieldForLabel>orig</fieldForLabel>
      <fieldForValue>orig</fieldForValue>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Total Packets dropped by Firewall</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$  product="VPN-1 &amp; FireWall-1" action=blocked OR action=dropped OR vendor_action=drop OR vendor_action=block| timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <title>Connections dropped by App and URL Filtering blade</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$  (product="Application Control" OR product="URL Filtering" ) vendor_action="block" OR action="dropped" OR action="blocked" OR vendor_action="drop" | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">percent</option>
        <option name="colorBy">trend</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Number of reporting firewalls</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$  $orig$ | stats dc(orig)</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x8B0A50","0xd93f3c"]</option>
        <option name="rangeValues">[200]</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="trendInterval">auto</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
    <panel>
      <title>Internal Unique Source IP Addresses</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$| where (like(src_ip,"192.168.%.%") OR like(src_ip,"172.16.%.%") OR like(src_ip,"10.%.%.%")) | dedup src_ip  | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
    <panel>
      <title>External Unique Source IP Addresses</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ | where NOT (like(src_ip,"192.168.%.%") OR like(src_ip,"172.16.%.%") OR like(src_ip,"10.%.%.%")) | dedup src_ip  | timechart  count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Blocked Vs Detect Trend</title>
      <chart>
        <search>
          <query>$index_tok$ sourcetype="opsec:smartdefense" $orig$ (action=blocked OR action=dropped OR action=monitor) | timechart count by action usenull=f useother=f</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">area</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.axisTitleY.text">Count</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>External machines scanning the network and found open ports</title>
      <table>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$  action=* | where NOT (cidrmatch("192.168.0.0/16",src_ip) OR cidrmatch("172.16.0.0/12",src_ip) OR cidrmatch("10.0.0.0/8",src_ip)) | stats dc(dest_port) as "# of Ports Scanned" by src_ip,dest_ip,action | eventstats count by src_ip,dest_ip  | where '# of Ports Scanned' &gt; 10 | fields - count action</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.inspectSearch.visible">0</option>
        <option name="link.openPivot.visible">0</option>
        <option name="link.openSearch.visible">0</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Attacks prevented by IPS</title>
      <single>
        <search>
          <query>$index_tok$ sourcetype="opsec:smartdefense"  $orig$ action=blocked OR action=dropped | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
    <panel>
      <title>Attacks Detected but not blocked by IPS</title>
      <single>
        <search>
          <query>$index_tok$ sourcetype="opsec:smartdefense"  $orig$  action=monitor | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Unique destination ports access from outside</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ | where NOT (like(src_ip,"192.168.%.%") OR like(src_ip,"172.16.%.%") OR like(src_ip,"10.%.%.%")) | dedup dest_port | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </single>
    </panel>
    <panel>
      <title>Unique destination ports access from Inside</title>
      <single>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ | where (like(src_ip,"192.168.%.%") OR like(src_ip,"172.16.%.%") OR like(src_ip,"10.%.%.%")) | dedup dest_port  | timechart count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="link.openSearch.visible">false</option>
        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
