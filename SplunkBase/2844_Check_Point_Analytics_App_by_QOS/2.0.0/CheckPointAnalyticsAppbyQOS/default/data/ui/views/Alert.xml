  <row>
    <panel>
      <title>destination ports for source IP address $sourcetype$ and destination IP address $destip$</title>
      <table id="detail" depends="$sourcetype$, $destip$">
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ | search dest_port!=80 dest_port!=443 src_ip=$sourcetype$ dest_ip=$destip$ | dedup dest_port |sort - dest_port | table dest_port</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.inspectSearch.visible">0</option>
        <option name="link.openPivot.visible">0</option>
        <option name="link.openSearch.visible">0</option>
      </table>
    </panel>
  </row>
</form>