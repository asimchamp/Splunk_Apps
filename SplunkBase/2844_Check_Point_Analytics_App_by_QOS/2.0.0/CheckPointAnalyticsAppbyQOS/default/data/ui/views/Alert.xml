        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </table>
    </panel>
    <panel>
      <title>Open ports found by Ports scanning</title>
      <table id="master1">
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$ action=* | where NOT (cidrmatch("192.168.0.0/16",src_ip) OR cidrmatch("172.16.0.0/12",src_ip) OR cidrmatch("10.0.0.0/8",src_ip)) | stats dc(dest_port) as "# of Ports Scanned" by src_ip,dest_ip,action | eventstats count by src_ip,dest_ip | where count = 2 | where '# of Ports Scanned' &gt; 10 |rename src_ip AS "Source IP",dest_ip AS "Destination IP"| fields - action , count</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <!-- Set the type of of drilldown, since we will always consume the same field, use row-->
        <drilldown>
          <!-- Use set to specify the new token to be created.
                      Use any token from the page or from the click event to produce the value needed. -->
          <set token="sourcetype">$row.Source IP$</set>
          <set token="destip">$row.Destination IP$</set>
          <!-- If we also set the form.sourcetype the input will get updated too -->
