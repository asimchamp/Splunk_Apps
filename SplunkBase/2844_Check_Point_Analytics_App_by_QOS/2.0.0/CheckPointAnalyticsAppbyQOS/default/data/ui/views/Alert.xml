        <option name="link.openPivot.visible">false</option>
        <option name="link.inspectSearch.visible">false</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Last received 5 critical cluster info</title>
      <table>
        <search>
          <query>$index_tok$ $sourcetype_tok$ $orig$  cluster_info=*down* |dedup cluster_info|table time,cluster_info</query>
          <earliest>$time_display.earliest$</earliest>
          <latest>$time_display.latest$</latest>
        </search>
        <option name="link.inspectSearch.visible">0</option>
        <option name="link.openPivot.visible">0</option>
