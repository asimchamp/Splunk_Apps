  </row>
  <row>
    <panel>
      <title>App_risk trend for yesterday</title>
      <chart>
        <search>
          <query>$index_tok$ $sourcetype_tok$  (product="Application Control" OR product="URL Filtering" ) $orig$  | timechart count by app_risk usenull=f useother=f</query>
          <earliest>-1d@d</earliest>
