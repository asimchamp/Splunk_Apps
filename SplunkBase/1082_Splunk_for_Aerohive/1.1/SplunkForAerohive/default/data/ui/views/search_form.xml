<form>
  <label>Form search</label>
  <searchTemplate>index=aerohive "$string$" </searchTemplate>
  
   <fieldset>
      <input type="text" token="string">
      <label>Enter the string to search</label>
    </input>
  
    <input type="time">
      <default>Last 60 minutes</default>
    </input>
     
  </fieldset>
     
  <row>
      <event>
            <title>Results</title>
            <option name="count">50</option>
      </event>
  </row>
  
</form>