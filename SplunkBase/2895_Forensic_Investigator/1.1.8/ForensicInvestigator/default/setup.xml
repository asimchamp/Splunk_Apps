<setup>
   <block title="ForensicInvestigator Setup Page">
  </block>

  <block title="Enable your views"
         endpoint="forensicinvestigator/conf" entity="setupentity">

    <input field="MIR">
      <label>MIR evidence dashboards</label>
      <type>bool</type>
    </input>

    <text>&lt;b&gt;** Reminder: Make sure you restart splunk to see the dashboard changes take effect **&lt;/b&gt;</text>

  </block>

   <block title="VirusTotal Setup" endpoint="forensicinvestigator/conf" entity="setupentity">
       <input field="vt_api_key">
           <label>VirusTotal API Key</label>
           <type>text</type>
       </input>
   </block>

   <block title="Proxy Setup" endpoint="forensicinvestigator/conf" entity="setupentity">
	   <input field="proxy_enabled">
           <label>Proxy enabled</label>
           <type>bool</type>
	   </input>
	   <text>
      &lt;i&gt;Use format: http(s)://IP_or_FQDN:Port.&lt;/i&gt;
       </text>
       <input field="http_proxy">
           <label>HTTP Proxy</label>
           <type>text</type>
       </input>
       <input field="https_proxy">
           <label>HTTPS Proxy</label>
           <type>text</type>
       </input>	   
   </block>

</setup>



