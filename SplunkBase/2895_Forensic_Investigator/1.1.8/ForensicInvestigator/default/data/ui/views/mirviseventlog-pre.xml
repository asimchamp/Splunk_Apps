<form stylesheet="custom.css">
  <label>Eventlog - Visualization</label>
  <!-- Add time range picker -->
  <fieldset submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="time" token="time1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>0</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Wildcard</label>
      <default>*</default>
    </input>
    <input type="text" token="host" searchWhenChanged="true">
      <label>Host</label>
      <default>*</default>
    </input>
    <input type="text" token="logtype" searchWhenChanged="true">
      <label>Log Type</label>
      <default>*</default>
    </input>
    <input type="text" token="Level" searchWhenChanged="true">
      <label>Level</label>
      <default>*</default>
    </input>
    <input type="text" token="EventID" searchWhenChanged="true">
      <label>Event ID</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Top Hosts</title>
        <search>
          <query>eventtype=mireventlog sourcetype=csv $wild$ host=$host$ logtype=$logtype$ Level=$Level$ "Event ID"=$EventID$ | top host | rename host as Host, count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Log Type</title>
        <search>
          <query>eventtype=mireventlog sourcetype=csv $wild$ host=$host$ logtype=$logtype$ Level=$Level$ "Event ID"=$EventID$ | top logtype | rename logtype AS "Log Type", count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top Level</title>
        <search>
          <query>eventtype=mireventlog sourcetype=csv $wild$ host=$host$ logtype=$logtype$ Level=$Level$ "Event ID"=$EventID$ | top Level | rename , count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top Event ID</title>
        <search>
          <query>eventtype=mireventlog sourcetype=csv $wild$ host=$host$ logtype=$logtype$ Level=$Level$ "Event ID"=$EventID$ | top "Event ID" | rename count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Top Extracted Source</title>
        <search>
          <query>eventtype=mireventlog sourcetype=csv $wild$ host=$host$ logtype=$logtype$ Level=$Level$ "Event ID"=$EventID$ | top extracted_Source | rename extracted_Source as "Extracted Source", count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top Task Category</title>
        <search>
          <query>eventtype=mireventlog sourcetype=csv $wild$ host=$host$ logtype=$logtype$ Level=$Level$ "Event ID"=$EventID$ | top "Task Category" | rename count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
  </row>
</form>