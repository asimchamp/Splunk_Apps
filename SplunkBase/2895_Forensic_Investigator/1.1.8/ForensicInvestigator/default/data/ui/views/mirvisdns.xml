<form stylesheet="custom.css">
  <label>DNS - Visualization</label>
  <fieldset autoRun="true">
    <input type="time" token="time1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Wildcard</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="hostname" searchWhenChanged="true">
      <label>Host Name</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="recordtype" searchWhenChanged="true">
      <label>Record Type</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="flags" searchWhenChanged="true">
      <label>Flags</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="recordname" searchWhenChanged="true">
      <label>Record Name</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Top RecordTypes</title>
        <search>
          <query>eventtype=mir sourcetype="w32network-dns" $wild$ host=$hostname$ DnsEntryItem.RecordType=$recordtype$ DnsEntryItem.Flags=$flags$ DnsEntryItem.RecordName=$recordname$ | top limit=0 DnsEntryItem.RecordType</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top Flags</title>
        <search>
          <query>eventtype=mir sourcetype="w32network-dns" $wild$ host=$hostname$ DnsEntryItem.RecordType=$recordtype$ DnsEntryItem.Flags=$flags$ DnsEntryItem.RecordName=$recordname$ | top limit=0 DnsEntryItem.Flags</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Rare Hosts</title>
        <search>
          <query>eventtype=mir sourcetype="w32network-dns" $wild$ host=$hostname$ DnsEntryItem.RecordType=$recordtype$ DnsEntryItem.Flags=$flags$ DnsEntryItem.RecordName=$recordname$ | rare limit=0 DnsEntryItem.RecordData.Host</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Rare Record Names</title>
        <search>
          <query>eventtype=mir sourcetype="w32network-dns" $wild$ host=$hostname$ DnsEntryItem.RecordType=$recordtype$ DnsEntryItem.Flags=$flags$ DnsEntryItem.RecordName=$recordname$ | rare limit=0 DnsEntryItem.RecordName, DnsEntryItem.RecordData.IPv4Address</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Rare IP Addresses</title>
        <search>
          <query>eventtype=mir sourcetype="w32network-dns" $wild$ host=$hostname$ DnsEntryItem.RecordType=$recordtype$ DnsEntryItem.Flags=$flags$ DnsEntryItem.RecordName=$recordname$ | rare limit=0 DnsEntryItem.RecordData.IPv4Address, DnsEntryItem.RecordName</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>