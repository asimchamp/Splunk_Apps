<form stylesheet="custom.css">
  <label>Port Scanner</label>
  <searchTemplate>| script scanner __EXECUTE__ -t "$hosts$" -p "$ports$"</searchTemplate>
  <description>Enter hosts and ports below (comma separated--no spaces):</description>
  <!-- Add time range picker -->
  <fieldset submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="hosts">
      <label>Hosts</label>
      <suffix></suffix>
    </input>
    <input type="text" token="ports">
      <label>Ports</label>
      <suffix></suffix>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search base="global">
          <query>table Answer</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>
</form>