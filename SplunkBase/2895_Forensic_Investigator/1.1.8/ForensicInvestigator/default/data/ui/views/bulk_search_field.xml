<form stylesheet="custom.css">
  <label>Bulk Search - Field</label>
  <description>This page allows a bulk search</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True">
    <input type="time" searchWhenChanged="true">
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <!-- Add Wildcard Filter -->
    <input type="text" token="indexname">
      <label>Index to search</label>
      <default>*</default>
    </input>
    <input type="text" token="searchlist">
      <label>Search list (copy and paste)</label>
    </input>
    <input type="text" token="fieldname">
      <label>Field Name (ex:  src_ip)</label>
    </input>
  </fieldset>
  <row>
    <panel>
      <event>
        <title>Searching:  Index=$indexname$ and field name=$fieldname$</title>
        <search>
          <query>index=$indexname$ [| localop | stats count | eval entry="$searchlist$" | rex field=entry "(?&lt;"$fieldname$"&gt;.*?)(\r|\s|$)" max_match=0 | table "$fieldname$" | format | return $search]</query>
        </search>
        <option name="count">10</option>
        <option name="list.drilldown">full</option>
        <option name="list.wrap">1</option>
        <option name="maxLines">5</option>
        <option name="raw.drilldown">full</option>
        <option name="rowNumbers">0</option>
        <option name="table.drilldown">all</option>
        <option name="table.wrap">1</option>
        <option name="type">list</option>
        <fields>[]</fields>
      </event>
    </panel>
  </row>
</form>

