<form stylesheet="custom.css">
  <label>DNS Resolver</label>
  <searchTemplate>| script dnsresolve __EXECUTE__ "$input$"</searchTemplate>
      <description>Enter the hostname or IP below</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="input" searchWhenChanged="true">
      <label>Hostname or IP:</label>
      <suffix/>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Result</title>
        <searchPostProcess>table answer | rename answer as Answer</searchPostProcess>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>
</form>
