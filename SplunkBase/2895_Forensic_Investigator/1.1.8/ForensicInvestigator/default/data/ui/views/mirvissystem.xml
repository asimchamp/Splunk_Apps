          <query>eventtype=mir sourcetype=w32system $wild$ SystemInfoItem.hostname="$hostname$" SystemInfoItem.MAC="$MAC$" SystemInfoItem.OS="$OS$" SystemInfoItem.domain="$domain$" SystemInfoItem.OSbitness="$OSbitness$" | rare limit=100 SystemInfoItem.loggedOnUser by SystemInfoItem.hostname | eval percent = round(percent,2) | rename SystemInfoItem.hostname AS "Host Name", SystemInfoItem.loggedOnUser AS User, count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
