  </row>
  <row>
    <panel>
      <table>
        <title>Rare Drive Configuration</title>
        <search>
          <query>eventtype=mir sourcetype=w32system $wild$ SystemInfoItem.hostname="$hostname$" SystemInfoItem.MAC="$MAC$" SystemInfoItem.OS="$OS$" SystemInfoItem.domain="$domain$" SystemInfoItem.OSbitness="$OSbitness$"| rare limit=100 SystemInfoItem.drives by SystemInfoItem.hostname | eval percent = round(percent,2) | rename SystemInfoItem.hostname AS "Host Name", SystemInfoItem.drives AS Drives, count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Rare Logged in User</title>
        <search>
          <query>eventtype=mir sourcetype=w32system $wild$ SystemInfoItem.hostname="$hostname$" SystemInfoItem.MAC="$MAC$" SystemInfoItem.OS="$OS$" SystemInfoItem.domain="$domain$" SystemInfoItem.OSbitness="$OSbitness$" | rare limit=100 SystemInfoItem.user by SystemInfoItem.hostname | eval percent = round(percent,2) | rename SystemInfoItem.hostname AS "Host Name", SystemInfoItem.user AS User, count AS Count, percent AS Percent</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
