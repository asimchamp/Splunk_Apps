<form stylesheet="custom.css">
  <label>URL Unshortener</label>
  <searchTemplate>| script unshortener __EXECUTE__ "$input$"</searchTemplate>
  <description>Enter the URL below - Ex: goo.gl/IGL1lE (Big thanks to unshorten.me for the API)</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="input" searchWhenChanged="true">
      <label>URL:</label>
      <suffix></suffix>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search base="global">
          <query>table Answer</query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>
</form>
