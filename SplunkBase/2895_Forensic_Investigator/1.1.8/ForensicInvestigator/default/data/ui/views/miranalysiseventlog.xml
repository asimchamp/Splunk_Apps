<form stylesheet="custom.css">
  <label>Eventlog - Analysis</label>
  <!-- Add time range picker -->
  <fieldset submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="time" token="time1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>0</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Wildcard</label>
      <default>*</default>
    </input>
    <input type="text" token="host" searchWhenChanged="true">
      <label>Host</label>
      <default>*</default>
    </input>
    <input type="text" token="log" searchWhenChanged="true">
      <label>Log</label>
      <default>*</default>
    </input>
    <input type="text" token="source" searchWhenChanged="true">
      <label>Source</label>
      <default>*</default>
    </input>
    <input type="text" token="user" searchWhenChanged="true">
      <label>User</label>
      <default>*</default>
    </input>
    <input type="text" token="EID" searchWhenChanged="true">
      <label>Event ID</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table id="customWidthMessage">
        <title>Events</title>
        <search>
          <query>eventtype=mir sourcetype=w32eventlogs $wild$ EventLogItem.machine=$host$ EventLogItem.log=$log$ EventLogItem.source=$source$ EventLogItem.user=$user$ EventLogItem.EID=$EID$ | table  EventLogItem.machine, EventLogItem.log, EventLogItem.source, EventLogItem.user, EventLogItem.EID, EventLogItem.type, EventLogItem.ExecutionProcessId, ServiceFileName, EventLogItem.genTime, EventLogItem.message | rename EventLogItem.ExecutionProcessId AS "Process ID", EventLogItem.message AS Message</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="list.drilldown">full</option>
        <option name="list.wrap">1</option>
        <option name="maxLines">5</option>
        <option name="raw.drilldown">full</option>
        <option name="table.drilldown">all</option>
        <option name="table.wrap">1</option>
        <option name="type">list</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>