<form stylesheet="custom.css">
  <label>User Account - Visualization</label>
  <fieldset autoRun="true">
    <input type="time" token="time1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Wildcard</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="hostname" searchWhenChanged="true">
      <label>Host Name</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="securitytype" searchWhenChanged="true">
      <label>Security Type</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="username" searchWhenChanged="true">
      <label>Username</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Security Type Stats</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ | top limit=0 UserItem.SecurityType</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Rare Usernames</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ | rare limit=0 UserItem.Username</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Rare Fullnames</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ | rare limit=0 UserItem.fullname</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Rare Groups</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ | rare limit=100 UserItem.grouplist.groupname</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Rare User Descriptions</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ | rare limit=0 UserItem.description</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Lockedout Users</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ UserItem.lockedout=true | table UserItem.SecurityType, UserItem.Username, UserItem.fullname, UserItem.lockedout, UserItem.disabled, UserItem.passwordrequired, UserItem.LastLogin, UserItem{@created}, UserItem.grouplist.groupname, UserItem.description</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">row</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Users Without Required Passwords</title>
        <search>
          <query>eventtype=mir sourcetype=w32useraccounts $wild$ host=$hostname$ UserItem.SecurityType=$securitytype$ UserItem.Username=$username$ UserItem.passwordrequired=false | table UserItem.SecurityType, UserItem.Username, UserItem.fullname, UserItem.lockedout, UserItem.disabled, UserItem.passwordrequired, UserItem.LastLogin, UserItem{@created}, UserItem.grouplist.groupname, UserItem.description</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="drilldown">cell</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>