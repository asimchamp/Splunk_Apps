<form stylesheet="custom.css">
  <label>IP Converter</label>
  <searchTemplate>| script ipconverter __EXECUTE__ "$input$" "$format$"</searchTemplate>
      <description>Enter IP address information below:</description>
  <!-- Add time range picker -->
  <fieldset submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="input">
      <label>Input</label>
      <suffix/>
    </input>
    <input type="dropdown" token="format">
      <label>Format of Input</label>
      <default>IPAddress</default>
      <choice value="decode">IPAddress</choice>
      <choice value="encode">Hex</choice>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Result</title>
        <searchPostProcess>table answer | rename answer as Answer</searchPostProcess>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>
</form>