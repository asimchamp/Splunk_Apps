<form stylesheet="custom.css">
  <label>HEX Converter</label>
  <searchTemplate>| script hex __EXECUTE__ "$input$" "$operation$"</searchTemplate>
      <description>HEX encode and decode data below:</description>
  <!-- Add time range picker -->
  <fieldset submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="input">
      <label>Input</label>
      <suffix/>
    </input>
    <input type="dropdown" token="operation">
      <label>Operation</label>
      <default>Decode</default>
      <choice value="decode">Decode</choice>
      <choice value="encode">Encode</choice>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Result</title>
        <searchPostProcess>table answer | rename answer as Answer</searchPostProcess>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>
</form>
