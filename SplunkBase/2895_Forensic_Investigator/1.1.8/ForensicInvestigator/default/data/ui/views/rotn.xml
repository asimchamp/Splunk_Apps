<form stylesheet="custom.css">
  <label>ROT(n) Converter</label>
  <searchTemplate>| script rotn __EXECUTE__ "$input$" "$number$"</searchTemplate>
      <description>ROT(n) shift data below:</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="input" searchWhenChanged="true">
      <label>Input</label>
      <suffix/>
    </input>
    <input type="text" token="number">
      <label>n (Logical range: 1-25)</label>
      <default>13</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Result</title>
        <searchPostProcess>table answer | rename answer as Answer</searchPostProcess>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>
</form>
