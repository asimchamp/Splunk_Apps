<form stylesheet="custom.css">
  <label>Ports - Analysis</label>
  <fieldset autoRun="true">
    <input type="time" token="time1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Wildcard Search</label>
      <default>*</default>
    </input>
    <input type="text" token="host" searchWhenChanged="true">
      <label>Host</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="process" searchWhenChanged="true">
      <label>Process Name</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="pid" searchWhenChanged="true">
      <label>PID</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="path" searchWhenChanged="false">
      <label>Path</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="state" searchWhenChanged="true">
      <label>State</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="localPort" searchWhenChanged="true">
      <label>Local Port</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
    <input type="text" token="remoteIP" searchWhenChanged="true">
      <label>Remote IP</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Raw Data</title>
        <search>
          <query>eventtype=mir sourcetype=w32ports $wild$ host=$host$ PortItem.process=$process$ PortItem.pid=$pid$ PortItem.path=$path$ PortItem.state=$state$ PortItem.localPort=$localPort$ PortItem.remoteIP=$remoteIP$ | table host, PortItem.protocol, PortItem.localIP, PortItem.localPort, PortItem.remoteIP, PortItem.remotePort, PortItem.state, PortItem.pid, PortItem.process, PortItem.path, PortItem{@created}</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">20</option>
      </table>
    </panel>
  </row>
</form>