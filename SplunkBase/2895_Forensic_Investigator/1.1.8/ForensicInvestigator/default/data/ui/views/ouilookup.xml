<form stylesheet="custom.css">
  <label>MAC Address OUI Lookup</label>
  <searchTemplate>| script ouilookup __EXECUTE__ "$input$"</searchTemplate>
      <description>Enter the MAC address below</description>
  <!-- Add time range picker -->
  <fieldset autoRun="True" submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="text" token="input" searchWhenChanged="true">
      <label>MAC Address:</label>
      <suffix/>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Manufacturer</title>
        <searchPostProcess>rex max_match=70 field=answer "(?&lt;MAC&gt;([A-F0-9]){6})&lt;,&gt;(?&lt;Manufacturer&gt;.*)" | table MAC Manufacturer |sort MAC</searchPostProcess>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">70</option>
      </table>
    </panel>
  </row>

</form>
