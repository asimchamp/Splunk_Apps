<form stylesheet="custom.css">
  <label>File - Analysis</label>
  <!-- Add time range picker -->
  <fieldset submitButton="true">
    <!-- Add Wildcard Filter -->
    <input type="time" token="time1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>0</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="text" token="wild" searchWhenChanged="true">
      <label>Wildcard</label>
      <default>*</default>
    </input>
    <input type="text" token="host" searchWhenChanged="true">
      <label>Host</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.FullPath" searchWhenChanged="true">
      <label>Full Path</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.Drive" searchWhenChanged="true">
      <label>Drive</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.FileName" searchWhenChanged="true">
      <label>File Name</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.Created" searchWhenChanged="true">
      <label>Created</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.Modified" searchWhenChanged="true">
      <label>Modified</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.Accessed" searchWhenChanged="true">
      <label>Accessed</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.Changed" searchWhenChanged="true">
      <label>Changed</label>
      <default>*</default>
    </input>
    <input type="text" token="FileItem.FileAttributes" searchWhenChanged="true">
      <label>File Attributes</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Details</title>
        <search>
          <query>eventtype=mir sourcetype=w32files $wild$ host=$host$ FileItem.FullPath=$FileItem.FullPath$ FileItem.Drive=$FileItem.Drive$ FileItem.FileName=$FileItem.FileName$ FileItem.Created=$FileItem.Created$ FileItem.Modified=$FileItem.Modified$ FileItem.Accessed=$FileItem.Accessed$ FileItem.Changed=$FileItem.Changed$ FileItem.FileAttributes=$FileItem.FileAttributes$ | table _time, host, FileItem.FullPath, FileItem.Drive, FileItem.FileName, FileItem.SizeInBytes, FileItem.Created, FileItem.Modified, FileItem.Accessed, FileItem.Changed, FileItem.FileAttributes, FileItem.INode | rename _time AS "Date Pulled", host AS Host, FileItem.FullPath AS "Full Path", FileItem.Drive AS Drive, FileItem.FileName AS "File Name", FileItem.SizeInBytes AS "Size in Bytes", FileItem.Created AS Created, FileItem.Modified AS Modified, FileItem.Accessed AS Accessed, FileItem.Changed AS Changed, FileItem.FileAttributes AS "File Attributes", FileItem.INode AS INode</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>