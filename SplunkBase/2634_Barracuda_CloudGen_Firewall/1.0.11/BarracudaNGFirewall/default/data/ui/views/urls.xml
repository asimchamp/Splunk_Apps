<form version="1.1">
  <label>URL Categories</label>
  <description>Barracuda CloudGen Firewall URL Categories Dashboard: Select a time range and host to begin.</description>
  <fieldset submitButton="false">
    <input type="time" token="timeRange" searchWhenChanged="true">
      <label>Select a time:</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="host" searchWhenChanged="true">
      <label>Host:</label>
      <selectFirstChoice>true</selectFirstChoice>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <search>
        <query>sourcetype="fw_act" | fields host | dedup host | sort host</query>
        <earliest>$timeRange.earliest$</earliest>
        <latest>$timeRange.latest$</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>URL Category Summary (All)</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" | chart count by urlcat</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>URL Category Summary (Blocked Only)</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" info="Block*" | chart count by urlcat</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>URL Category Summary (Allowed Only)</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" info!="Block*" | chart count by urlcat</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Top 10 URL Categories (All)</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" | rename urlcat as "URL Category" | top limit=10 countfield="Hits" percentfield="Percentage" "URL Category" | eval Percentage=round(Percentage, 2) | table "URL Category", Hits, Percentage</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="drilldown">cell</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top 10 URL Categories (Blocked Only)</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" info="Block*" | rename urlcat as "URL Category" | top limit=10 countfield="Hits" percentfield="Percentage" "URL Category" | eval Percentage=round(Percentage, 2) | table "URL Category", Hits, Percentage</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="drilldown">cell</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Top 10 URL Categories (Allowed Only)</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" info!="Block*" | rename urlcat as "URL Category" | top limit=10 countfield="Hits" percentfield="Percentage" "URL Category" | eval Percentage=round(Percentage, 2) | table "URL Category", Hits, Percentage</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <input type="dropdown" token="urlfilter" searchWhenChanged="true">
        <label>Filter:</label>
        <choice value="fwaction=&quot;*&quot;">All</choice>
        <choice value="fwaction=&quot;Block&quot;">Blocked Only</choice>
        <choice value="fwaction!=&quot;Block&quot; fwaction!=&quot;Drop&quot;">Allowed Only</choice>
        <initialValue>fwaction="*"</initialValue>
      </input>
      <chart>
        <title>URL Category Details</title>
        <search>
          <query>host=$host$ sourcetype=fw_act urlcat="*" $urlfilter$ | timechart count by urlcat</query>
          <earliest>$timeRange.earliest$</earliest>
          <latest>$timeRange.latest$</latest>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.drilldown">all</option>
      </chart>
    </panel>
  </row>
</form>
