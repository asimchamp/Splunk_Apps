<form refresh="180" stylesheet="custom.css">
  <label>Incapsula Main View - Normal Traffic</label>
  <fieldset submitButton="true">
    <input type="time" token="time" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="httpreply" searchWhenChanged="true">
      <label>HTTP Replies</label>
      <default>*</default>
      <choice value="*">All</choice>
      <search>
        <query>sourcetype=incapsula | dedup cn1| table cn1</query>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </search>
      <fieldForLabel>httpreply</fieldForLabel>
      <fieldForValue>httpreply</fieldForValue>
    </input>
    <input type="dropdown" token="sites" searchWhenChanged="true">
      <label>Sites</label>
      <choice value="*">All Sites</choice>
      <search>
        <query>sourcetype=incapsula | eval Site=coalesce(sourceServiceName,siteid) | dedup Site | table Site</query>
        <earliest>$time.earliest$</earliest>
        <latest>$time.latest$</latest>
      </search>
      <fieldForLabel>Site</fieldForLabel>
      <fieldForValue>Site</fieldForValue>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Number of Unique Countries</title>
        <search>
          <query>sourcetype=incapsula CEF_Name="$name$" (siteid="$sites$" OR sourceServiceName="$sites$")| stats dc(ccode)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Number Of Attacks</title>
        <search>
          <query>sourcetype=incapsula CEF_Name="$name$" (siteid="$sites$" OR sourceServiceName="$sites$")  | stats count(CEF_Vendor)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Traffic - Unique HTTP Replies</title>
        <search>
          <query>sourcetype=incapsula CEF_Name="$name$" (siteid="$sites$" OR sourceServiceName="$sites$") | stats dc(CEF_Name)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Number of Unique Sources</title>
        <search>
          <query>sourcetype=incapsula CEF_Name="$name$" (siteid="$sites$" OR sourceServiceName="$sites$")  | stats dc(src)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="linkView">search</option>
        <option name="drilldown">none</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Traffic by Countries - Map View</title>
      <map>
        <title>Attacks Sources</title>
        <search>
          <query>sourcetype=incapsula CEF_Name="$name$" (siteid="$sites$" OR sourceServiceName="$sites$") | geostats latfield=cs7 longfield=cs8 count by ccode</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="mapping.data.maxClusters">2</option>
        <option name="mapping.map.center">(35,15)</option>
        <option name="mapping.map.zoom">3</option>
        <option name="mapping.markerLayer.markerMaxSize">80</option>
        <option name="mapping.markerLayer.markerMinSize">20</option>
        <option name="mapping.markerLayer.markerOpacity">0.6</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
        <option name="width">50px</option>
        <option name="height">800px</option>
      </map>
    </panel>
  </row>
</form>